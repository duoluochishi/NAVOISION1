<UserControl
	x:Class="NV.CT.NanoConsole.View.English.CalibrationTemplate"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converter="clr-namespace:NV.CT.UI.Controls.Converter;assembly=NV.CT.UI.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:gif="http://wpfanimatedgif.codeplex.com"
	xmlns:local="clr-namespace:NV.CT.NanoConsole.View.Control"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.Resources>

		<converter:SelfCheckStateConverter x:Key="SelfCheckStateConverter" />
	</UserControl.Resources>
	<Grid>

		<DataGrid
			Margin="0,10,0,10"
			HorizontalAlignment="Stretch"
			VerticalContentAlignment="Center"
			AutoGenerateColumns="False"
			BorderThickness="0"
			CanUserSortColumns="False"
			ColumnHeaderHeight="40"
			GridLinesVisibility="Horizontal"
			HorizontalScrollBarVisibility="Auto"
			IsReadOnly="True"
			ItemsSource="{Binding CalibrationList}"
			RowHeight="40"
			SelectionUnit="Cell"
			VerticalScrollBarVisibility="Auto">
			<DataGrid.Columns>
				<DataGridTextColumn
					Width="30*"
					Binding="{Binding Name}"
					Header="Name" />
				<DataGridTextColumn
					Width="25*"
					Binding="{Binding CreateTime}"
					Header="Create Time" />
				<DataGridTextColumn
					Width="25*"
					Binding="{Binding CurrentTime}"
					Header="Current Time" />
				<DataGridTextColumn
					Width="25*"
					Binding="{Binding ValidDays}"
					Header="Valid days" />
				<DataGridTemplateColumn
					Width="10*"
					Header="State">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Border>
								<Grid>
									<Image
										x:Name="imgState"
										Height="20"
										HorizontalAlignment="Left"
										VerticalAlignment="Center"
										Source="{Binding StatusString, Converter={StaticResource SelfCheckStateConverter}}"
										Visibility="Collapsed" />

									<TextBlock
										x:Name="txtLoading"
										Visibility="Collapsed">
										loading...
									</TextBlock>
								</Grid>
							</Border>

							<DataTemplate.Triggers>
								<DataTrigger
									Binding="{Binding StatusString}"
									Value="Success">
									<Setter TargetName="imgState" Property="Visibility" Value="Visible" />
									<Setter TargetName="txtLoading" Property="Visibility" Value="Collapsed" />
								</DataTrigger>
								<DataTrigger
									Binding="{Binding StatusString}"
									Value="Error">
									<Setter TargetName="imgState" Property="Visibility" Value="Visible" />
									<Setter TargetName="txtLoading" Property="Visibility" Value="Collapsed" />
								</DataTrigger>
								<DataTrigger
									Binding="{Binding StatusString}"
									Value="InProgress">
									<Setter TargetName="imgState" Property="Visibility" Value="Collapsed" />
									<Setter TargetName="txtLoading" Property="Visibility" Value="Visible" />
								</DataTrigger>
							</DataTemplate.Triggers>

						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>
