<UserControl
	x:Class="NV.CT.NanoConsole.View.English.SystemHomeControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:control="clr-namespace:NV.CT.UI.Controls;assembly=NV.CT.UI.Controls"
	xmlns:converter="clr-namespace:NV.CT.UI.Controls.Converter;assembly=NV.CT.UI.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
	xmlns:local="clr-namespace:NV.CT.NanoConsole.View.English"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
	d:DesignHeight="1080"
	d:DesignWidth="1920"
	Background="Black"
	mc:Ignorable="d">
	<UserControl.Resources>
		<Style TargetType="{x:Type Separator}">
			<Setter Property="Height" Value="1" />
			<Setter Property="Margin" Value="0" />
			<Setter Property="Padding" Value="0" />
			<Setter Property="Opacity" Value="0.6" />
		</Style>
		<SolidColorBrush
			x:Key="DataGridLinesBrush"
			Opacity="0.1"
			Color="#979797" />
		<SolidColorBrush x:Key="BorderColor">#16162B</SolidColorBrush>
		<SolidColorBrush
			x:Key="BaseBackgroundColor"
			Opacity="0.3"
			Color="#5a5a89" />
		<Style
			x:Key="BorderBaseStyle"
			TargetType="{x:Type Border}">
			<Setter Property="Background" Value="{DynamicResource BorderColor}" />
			<Setter Property="CornerRadius" Value="10,10,10,10" />
			<Setter Property="BorderBrush" Value="#5a5a89" />
			<Setter Property="BorderThickness" Value="0.5" />
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="{StaticResource BaseBackgroundColor}" />
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style
			x:Key="borderStyle"
			TargetType="Border">
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#5A5A89" />
					<Setter Property="Opacity" Value="0.3" />
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style TargetType="Label">
			<Setter Property="Width" Value="120" />
			<Setter Property="Height" Value="120" />
			<Setter Property="Margin" Value="22" />
			<Setter Property="Background" Value="Transparent" />
		</Style>
		<Style
			x:Key="buttonContextMenu"
			TargetType="ContextMenu">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="ContextMenu">
						<Grid>
							<Path
								HorizontalAlignment="Left"
								Data="M158,0.5 C160.623353,0.5 162.998353,1.56332372 164.717514,3.28248558 C166.436676,5.00164744 167.5,7.37664744 167.5,10 L167.5,10 L167.5,138 C167.5,140.623353 166.436676,142.998353 164.717514,144.717514 C162.998353,146.436676 160.623353,147.5 158,147.5 L158,147.5 L18,147.5 C15.3766474,147.5 13.0016474,146.436676 11.2824856,144.717514 C9.56332372,142.998353 8.5,140.623353 8.5,138 L8.5,138 L8.5,82.8099003 L0.668977477,74 L8.5,65.1900997 L8.5,10 C8.5,7.37664744 9.56332372,5.00164744 11.2824856,3.28248558 C13.0016474,1.56332372 15.3766474,0.5 18,0.5 L18,0.5 Z"
								Fill="#16162B"
								Stroke="#353557"
								StrokeThickness="1.6" />
							<Border
								x:Name="my_border"
								Margin="8,0,2,0"
								Background="Transparent"
								SnapsToDevicePixels="True">
								<ItemsPresenter />
							</Border>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style
			x:Key="buttonContextMenuMenuItem"
			TargetType="MenuItem">
			<Setter Property="Foreground" Value="#D0D0D6" />
			<Setter Property="Height" Value="40" />
			<Setter Property="Padding" Value="0" />
			<Setter Property="Margin" Value="0" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate>
						<Grid
							x:Name="m_item"
							Width="158"
							Height="40"
							Margin="0,0,0,0"
							VerticalAlignment="Center">
							<TextBlock
								x:Name="menu_txt"
								Margin="30,6,0,6"
								VerticalAlignment="Center"
								Text="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}" />
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="true">
								<Setter TargetName="m_item" Property="Background" Value="#2A2A47" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>


	</UserControl.Resources>
	<Grid>
		<Border
			Background="#14142B"
			BorderBrush="#5A5A89"
			BorderThickness="1.4"
			CornerRadius="10"
			Opacity="0.5" />

		<Grid Background="Transparent">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="60" />
				<ColumnDefinition />
				<ColumnDefinition Width="160" />
				<ColumnDefinition Width="105" />
				<ColumnDefinition Width="105" />
				<ColumnDefinition Width="160" />
				<ColumnDefinition />
				<ColumnDefinition Width="60" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="60" />
				<RowDefinition />
				<RowDefinition Height="160" />
				<RowDefinition Height="105" />
				<RowDefinition Height="105" />
				<RowDefinition Height="160" />
				<RowDefinition />
				<RowDefinition Height="60" />
			</Grid.RowDefinitions>
			<Border
				x:Name="nborder"
				Grid.Row="4"
				Grid.Column="1"
				Grid.ColumnSpan="6"
				Background="Transparent"
				BorderBrush="{StaticResource DataGridLinesBrush}"
				BorderThickness="0,1,0,0"
				CornerRadius="0" />
			<Border
				Grid.Row="1"
				Grid.RowSpan="6"
				Grid.Column="4"
				Background="Transparent"
				BorderBrush="{StaticResource DataGridLinesBrush}"
				BorderThickness="1,0,0,0"
				CornerRadius="0" />
		</Grid>
		<Grid
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Background="Transparent">
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<!--  patient browser  -->
			<Border
				Grid.Row="0"
				Grid.Column="0">
				<Label
					Width="230"
					Height="230"
					HorizontalAlignment="Center"
					Background="Transparent"
					Cursor="Hand"
					IsEnabled="True"
					ToolTipService.InitialShowDelay="0">
					<Label.ToolTip>
						<ToolTip
							HorizontalAlignment="Center"
							HorizontalContentAlignment="Center"
							Content="Patient Browser"
							Placement="Center"
							VerticalOffset="100" />
					</Label.ToolTip>
					<Path
						Width="95"
						Height="95"
						Margin="65,65,0,0"
						HorizontalAlignment="Center"
						Data="{StaticResource PatientBrowserIcon}"
						Fill="#5A5A89"
						Opacity="0.7"
						Stretch="Fill" />
					<Label.InputBindings>
						<MouseBinding
							Command="{Binding Commands[PatientBrowser]}"
							MouseAction="LeftClick" />
					</Label.InputBindings>
				</Label>
			</Border>

			<!--  lock  -->
			<Border
				Grid.Row="0"
				Grid.Column="1">
				<Label
					Width="230"
					Height="230"
					HorizontalAlignment="Center"
					Background="Transparent"
					Cursor="Hand"
					IsEnabled="True"
					ToolTipService.InitialShowDelay="0">
					<Label.ToolTip>
						<ToolTip
							HorizontalAlignment="Center"
							HorizontalContentAlignment="Center"
							Content="Lock"
							Placement="Center"
							VerticalOffset="100" />
					</Label.ToolTip>
					<Path
						Width="95"
						Height="95"
						Margin="65,65,0,0"
						HorizontalAlignment="Center"
						Data="{StaticResource LockIcon}"
						Fill="#5A5A89"
						Opacity="0.7"
						Stretch="Fill" />
					<Label.InputBindings>
						<MouseBinding
							Command="{Binding Commands[Lock]}"
							MouseAction="LeftClick" />
					</Label.InputBindings>
				</Label>
			</Border>

			<!--  job viewer  -->
			<Border
				Grid.Row="1"
				Grid.Column="0">
				<Label
					Width="230"
					Height="230"
					HorizontalAlignment="Center"
					Background="Transparent"
					Cursor="Hand"
					IsEnabled="True"
					ToolTipService.InitialShowDelay="0">
					<Label.ToolTip>
						<ToolTip
							HorizontalAlignment="Center"
							HorizontalContentAlignment="Center"
							Content="Job Viewer"
							Placement="Center"
							VerticalOffset="100" />
					</Label.ToolTip>
					<Path
						Width="95"
						Height="95"
						Margin="65,65,0,0"
						HorizontalAlignment="Center"
						Data="{StaticResource JobIcon}"
						Fill="#5A5A89"
						Opacity="0.7"
						Stretch="Fill" />
					<Label.InputBindings>
						<MouseBinding
							Command="{Binding Commands[JobViewer]}"
							MouseAction="LeftClick" />
					</Label.InputBindings>
				</Label>
			</Border>

			<!--  lock shutdown,restart  -->
			<Border
				Grid.Row="1"
				Grid.Column="1">
				<Label
					x:Name="lblRestart"
					Width="230"
					Height="230"
					HorizontalAlignment="Center"
					Background="Transparent"
					Cursor="Hand"
					IsEnabled="True"
					MouseLeftButtonDown="LblRestart_OnMouseLeftButtonDown"
					MouseRightButtonDown="LblRestart_OnMouseRightButtonDown"
					ToolTipService.InitialShowDelay="0">
					<Label.ContextMenu>
						<ContextMenu
							x:Name="popMenu"
							HorizontalOffset="-30"
							Placement="Right"
							VerticalOffset="55">
							<MenuItem
								Name="menuLock"
								HorizontalAlignment="Center"
								VerticalAlignment="Center"
								Command="{Binding Commands[Lock]}"
								FontSize="15"
								Header="Lock"
								Style="{StaticResource buttonContextMenuMenuItem}" />
							<Separator
								Height="1"
								Opacity="0.3" />
							<MenuItem
								Name="menuRestart"
								HorizontalAlignment="Center"
								VerticalAlignment="Center"
								Command="{Binding Commands[Restart]}"
								FontSize="15"
								Header="Restart"
								Style="{StaticResource buttonContextMenuMenuItem}" />
							<Separator
								Height="1"
								Opacity="0.3" />
							<MenuItem
								Name="menuShutdown"
								HorizontalAlignment="Center"
								VerticalAlignment="Center"
								Command="{Binding Commands[Shutdown]}"
								FontSize="15"
								Header="Shutdown"
								Style="{StaticResource buttonContextMenuMenuItem}" />
						</ContextMenu>
					</Label.ContextMenu>
					<Label.ToolTip>
						<ToolTip
							HorizontalAlignment="Center"
							HorizontalContentAlignment="Center"
							Content="Lock,restart,shutdown"
							Placement="Center"
							VerticalOffset="100" />
					</Label.ToolTip>
					<Path
						Width="95"
						Height="95"
						Margin="65,65,0,0"
						HorizontalAlignment="Center"
						Data="{StaticResource ShutdownIcon}"
						Fill="#5A5A89"
						Opacity="0.7"
						Stretch="Fill" />
				</Label>
			</Border>
		</Grid>

	</Grid>
</UserControl>
