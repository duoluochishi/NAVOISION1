<UserControl
	x:Class="NV.CT.NanoConsole.View.English.FrontendFixedItemsControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:SysPermission="clr-namespace:NV.CT.CTS;assembly=NV.CT.CTS"
	xmlns:converter="clr-namespace:NV.CT.UI.Controls.Converter;assembly=NV.CT.UI.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:NV.CT.NanoConsole.View.English"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
	d:DesignHeight="36"
	d:DesignWidth="70"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="35" />
			<ColumnDefinition Width="35" />
		</Grid.ColumnDefinitions>

		<!--  Home主页  -->
		<Button
			Grid.Column="0"
			Background="Transparent"
			BorderBrush="Transparent"					
			Command="{Binding Commands[OpenCommand]}" 
			CommandParameter="Home"
			ToolTip="{x:Static res:LanguageResource.ToolTip_Home}">
			<Path
				Width="20"
				Height="20"
				Data="{StaticResource HomeIcon}"
				Stretch="Fill">
				<Path.Style>
					<Style TargetType="Path">
						<Setter Property="Fill" Value="{StaticResource IconNormalColor}" />
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Fill" Value="{StaticResource IconActiveColor}" />
							</Trigger>
							<DataTrigger
								Binding="{Binding HomeCardActive}"
								Value="true">
								<Setter Property="Fill" Value="{StaticResource IconActiveColor}" />
							</DataTrigger>
							<DataTrigger
								Binding="{Binding HomeCardActive}"
								Value="false">
								<Setter Property="Fill" Value="{StaticResource IconNormalColor}" />
							</DataTrigger>
						</Style.Triggers>
					</Style>
				</Path.Style>
			</Path>

		</Button>

		<!--  病人浏览 Patient Browser  -->
		<Button
			Grid.Column="1"
			Background="Transparent"
			BorderBrush="Transparent" Command="{Binding Commands[OpenCommand]}"
			CommandParameter="PatientBrowser"
			ToolTip="{x:Static res:LanguageResource.ToolTip_PatientBrowser}">
			<Path
				Width="20"
				Height="20"
				Data="{StaticResource HomePatientBrowserIcon}"
				Stretch="Fill">
				<Path.Style>
					<Style TargetType="Path">
						<Setter Property="Fill" Value="{StaticResource IconNormalColor}" />
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Fill" Value="{StaticResource IconActiveColor}" />
							</Trigger>
							<DataTrigger
								Binding="{Binding PatientBrowserCardActive}"
								Value="true">
								<Setter Property="Fill" Value="{StaticResource IconActiveColor}" />
							</DataTrigger>
							<DataTrigger
								Binding="{Binding PatientBrowserCardActive}"
								Value="false">
								<Setter Property="Fill" Value="{StaticResource IconNormalColor}" />
							</DataTrigger>
						</Style.Triggers>
					</Style>
				</Path.Style>
			</Path>

		</Button>

	</Grid>
</UserControl>
