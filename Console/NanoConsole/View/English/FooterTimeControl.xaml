<UserControl
	x:Class="NV.CT.NanoConsole.View.English.FooterTimeControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:NV.CT.NanoConsole.View.English"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="40" d:DesignWidth="90" mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="TextBlockStyle" BasedOn="{StaticResource NanoTextBlockStyle}" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="18" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid Width="90">
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock			
				Style="{StaticResource TextBlockStyle}"
				Text="{Binding LocalCurrentTime}" />
            <TextBlock				
				Style="{StaticResource TextBlockStyle}"
				Text="{Binding LocalCurrentDate}" />
        </StackPanel>
    </Grid>
</UserControl>