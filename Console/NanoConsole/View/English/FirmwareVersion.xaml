<UserControl
	x:Class="NV.CT.NanoConsole.View.English.FirmwareVersion"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converter="clr-namespace:NV.CT.UI.Controls.Converter;assembly=NV.CT.UI.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:gif="http://wpfanimatedgif.codeplex.com"
	xmlns:local="clr-namespace:NV.CT.NanoConsole.View.Control"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.Resources>
		<converter:SelfCheckStateConverter x:Key="SelfCheckStateConverter" />
	</UserControl.Resources>
	<Grid>
		<DataGrid
			Margin="0,10,0,10"
			HorizontalAlignment="Stretch"
			VerticalContentAlignment="Center"
			AutoGenerateColumns="False"
			BorderThickness="0"
			CanUserSortColumns="False"
			ColumnHeaderHeight="40"
			GridLinesVisibility="Horizontal"
			HorizontalScrollBarVisibility="Auto"
			IsReadOnly="True"
			ItemsSource="{Binding VersionList}"
			RowHeight="40"
			SelectionUnit="Cell"
			VerticalScrollBarVisibility="Auto">
			<DataGrid.Columns>
				<DataGridTextColumn
					Width="30*"
					Binding="{Binding TypeName}"
					Header="Firmware Name" />
				<DataGridTextColumn
					Width="20*"
					Binding="{Binding Index}"
					Header="Index" />
				<DataGridTextColumn
					Width="25*"
					Binding="{Binding ReleaseVersion}"
					Header="Release Version" />
				<DataGridTextColumn
					Width="25*"
					Binding="{Binding CurrentVersion}"
					Header="Current Version" />
				<DataGridTemplateColumn
					Width="10*"
					Header="State">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Border>
								<Grid>
									<Image
										x:Name="imgState"
										Height="20"
										HorizontalAlignment="Left"
										VerticalAlignment="Center"
										Source="{Binding StatusString, Converter={StaticResource SelfCheckStateConverter}}"
										Visibility="Collapsed" />
								</Grid>
							</Border>

							<DataTemplate.Triggers>
								<DataTrigger
									Binding="{Binding StatusString}"
									Value="Success">
									<Setter TargetName="imgState" Property="Visibility" Value="Visible" />
								</DataTrigger>
								<DataTrigger
									Binding="{Binding StatusString}"
									Value="Error">
									<Setter TargetName="imgState" Property="Visibility" Value="Visible" />
								</DataTrigger>
							</DataTemplate.Triggers>

						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn
					Width="10*"
					Header="Operate" Visibility="Collapsed">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Image
								x:Name="imgNeedCorrect"
								Height="20"
								HorizontalAlignment="Left"
								VerticalAlignment="Center"
								gif:ImageBehavior.AnimatedSource="pack://application:,,,/NV.CT.UI.Controls;component/Icons/Modify.png"
								Cursor="Hand"
								Visibility="Collapsed" />

							<DataTemplate.Triggers>
								<DataTrigger
									Binding="{Binding NeedCorrect}"
									Value="True">
									<Setter TargetName="imgNeedCorrect" Property="Visibility" Value="Visible" />
								</DataTrigger>
								<DataTrigger
									Binding="{Binding NeedCorrect}"
									Value="False">
									<Setter TargetName="imgNeedCorrect" Property="Visibility" Value="Collapsed" />
								</DataTrigger>
							</DataTemplate.Triggers>

						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>
