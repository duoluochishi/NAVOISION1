<UserControl
	x:Class="NV.CT.NanoConsole.View.English.FooterControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:NV.CT.NanoConsole.View.English"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="40"
	d:DesignWidth="800"
	Background="#16162B"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="700" />
			<ColumnDefinition Width="400" />
			<ColumnDefinition Width="320" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="90" />
		</Grid.ColumnDefinitions>
		<StackPanel
			Grid.Column="0"
			Margin="30,0,0,0"
			HorizontalAlignment="Left"
			Orientation="Horizontal">
			<Image
				Width="200"
				Opacity="0.3"
				Source="pack://application:,,,/NV.CT.UI.Controls;component/Images/Nanovision.png" />
			<TextBlock
				Margin="20,15,0,8"
				HorizontalAlignment="Center"
				FontFamily="Microsoft YaHei"
				FontSize="8"
				Foreground="White"
				Opacity="0.3"
				Text="{Binding ProductInfo.FooterCopyright}" />

		</StackPanel>
		<local:TableControl
			Grid.Column="1" />
		<local:GantryControl
			Grid.Column="2" />
		<local:StatusControl
			Grid.Column="3" />
		<local:FooterTimeControl
			Grid.Column="4" />

	</Grid>
</UserControl>