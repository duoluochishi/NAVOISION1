<UserControl
	x:Class="NV.CT.UI.Controls.Controls.LoadingControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:NV.CT.UI.Controls.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.Resources>
		<Style TargetType="Ellipse">
			<Setter Property="Width" Value="20" />
			<Setter Property="Height" Value="50" />
			<Setter Property="RenderTransformOrigin" Value="0.5, 2" />
			<Setter Property="Fill" Value="White" />
			<Setter Property="Canvas.Left" Value="90" />
			<Setter Property="Canvas.Top" Value="0" />
		</Style>
	</UserControl.Resources>
	<Viewbox>
		<Canvas
			Width="200"
			Height="200"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Loaded="FrameworkElement_OnLoaded"
			RenderTransformOrigin="0.5,0.5"
			Unloaded="FrameworkElement_OnUnloaded">
			<Canvas.RenderTransform>
				<RotateTransform x:Name="SpinnerRotate" Angle="0" />
			</Canvas.RenderTransform>

			<!--  8个背景圆  -->
			<Ellipse Opacity="1">
				<Ellipse.RenderTransform>
					<RotateTransform Angle="0" />
				</Ellipse.RenderTransform>
			</Ellipse>
			<Ellipse Opacity="0.9">
				<Ellipse.RenderTransform>
					<RotateTransform Angle="36" />
				</Ellipse.RenderTransform>
			</Ellipse>
			<Ellipse Opacity="0.8">
				<Ellipse.RenderTransform>
					<RotateTransform Angle="72" />
				</Ellipse.RenderTransform>
			</Ellipse>
			<Ellipse Opacity="0.7">
				<Ellipse.RenderTransform>
					<RotateTransform Angle="108" />
				</Ellipse.RenderTransform>
			</Ellipse>
			<Ellipse Opacity="0.6">
				<Ellipse.RenderTransform>
					<RotateTransform Angle="144" />
				</Ellipse.RenderTransform>
			</Ellipse>
			<Ellipse Opacity="0.5">
				<Ellipse.RenderTransform>
					<RotateTransform Angle="180" />
				</Ellipse.RenderTransform>
			</Ellipse>
			<Ellipse Opacity="0.4">
				<Ellipse.RenderTransform>
					<RotateTransform Angle="216" />
				</Ellipse.RenderTransform>
			</Ellipse>
			<Ellipse Opacity="0.3">
				<Ellipse.RenderTransform>
					<RotateTransform Angle="252" />
				</Ellipse.RenderTransform>
			</Ellipse>
			<Ellipse Opacity="0.2">
				<Ellipse.RenderTransform>
					<RotateTransform Angle="288" />
				</Ellipse.RenderTransform>
			</Ellipse>
			<Ellipse Opacity="0.1">
				<Ellipse.RenderTransform>
					<RotateTransform Angle="324" />
				</Ellipse.RenderTransform>
			</Ellipse>
		</Canvas>
	</Viewbox>
</UserControl>
