<Application x:Class="NV.CT.NP.Tools.DataTransfer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NV.CT.NP.Tools.DataTransfer"
             xmlns:commonConverter="clr-namespace:NV.CT.UI.Controls.Converter;assembly=NV.CT.UI.Controls"
             xmlns:converter="clr-namespace:NV.CT.NP.Tools.DataTransfer.Converter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <commonConverter:BooleanToInverseBooleanConverter x:Key="BooleanToInverseBooleanConverter"/>
            <commonConverter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converter:ExportStatus2StrConverter x:Key="ExportStatus2StrConverter"/>
            <converter:ExportStatus2BoolConverter x:Key="ExportStatus2BoolConverter"/>

            <Style TargetType="{x:Type Button}">
                <Setter Property="Padding" Value="5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
