<UserControl x:Class="NV.CT.NP.Tools.DataTransfer.View.LoadingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NV.CT.NP.Tools.DataTransfer.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="FIcon" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/NV.CT.UI.Controls;component/Fonts/#SF2015" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border Background="#16162B" CornerRadius="1" Opacity="0.89" />
        <StackPanel
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                x:Name="FIcon"
                Margin="3"
                FontSize="50"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource FIcon}"
                Text="&#xe65f;">
                <TextBlock.RenderTransform>
                    <RotateTransform x:Name="TransFIcon" Angle="0" />
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock
                x:Name="txtMessage"
                Margin="2,10,5,10"
                VerticalAlignment="Center"
                Foreground="White"
                TextWrapping="Wrap">
                Exporting...
            </TextBlock>
        </StackPanel>
    </Grid>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
					RepeatBehavior="Forever"
					Storyboard.TargetName="TransFIcon"
					Storyboard.TargetProperty="Angle"
					To="360"
					Duration="0:0:2.5" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>
