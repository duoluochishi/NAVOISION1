<Window x:Class="FirmwareVersionGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirmwareVersionGenerator"
        mc:Ignorable="d" PreviewKeyDown="Window_OnPreviewKeyDown"
        Title="固件版本更新工具" Height="750" Width="1300" MouseLeftButtonDown="MainWindow_OnMouseLeftButtonDown">
	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Height" Value="30"></Setter>
			<Setter Property="Width" Value="140"></Setter>
			<Setter Property="Margin" Value="0 5 10 5"></Setter>
			<Setter Property="BorderThickness" Value="0"></Setter>
		</Style>
	</Window.Resources>
	<Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="4*"></RowDefinition>
			<RowDefinition Height="50"></RowDefinition>
			<RowDefinition Height="2*"></RowDefinition>
		</Grid.RowDefinitions>
		<DataGrid x:Name="DataGridExcel" AutoGenerateColumns="True" Grid.Row="0" Margin="0,10,0,10"/>

		<StackPanel Orientation="Horizontal" Margin="0 0 0 10" Grid.Row="1">
			<Button Content="粘贴 Excel 内容" Width="120" Click="OnPasteClick"/>
			<Button Content="清空 Excel 内容" Width="120" Click="OnClearClick"/>
			<Button Content="提取关键内容" Width="120" Click="OnExtractDictionaryClick"/>
			<Button Content="写入FirmwareVersionConfig.xml配置文件" Width="250" Click="OnWriteIntoConfigFile"/>
			<TextBox x:Name="TxtFirmwareConfigFile" Width="624" Height="40" VerticalContentAlignment="Center" PreviewKeyDown="TxtFirmwareConfigFile_OnPreviewKeyDown" FontSize="12" ToolTip="粘贴路径即可"></TextBox>
		</StackPanel>

		<TextBox x:Name="ResultTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Grid.Row="2" IsReadOnly="True"/>
	</Grid>
</Window>
