<Window x:Class="NV.CT.NP.Tools.FileValidator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NV.CT.NP.Tools.FileValidator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
	<Window.Resources>
		<Style TargetType="TextBox">
			<Setter Property="VerticalContentAlignment" Value="Center"></Setter>
			<Setter Property="Margin" Value="0 0 10 0"></Setter>
			<Setter Property="Height" Value="40"></Setter>
			<Setter Property="Width" Value="270"></Setter>
			<Setter Property="FontSize" Value="16"></Setter>
		</Style>
		<Style TargetType="TextBlock">
			<Setter Property="VerticalAlignment" Value="Center"></Setter>
			<Setter Property="Margin" Value="0 0 10 0"></Setter>
			<Setter Property="FontSize" Value="16"></Setter>
		</Style>
		<Style TargetType="Button">
			<Setter Property="Height" Value="40"></Setter>
			<Setter Property="Width" Value="140"></Setter>
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="0">
			<Grid VerticalAlignment="Top" Margin="10 100 10 0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*"></ColumnDefinition>
					<ColumnDefinition Width="3*"></ColumnDefinition>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="60"></RowDefinition>
					<RowDefinition Height="60"></RowDefinition>
					<RowDefinition Height="60"></RowDefinition>
				</Grid.RowDefinitions>
				<TextBlock Text="验证内容目录" Grid.Row="0" Grid.Column="0"></TextBlock>
				<TextBox Grid.Row="0" Grid.Column="1" x:Name="DirPath"></TextBox>
				<TextBlock Text="验证文件路径" Grid.Row="1" Grid.Column="0"></TextBlock>
				<TextBox Grid.Row="1" Grid.Column="1" x:Name="SavePath"></TextBox>

				<Button HorizontalAlignment="Right" Margin="0 0 30 0" Content="生成校验文件" Grid.Row="2" Grid.Column="1" x:Name="BtnCheck" Click="BtnCheck_OnClick"></Button>
			</Grid>
		</Grid>
		<Grid Grid.Column="1">
			<Grid VerticalAlignment="Top" Margin="10 100 10 0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*"></ColumnDefinition>
					<ColumnDefinition Width="3*"></ColumnDefinition>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="60"></RowDefinition>
					<RowDefinition Height="60"></RowDefinition>
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" Grid.Column="0">验证结果路径</TextBlock>
				<TextBox Grid.Row="0" Grid.Column="1" x:Name="ValidationPath"></TextBox>
				<Button Grid.Row="1" Grid.Column="1" Content="验证" HorizontalAlignment="Right" Margin="0 0 30 0" x:Name="BtnValidate" Click="BtnValidate_OnClick"></Button>
			</Grid>
		</Grid>
	</Grid>
</Window>
