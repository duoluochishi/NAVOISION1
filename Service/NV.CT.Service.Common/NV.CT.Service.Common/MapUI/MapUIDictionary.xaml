<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attachedProperty="clr-namespace:NV.CT.Service.Common.AttachedProperty"
    xmlns:converters="clr-namespace:NV.CT.Service.Common.Converters"
    xmlns:common="clr-namespace:NV.CT.Service.Common.MapUI"
    xmlns:selectors="clr-namespace:NV.CT.Service.Common.MapUI.DataTemplateSelectors">
    <converters:StringToNullableConverter x:Key="StringToNullableConverter" />
    <Style
        x:Key="ParameterGroupBoxStyle"
        BasedOn="{StaticResource {x:Type GroupBox}}"
        TargetType="{x:Type GroupBox}">
        <Setter Property="Padding" Value="4 2" />
        <Setter Property="Margin" Value="1" />
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock
                        HorizontalAlignment="Left"
                        Text="{Binding Header, RelativeSource={RelativeSource AncestorType={x:Type GroupBox}}}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <DataTemplate x:Key="SimpleDataTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="ParameterGroupBox" />
            </Grid.ColumnDefinitions>
            <GroupBox
                Header="{Binding Title}"
                Style="{StaticResource ParameterGroupBoxStyle}">
                <TextBox
                    VerticalContentAlignment="Center"
                    attachedProperty:TextBoxAttachedProperty.UpdateSourceWhenEnter="True"
                    IsReadOnly="{Binding IsReadOnly}"
                    Text="{Binding Value, Mode=TwoWay, Converter={StaticResource StringToNullableConverter}}" />
                    <!-- IsEnabled="{Binding IsEnabled}" -->
            </GroupBox>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="EnumDataTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="ParameterGroupBox" />
            </Grid.ColumnDefinitions>
            <GroupBox
                Header="{Binding Title}"
                Style="{StaticResource ParameterGroupBoxStyle}">
                <ComboBox
                    VerticalContentAlignment="Center"
                    DisplayMemberPath="Key"
                    IsReadOnly="{Binding IsReadOnly}"
                    SelectedValuePath="Value"
                    SelectedValue="{Binding Value}"
                    ItemsSource="{Binding EnumDic}" />
                    <!-- IsEnabled="{Binding IsEnabled}" -->
            </GroupBox>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="CollectionSetTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="ParameterGroupBox" />
            </Grid.ColumnDefinitions>
            <GroupBox
                Header="{Binding Title}"
                Style="{StaticResource ParameterGroupBoxStyle}">
                <Button
                    Content="Set"
                    VerticalContentAlignment="Center"
                    Command="{Binding Source={x:Static common:MapUICommands.CollectionSetCommand}}"
                    CommandParameter="{Binding}" />
            </GroupBox>
        </Grid>
    </DataTemplate>
    <selectors:MapUIDataTemplateSelector
        x:Key="MapUIDataTemplateSelector"
        SimpleDataTemplate="{StaticResource SimpleDataTemplate}"
        EnumDataTemplate="{StaticResource EnumDataTemplate}"
        CollectionSetTemplate="{StaticResource CollectionSetTemplate}" />
</ResourceDictionary>