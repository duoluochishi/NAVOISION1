<UserControl x:Class="NV.CT.Service.AutoCali.UI.CaliScenarioEditUC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:NV.CT.Service.AutoCali.Model;assembly=NV.CT.Service.AutoCali.Model"
        xmlns:markableTextBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
        mc:Ignorable="d" d:DesignWidth="1024"  d:DesignHeight="800" Width="auto" Height="auto"
        Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <ResourceDictionary>

            <!--校准项目数据模板-->
            <DataTemplate DataType="{x:Type model:CalibrationItem}">
                <TextBlock Text="{Binding Name}"/>
            </DataTemplate>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="Margin" Value="10,0"/>
                <Setter Property="Padding" Value="3"/>
                <Setter Property="MinWidth" Value="60"/>
            </Style>
            <Style x:Key="verticalButton" TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="Margin" Value="10,10"/>
                <Setter Property="Padding" Value="3"/>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="400"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--校准场景名称-->
                <Grid Grid.Row="0" Grid.Column="0" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" MaxWidth="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Scenario Name" VerticalAlignment="Center"/>
                    <markableTextBox:MarkableTextBox Grid.Column="1" Text="{Binding WrappedCaliScenario.Name}" Margin="5,0"/>
                </Grid>

                <!--已关联的校准项目列表-->
                <GroupBox Grid.Row="1" Grid.Column="0" Header="Contained Calibration Items">
                    <ListView Grid.Row="1" ItemsSource="{Binding AssociatedCaliItems}" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  SelectedItem="{Binding SelectedCaliItem, Mode=TwoWay}"
                                  SelectionChanged="ListView_SelectionChanged"/>
                </GroupBox>

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                    <Button Content="Move Right" Command="{Binding UnAssociateCommand}" Style="{StaticResource verticalButton}"/>
                    <Button Content="Move Left" Command="{Binding AssociateCommand}" Style="{StaticResource verticalButton}"/>
                    <Button Content="Move Up" Command="{Binding UpCommand}" Style="{StaticResource verticalButton}"/>
                    <Button Content="Move Down" Command="{Binding DownCommand}" Style="{StaticResource verticalButton}"/>
                </StackPanel>

                <!--可关联的校准项目列表-->
                <GroupBox Grid.Row="1" Grid.Column="2" Header="Available Calibration Items">
                    <ListView Grid.Row="1" ItemsSource="{Binding UnAssociatedCaliItems}" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  SelectedItem="{Binding SelectedCaliItem, Mode=TwoWay}"
                                  BorderThickness="1" BorderBrush="#5a5a89"
                                  SelectionChanged="ListView_SelectionChanged"/>
                </GroupBox>

                <Grid Grid.Row="1" Grid.Column="3" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Announcements"/>
                    <TextBox Grid.Row="1" Text="{Binding SelectedCaliItem.Attention}" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 VerticalAlignment="Stretch" VerticalContentAlignment="Top"/>
                </Grid>
            </Grid>

            <!--校准项目的协议-->
            <Grid Grid.Row="1" Margin="0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Grid.Row="0" Text="Protocol" VerticalAlignment="Bottom"/>
                    <Button Content="Add" Command="{Binding AddArgProtocolCommand}"/>
                    <Button Content="Create a Copy" Command="{Binding CopyAsArgProtocolCommand}"/>
                    <Button Content="Delete" Command="{Binding DeleteArgProtocolCommand}"/>
                    <Button Content="Edit" Command="{Binding EditArgProtocolCommand}"/>
                </StackPanel>
                <!--<DataGrid Grid.Row="1" x:Name="argProtocolDataGrid" VerticalAlignment="Stretch"
                                  AutoGenerateColumns="True" CanUserAddRows="False"
                                  ItemsSource="{Binding ArgProtocolDataView}"
                                  IsReadOnly="True"
                                  LoadingRow="dataGrid_LoadingRow">
                        </DataGrid>-->
                <UserControl x:Name="argProtocolControl" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,10"/>
            </Grid>

        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="confirmBtn" Content="OK" Command="{Binding ConfirmCommand}"/>
            <Button Name="cancelBtn" Content="Cancel" Click="Close"/>
        </StackPanel>
    </Grid>
</UserControl>