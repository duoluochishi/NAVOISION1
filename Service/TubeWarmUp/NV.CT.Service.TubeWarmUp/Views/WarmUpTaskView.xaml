<UserControl
    x:Class="NV.CT.Service.TubeWarmUp.Views.WarmUpTaskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:framework="clr-namespace:NV.CT.Service.Common.Framework;assembly=NV.CT.Service.Common"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:NV.CT.Service.TubeWarmUp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:NV.CT.Service.Common.Resources;assembly=NV.CT.Service.Common"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="{x:Static res:Common_Lang.Common_Add}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding AddCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button Content="{x:Static res:Common_Lang.Common_Delete}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedItem, ElementName=grid}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button Click="Button_Click" Content="{x:Static res:Common_Lang.Common_Save}" />
        </StackPanel>
        <DataGrid
            x:Name="grid"
            Grid.Row="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="False"
            ItemsSource="{Binding Tasks}"
            SelectionMode="Single">
            <DataGrid.Resources>
                <Style BasedOn="{StaticResource MaterialDesignDataGridRow}" TargetType="DataGridRow">
                    <Setter Property="framework:EventToCommand.EventName" Value="LostFocus" />
                    <Setter Property="framework:EventToCommand.Command" Value="{Binding DataContext.UpdageTaskCommand, ElementName=control}" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <framework:MaterialStyleDataGridTextColumn
                    Width="*"
                    Binding="{Binding Id}"
                    Header="{x:Static res:Warmup_Lang.Warmup_TaskNumber}"
                    IsReadOnly="True" />
                <framework:MaterialStyleDataGridTextColumn
                    Width="*"
                    Binding="{Binding KV}"
                    Header="kV" />
                <framework:MaterialStyleDataGridTextColumn
                    Width="*"
                    Binding="{Binding MA}"
                    Header="mA" />
                <framework:MaterialStyleDataGridTextColumn
                    Width="*"
                    Binding="{Binding Status}"
                    Header="{x:Static res:Common_Lang.Common_Status}"
                    IsReadOnly="True" />
                <framework:MaterialStyleDataGridTextColumn
                    Width="*"
                    Binding="{Binding RestTimeInterval}"
                    Header="{x:Static res:Warmup_Lang.Warmup_RestInterval}" />
                <framework:MaterialStyleDataGridTextColumn
                    Width="*"
                    Binding="{Binding ScanTimes}"
                    Header="{x:Static res:Warmup_Lang.Warmup_ScanTimes}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>