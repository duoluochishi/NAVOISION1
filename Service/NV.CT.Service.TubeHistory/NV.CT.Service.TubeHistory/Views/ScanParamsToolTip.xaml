<UserControl
    x:Class="NV.CT.Service.TubeHistory.Views.ScanParamsToolTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:NV.CT.Service.TubeHistory.Models"
    xmlns:converters="clr-namespace:NV.CT.Service.TubeHistory.Converters"
    mc:Ignorable="d"
    d:Background="#5a5a89"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance models:TubeDetailModel}">
    <UserControl.Resources>
        <converters:KvMaToStringConverter x:Key="KvMaToStringConverter" />
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Column="0"
            Grid.Row="0"
            HorizontalAlignment="Right"
            Text="ScanUID" />
        <TextBlock
            Grid.Column="2"
            Grid.Row="0"
            Text="{Binding ScanUID}" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="1"
            HorizontalAlignment="Right"
            Text="kV" />
        <TextBlock
            Grid.Column="2"
            Grid.Row="1"
            Text="{Binding KV, Converter={StaticResource KvMaToStringConverter}}" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="2"
            HorizontalAlignment="Right"
            Text="mA" />
        <TextBlock
            Grid.Column="2"
            Grid.Row="2"
            Text="{Binding MA, Converter={StaticResource KvMaToStringConverter}}" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="3"
            HorizontalAlignment="Right"
            Text="ExposureTime" />
        <TextBlock
            Grid.Column="2"
            Grid.Row="3"
            Text="{Binding ExposureTime, StringFormat='{}{0:0.###} ms'}" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="4"
            HorizontalAlignment="Right"
            Text="FrameTime" />
        <TextBlock
            Grid.Column="2"
            Grid.Row="4"
            Text="{Binding FrameTime, StringFormat='{}{0:0.###} ms'}" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="5"
            HorizontalAlignment="Right"
            Text="ScanOption" />
        <TextBlock
            Grid.Column="2"
            Grid.Row="5"
            Text="{Binding ScanOption}" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="6"
            HorizontalAlignment="Right"
            Text="ExposureMode" />
        <TextBlock
            Grid.Column="2"
            Grid.Row="6"
            Text="{Binding ExposureMode}" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="7"
            HorizontalAlignment="Right"
            Text="Focal" />
        <TextBlock
            Grid.Column="2"
            Grid.Row="7"
            Text="{Binding Focal}" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="8"
            HorizontalAlignment="Right"
            Text="TotalFrames" />
        <TextBlock
            Grid.Column="2"
            Grid.Row="8"
            Text="{Binding TotalFrames}" />
    </Grid>
</UserControl>