<dialog:BaseCustomWindow
    x:Class="NV.CT.Service.QualityTest.Views.MTF.CurveWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:NV.CT.Service.QualityTest.Views.MTF"
    xmlns:dialog="clr-namespace:NV.MPS.UI.Dialog;assembly=NV.MPS.UI.Dialog"
    xmlns:resources="clr-namespace:NV.CT.Service.Common.Resources;assembly=NV.CT.Service.Common"
    xmlns:oxy="http://oxyplot.org/wpf"
    mc:Ignorable="d"
    Title="{x:Static resources:Quality_Lang.Quality_MTF_Curve}"
    Height="450"
    Width="800"
    WindowStartupLocation="CenterScreen"
    Loaded="BaseCustomWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition />
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <oxy:PlotView
            x:Name="Plot"
            Grid.Row="1"
            Margin="10 0"
            Background="{StaticResource BaseBackgroundColor}" >
            <oxy:PlotView.DefaultTrackerTemplate>
                <ControlTemplate>
                    <oxy:TrackerControl
                        ShowPointer="False"
                        CornerRadius="10"
                        BorderBrush="#5A5A89"
                        LineStroke="#80FFFFFF"
                        Background="{StaticResource BaseBackgroundColor}"
                        Position="{Binding Position}"
                        LineExtents="{Binding Model.PlotArea, ElementName=Plot}">
                        <TextBlock 
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{Binding}"/>
                    </oxy:TrackerControl>
                </ControlTemplate>
            </oxy:PlotView.DefaultTrackerTemplate>
        </oxy:PlotView>
        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock Text="{Binding MTF0Value, StringFormat='MTF 0% : {0:F2}'}" />
            <TextBlock Margin="30 0 0 0" Text="{Binding MTF2Value, StringFormat='MTF 2% : {0:F2}'}" />
            <TextBlock Margin="30 0 0 0" Text="{Binding MTF10Value, StringFormat='MTF 10% : {0:F2}'}" />
            <TextBlock Margin="30 0 0 0" Text="{Binding MTF50Value, StringFormat='MTF 50% : {0:F2}'}" />
        </StackPanel>
    </Grid>
</dialog:BaseCustomWindow>