<local:AbstractUCBase
    x:Class="NV.CT.Service.QualityTest.Views.QTUC.IntegrationPhantomUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:framework="clr-namespace:NV.CT.Service.Common.Framework;assembly=NV.CT.Service.Common"
    xmlns:res="clr-namespace:NV.CT.Service.Common.Resources;assembly=NV.CT.Service.Common"
    xmlns:local="clr-namespace:NV.CT.Service.QualityTest.Views.QTUC"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <local:AbstractUCBase.Resources>
        <ResourceDictionary>
            <framework:ProxyData x:Key="QTViewDataContext" Data="{Binding Tag.DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/NV.CT.Service.QualityTest;component/Themes/QTUCResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </local:AbstractUCBase.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="10" />
            <RowDefinition Height="150" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Border x:Name="BorderIC1" Grid.Row="0" />
        <DataGrid
            x:Name="DataGridParas"
            Grid.Row="2"
            ColumnHeaderStyle="{StaticResource DataGridColumnHeaderCenterStyle}"
            SelectedItem="{Binding SelectedEntry}"
            ItemsSource="{Binding Entries}"
            SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <!-- <DataGridTextColumn -->
                <!--     Header="{x:Static res:Quality_Lang.Quality_UC_Position}" -->
                <!--     IsReadOnly="{calcBinding:Binding Data.IsScanning, Source={StaticResource QTViewDataContext}}" -->
                <!--     ElementStyle="{StaticResource CenterStyle}" -->
                <!--     Binding="{Binding Position}" /> -->
                <DataGridTemplateColumn
                    Header="{x:Static res:Common_Lang.Common_Status}"
                    MinWidth="200"
                    CellTemplate="{StaticResource StatusDataTemplate}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <TextBlock
                Margin="30 0 0 0"
                VerticalAlignment="Center"
                Text="{x:Static res:Quality_Lang.Quality_UC_ValidateResult}" />
            <ContentControl
                Margin="5 0 0 0"
                VerticalAlignment="Center">
                <b:Interaction.Triggers>
                    <b:DataTrigger
                        Binding="{Binding Entries[0].Result}"
                        Value="true">
                        <b:ChangePropertyAction PropertyName="Content" Value="{StaticResource PathTick}" />
                    </b:DataTrigger>
                    <b:DataTrigger
                        Binding="{Binding Entries[0].Result}"
                        Value="false">
                        <b:ChangePropertyAction PropertyName="Content" Value="{StaticResource PathCross}" />
                    </b:DataTrigger>
                </b:Interaction.Triggers>
            </ContentControl>
            <TextBlock
                Margin="10 0 0 0"
                VerticalAlignment="Center"
                Text="{Binding Entries[0].Param.Value.ErrorMsg}" />
        </StackPanel>
    </Grid>
</local:AbstractUCBase>