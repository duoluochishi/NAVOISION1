<UserControl
    x:Class="NV.CT.Service.HardwareTest.UserControls.Components.XRaySource.XRaySourceChartPlotView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:NV.CT.Service.HardwareTest.Attachments.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:oxy="http://oxyplot.org/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/NV.CT.Service.HardwareTest;component/Attachments/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <ItemsControl
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ItemsSource="{Binding PlotModels}">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>

                <DataTemplate>
                    <oxy:PlotView
                        Width="360"
                        Height="330"
                        Margin="5"
                        Model="{Binding}">

                        <oxy:PlotView.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </oxy:PlotView.Resources>

                        <oxy:PlotView.DefaultTrackerTemplate>
                            <ControlTemplate>
                                <oxy:TrackerControl
                                    Margin="0"
                                    Background="#3b3b5f"
                                    BorderBrush="Black"
                                    BorderEdgeMode="Unspecified"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Distance="0"
                                    Foreground="White"
                                    LineExtents="{Binding PlotModel.PlotArea}"
                                    Opacity="0.8"
                                    Position="{Binding Position}"
                                    ShowPointer="True">

                                    <oxy:TrackerControl.Content>
                                        <TextBlock
                                            Margin="5"
                                            Text="{Binding}" />
                                    </oxy:TrackerControl.Content>

                                </oxy:TrackerControl>
                            </ControlTemplate>
                        </oxy:PlotView.DefaultTrackerTemplate>

                    </oxy:PlotView>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>

        <GroupBox
            Grid.Column="1"
            Margin="0,25,15,25"
            Header="Plot Settings"
            Style="{StaticResource StandardGroupBoxStyle}">

            <StackPanel>

                <StackPanel
                    Margin="0,5"
                    Orientation="Horizontal">

                    <TextBlock
                        Width="80"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="Start Date : " />

                    <DatePicker
                        Width="170"
                        VerticalAlignment="Center"
                        md:HintAssist.Hint="Pick Start Date"
                        SelectedDate="{Binding StartDate, Mode=TwoWay}" />

                </StackPanel>

                <StackPanel
                    Margin="0,5"
                    Orientation="Horizontal">

                    <TextBlock
                        Width="80"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="Start Time : " />

                    <md:TimePicker
                        Width="170"
                        Padding="8,2,17,2"
                        VerticalAlignment="Center"
                        md:HintAssist.Hint="Pick Start Time"
                        Foreground="White"
                        SelectedTime="{Binding StartTime, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignOutlinedTimePicker}"
                        WithSeconds="True">

                        <md:TimePicker.ClockStyle>
                            <Style
                                BasedOn="{StaticResource MaterialDesignClock}"
                                TargetType="{x:Type md:Clock}">
                                <Setter Property="IsHeaderVisible" Value="False" />
                                <Setter Property="DisplayAutomation" Value="ToSeconds" />
                            </Style>
                        </md:TimePicker.ClockStyle>

                    </md:TimePicker>

                </StackPanel>

                <StackPanel
                    Margin="0,5"
                    Orientation="Horizontal">

                    <TextBlock
                        Width="80"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="End Date : " />

                    <DatePicker
                        Width="170"
                        VerticalAlignment="Center"
                        md:HintAssist.Hint="Pick End Date"
                        SelectedDate="{Binding EndDate, Mode=TwoWay}" />

                </StackPanel>

                <StackPanel
                    Margin="0,5"
                    Orientation="Horizontal">

                    <TextBlock
                        Width="80"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="End Time : " />

                    <md:TimePicker
                        Width="170"
                        Padding="8,2,17,2"
                        VerticalAlignment="Center"
                        md:HintAssist.Hint="Pick End Time"
                        Foreground="White"
                        SelectedTime="{Binding EndTime, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignOutlinedTimePicker}"
                        WithSeconds="True">

                        <md:TimePicker.ClockStyle>
                            <Style
                                BasedOn="{StaticResource MaterialDesignClock}"
                                TargetType="{x:Type md:Clock}">
                                <Setter Property="IsHeaderVisible" Value="False" />
                            </Style>
                        </md:TimePicker.ClockStyle>

                    </md:TimePicker>

                </StackPanel>

                <StackPanel
                    Margin="0,5"
                    Orientation="Horizontal">

                    <TextBlock
                        Width="80"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Text="Data Type : " />

                    <ComboBox
                        Width="170"
                        helpers:EnumItemSourceHelper.EnumValuesToItemsSourceProperty="True"
                        SelectedItem="{Binding HistoryDataType, Mode=TwoWay}" />

                </StackPanel>

                <Button
                    Margin="8,15"
                    Command="{Binding PlotChartCommand}"
                    Content="Plot" />

                <Button
                    Margin="8,5"
                    Command="{Binding ResetChartCommand}"
                    Content="Reset" />

            </StackPanel>

        </GroupBox>

    </Grid>

</UserControl>
