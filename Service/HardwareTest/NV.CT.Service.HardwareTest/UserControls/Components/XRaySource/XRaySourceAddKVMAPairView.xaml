<UserControl
    x:Class="NV.CT.Service.HardwareTest.UserControls.Components.XRaySource.XRaySourceAddKVMAPairView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:NV.CT.Service.Common.Resources;assembly=NV.CT.Service.Common"
    mc:Ignorable="d"
    d:DesignHeight="160"
    d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBox
                Width="80"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Text="{Binding Item.Voltage}" />
            <TextBlock
                Margin="10 0 0 0"
                VerticalAlignment="Center"
                Text="kV" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBox
                Width="80"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Text="{Binding Item.Current}" />
            <TextBlock
                Margin="10 0 0 0"
                VerticalAlignment="Center"
                Text="mA" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button
                MinWidth="100"
                Content="{x:Static res:Common_Lang.Common_OK}"
                Command="{Binding OKCommand}" />
            <Button
                Margin="40 0 0 0"
                MinWidth="100"
                Content="{x:Static res:Common_Lang.Common_Cancel}"
                Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</UserControl>