<UserControl
    x:Class="NV.CT.Service.HardwareTest.UserControls.Integrations.ImageChain.ImageChainImageSortView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="UserControl_Loaded">

    <StackPanel>

        <TextBlock
            Margin="0,5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            Text="Current Loaded Images" />

        <DataGrid
            x:Name="RawDataGrid"
            Height="580"
            Margin="0,5,0,0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            Foreground="White"
            IsReadOnly="True"
            ItemsSource="{Binding ImageViewerManager.RawDataPool}"
            Sorting="RawDataGrid_Sorting">

            <DataGrid.Resources>

                <Style
                    x:Key="RawDataGridElementStyle"
                    TargetType="{x:Type TextBlock}">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>

            </DataGrid.Resources>

            <DataGrid.ColumnHeaderStyle>
                <Style
                    BasedOn="{StaticResource {x:Type DataGridColumnHeader}}"
                    TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <DataGridTextColumn
                    Width="245"
                    Binding="{Binding FrameNoInSeries}"
                    ElementStyle="{StaticResource RawDataGridElementStyle}"
                    Header="Frame Series Number" />

                <DataGridTextColumn
                    Width="245"
                    Binding="{Binding SourceId}"
                    ElementStyle="{StaticResource RawDataGridElementStyle}"
                    Header="Source ID" />

                <DataGridTextColumn
                    Width="245"
                    Binding="{Binding TablePosition}"
                    ElementStyle="{StaticResource RawDataGridElementStyle}"
                    Header="Table Position" />

                <DataGridTextColumn
                    Width="245"
                    Binding="{Binding GantryAngle}"
                    ElementStyle="{StaticResource RawDataGridElementStyle}"
                    Header="Gantry Rotate Angle" />

            </DataGrid.Columns>

        </DataGrid>

        <Button
            Width="120"
            Margin="0,20,0,0"
            Click="ApplyImageSortButton_Click"
            Content="Apply" />

    </StackPanel>

</UserControl>
