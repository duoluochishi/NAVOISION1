<UserControl
    x:Class="NV.CT.Service.HardwareTest.UserControls.Integrations.DataAcquisition.DrawHorizontalLineView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:NV.CT.Service.HardwareTest.Attachments.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="420"
    Height="100"
    d:Background="Wheat"
    mc:Ignorable="d">

    <Grid>

        <Grid.Resources>

            <Style
                BasedOn="{StaticResource {x:Type TextBox}}"
                TargetType="{x:Type TextBox}">
                <Setter Property="Margin" Value="10,0,25,0" />
            </Style>

            <Style
                BasedOn="{StaticResource {x:Type ComboBox}}"
                TargetType="{x:Type ComboBox}">
                <Setter Property="Margin" Value="10,0,25,0" />
                <Setter Property="Padding" Value="10,2" />
            </Style>

        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="0.7*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="25,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="Axis Y Value: " />

        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            helper:EnumItemSourceHelper.EnumValuesToItemsSourceProperty="True"
            Text="{Binding InputAxisYValue, Mode=TwoWay}" />

        <Button
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Width="260"
            Command="{Binding DrawHorizontalLineCommand}"
            Content="Draw Horizontal Line" />

    </Grid>

</UserControl>
