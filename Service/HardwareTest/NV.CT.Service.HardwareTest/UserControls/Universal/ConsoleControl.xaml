<UserControl
    x:Class="NV.CT.Service.HardwareTest.UserControls.Universal.ConsoleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:markableTextBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid>
        <Border BorderThickness="1" BorderBrush="{StaticResource BaseTabBackBrush}">
            <markableTextBox:MarkableTextBox
                x:Name="ConsoleTextBox"
                Height="auto"
                IsReadOnly="True"
                TextWrapping="Wrap"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Top"
                VerticalScrollBarVisibility="Auto"
                Text="{Binding ConsoleMessage, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                TextChanged="ConsoleTextBox_TextChanged" />
        </Border>
        <Button
            Margin="0 5 5 0"
            Width="40"
            Height="25"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Command="{Binding ClearCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}">
            <md:PackIcon Kind="Refresh" />
        </Button>
    </Grid>
</UserControl>