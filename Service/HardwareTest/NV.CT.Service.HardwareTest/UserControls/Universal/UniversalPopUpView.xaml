<pu:WindowX
    x:Class="NV.CT.Service.HardwareTest.UserControls.Universal.UniversalPopUpView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:pu="https://opensource.panuon.com/wpf-ui"
    Width="1440"
    Height="810"
    pu:WindowXCaption.Height="0"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CornerRadius="8"
            GlassFrameThickness="0"
            ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Border
        Margin="1"
        CornerRadius="5"
        Style="{StaticResource WindowsBorder}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border
                pu:WindowX.IsDragMoveArea="True"
                Background="{StaticResource BaseBackgroundColor}">

                <Button
                    x:Name="CloseButton"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignFlatButton}">

                    <md:PackIcon
                        Width="24"
                        Height="24"
                        Foreground="White"
                        Kind="Close" />

                </Button>

            </Border>

            <ContentControl
                Grid.Row="1"
                Content="{Binding CurrentShowContent}" />

        </Grid>

    </Border>

</pu:WindowX>
