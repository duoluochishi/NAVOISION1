<Grid
    x:Class="NV.CT.Service.HardwareTest.Views.Integrations.ComponentStatus.ComponentStatusTestingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:NV.CT.Service.HardwareTest.Attachments.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid.Resources>

        <converters:XOnlineStatusToDisplayConverter x:Key="XOnlineStatusToDisplayConverter" />
        <converters:ConnectionStatusToDisplayConverter x:Key="ConnectionStatusToDisplayConverter" />
        <converters:BooleanToDisplayConverter x:Key="BooleanToDisplayConverter" />
        <converters:PartStatusToDisplayConverter x:Key="PartStatusToDisplayConverter" />
        <converters:ComponentStatusScrollViewerHeightAutoFitConverter x:Key="ComponentStatusScrollViewerHeightAutoFitConverter" />
        <converters:HasErrorsToDisplayConverter x:Key="HasErrorsToDisplayConverter" />

        <!--  ComponentStatusBorderStyle  -->
        <Style
            x:Key="ComponentStatusBorderStyle"
            TargetType="{x:Type Border}">
            <Setter Property="Width" Value="220" />
            <Setter Property="Height" Value="70" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Background" Value="{StaticResource BaseBackgroundColor}" />
        </Style>

        <!--  ComponentStatusTextBlockStyle  -->
        <Style
            x:Key="ComponentStatusTextBlockStyle"
            TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{StaticResource BaseForegroundColor}" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!--  UpdateComponentsButtonStyle  -->
        <Style
            x:Key="UpdateComponentsButtonStyle"
            BasedOn="{StaticResource NanoButtonStyle}"
            TargetType="{x:Type Button}">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="0,1,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!--  PackIconStyle  -->
        <Style TargetType="{x:Type md:PackIcon}">
            <Setter Property="Foreground" Value="{StaticResource BaseForegroundColor}" />
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Style.Triggers>
                <DataTrigger
                    Binding="{Binding Path=Kind, RelativeSource={RelativeSource Self}}"
                    Value="1855">
                    <Setter Property="Foreground" Value="OrangeRed" />
                </DataTrigger>
                <DataTrigger
                    Binding="{Binding Path=Kind, RelativeSource={RelativeSource Self}}"
                    Value="1615">
                    <Setter Property="Foreground" Value="LimeGreen" />
                </DataTrigger>
                <DataTrigger
                    Binding="{Binding Path=Kind, RelativeSource={RelativeSource Self}}"
                    Value="3957">
                    <Setter Property="Foreground" Value="OrangeRed" />
                </DataTrigger>
                <DataTrigger
                    Binding="{Binding Path=Kind, RelativeSource={RelativeSource Self}}"
                    Value="3955">
                    <Setter Property="Foreground" Value="LimeGreen" />
                </DataTrigger>
                <DataTrigger
                    Binding="{Binding Path=Kind, RelativeSource={RelativeSource Self}}"
                    Value="180">
                    <Setter Property="Foreground" Value="OrangeRed" />
                </DataTrigger>
                <DataTrigger
                    Binding="{Binding Path=Kind, RelativeSource={RelativeSource Self}}"
                    Value="4680">
                    <Setter Property="Foreground" Value="LimeGreen" />
                </DataTrigger>
            </Style.Triggers>

        </Style>

        <!--  SplitRectangeStyle  -->
        <Style
            x:Key="SplitRectangeStyle"
            TargetType="{x:Type Rectangle}">
            <Setter Property="Width" Value="400" />
            <Setter Property="Height" Value="2" />
            <Setter Property="Stroke" Value="{StaticResource BaseRoundButtonBrush}" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <!--  SplitTextBlockStyle  -->
        <Style
            x:Key="SplitTextBlockStyle"
            BasedOn="{StaticResource NanoTextBlockStyle}"
            TargetType="{x:Type TextBlock}">
            <Setter Property="Width" Value="300" />
            <Setter Property="Margin" Value="10,0" />
            <Setter Property="Padding" Value="40,3" />
            <Setter Property="Background" Value="{StaticResource BaseBackgroundColor}" />
            <Setter Property="Opacity" Value="0.95" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>

    </Grid.Resources>

    <GroupBox
        Header="System Components Status Viewer"
        Style="{DynamicResource StandardGroupBoxStyle}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="135" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid
                Width="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource BaseBackgroundColor}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="36" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="36" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="36" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="10,0,0,0"
                    Style="{StaticResource ComponentStatusTextBlockStyle}"
                    Text="{Binding LastUpdatedTime, StringFormat=Last Updated Time : {0}}" />

                <Rectangle
                    Grid.Row="1"
                    Grid.ColumnSpan="4"
                    Fill="White" />

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

                    <TextBlock
                        Margin="10,0"
                        Style="{StaticResource ComponentStatusTextBlockStyle}"
                        Text="Online Status Updated" />

                    <md:PackIcon Kind="{Binding IsOnlineStatusUpdated, Converter={StaticResource BooleanToDisplayConverter}}" />

                </StackPanel>

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal">

                    <TextBlock
                        Margin="10,0"
                        Style="{StaticResource ComponentStatusTextBlockStyle}"
                        Text="Firmware Version Updated" />

                    <md:PackIcon Kind="{Binding IsFirmwareVersionUpdated, Converter={StaticResource BooleanToDisplayConverter}}" />

                </StackPanel>

                <Rectangle
                    Grid.Row="3"
                    Grid.ColumnSpan="4"
                    Fill="White" />

                <Button
                    Grid.Row="4"
                    Grid.ColumnSpan="4"
                    Command="{Binding UpdateCommand}"
                    Style="{StaticResource UpdateComponentsButtonStyle}">
                    <md:PackIcon Kind="Sync" />
                </Button>

            </Grid>

            <ScrollViewer Grid.Row="1">

                <StackPanel>

                    <Grid
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Rectangle
                            Grid.Column="0"
                            Style="{StaticResource SplitRectangeStyle}" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource SplitTextBlockStyle}"
                            Text="CTBox Connection Status" />

                        <Rectangle
                            Grid.Column="2"
                            Style="{StaticResource SplitRectangeStyle}" />

                    </Grid>

                    <Border Style="{StaticResource ComponentStatusBorderStyle}">

                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Style="{StaticResource ComponentStatusTextBlockStyle}"
                                Text="CTBox Connection" />

                            <Rectangle
                                Grid.Row="1"
                                Fill="{StaticResource BaseForegroundColor}" />

                            <md:PackIcon
                                Grid.Row="2"
                                Kind="{Binding CurrentCTBoxConnectionStatus, Converter={StaticResource ConnectionStatusToDisplayConverter}}" />

                        </Grid>

                    </Border>

                    <!--  Major Components  -->

                    <Grid
                        Margin="0,10"
                        HorizontalAlignment="Center">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Rectangle
                            Grid.Column="0"
                            Style="{StaticResource SplitRectangeStyle}" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource SplitTextBlockStyle}"
                            Text="Major Component Status" />

                        <Rectangle
                            Grid.Column="2"
                            Style="{StaticResource SplitRectangeStyle}" />

                    </Grid>

                    <ItemsControl
                        HorizontalAlignment="Center"
                        ItemsSource="{Binding MajorComponentSources}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Width="1200" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Height="100"
                                    Style="{StaticResource ComponentStatusBorderStyle}">

                                    <Grid>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.ColumnSpan="2"
                                            Style="{StaticResource ComponentStatusTextBlockStyle}"
                                            Text="{Binding Name}" />

                                        <Rectangle
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <StackPanel
                                            Grid.Row="2"
                                            Grid.ColumnSpan="2"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Style="{StaticResource ComponentStatusTextBlockStyle}"
                                                Text="Online Status" />
                                            <md:PackIcon
                                                Margin="8,0,0,0"
                                                Kind="{Binding Online, Converter={StaticResource XOnlineStatusToDisplayConverter}}" />

                                        </StackPanel>

                                        <Rectangle
                                            Grid.Row="3"
                                            Grid.ColumnSpan="2"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.ColumnSpan="2"
                                            Style="{StaticResource ComponentStatusTextBlockStyle}"
                                            Text="{Binding FirmwareVersion}" />

                                        <Rectangle
                                            Grid.Row="5"
                                            Grid.ColumnSpan="2"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <StackPanel
                                            Grid.Row="6"
                                            Grid.ColumnSpan="2"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Style="{StaticResource ComponentStatusTextBlockStyle}"
                                                Text="No Errors" />
                                            <md:PackIcon
                                                Margin="10,0,0,0"
                                                Kind="{Binding HasErrors, Converter={StaticResource HasErrorsToDisplayConverter}}"
                                                ToolTip="{Binding ErrorMessage}" />

                                        </StackPanel>

                                    </Grid>

                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                    <!--  Secondary Components  -->

                    <Grid
                        Margin="0,10"
                        HorizontalAlignment="Center">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Rectangle
                            Grid.Column="0"
                            Style="{StaticResource SplitRectangeStyle}" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource SplitTextBlockStyle}"
                            Text="Secondary Component Status" />

                        <Rectangle
                            Grid.Column="2"
                            Style="{StaticResource SplitRectangeStyle}" />

                    </Grid>

                    <ItemsControl
                        HorizontalAlignment="Center"
                        ItemsSource="{Binding SecondaryComponentSources}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Width="1200" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Height="100"
                                    Style="{StaticResource ComponentStatusBorderStyle}">

                                    <Grid>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.ColumnSpan="2"
                                            Style="{StaticResource ComponentStatusTextBlockStyle}"
                                            Text="{Binding Name}" />

                                        <Rectangle
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <StackPanel
                                            Grid.Row="2"
                                            Grid.ColumnSpan="2"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Style="{StaticResource ComponentStatusTextBlockStyle}"
                                                Text="Online Status" />
                                            <md:PackIcon
                                                Margin="8,0,0,0"
                                                Kind="{Binding Online, Converter={StaticResource XOnlineStatusToDisplayConverter}}" />

                                        </StackPanel>

                                        <Rectangle
                                            Grid.Row="3"
                                            Grid.ColumnSpan="2"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.ColumnSpan="2"
                                            Style="{StaticResource ComponentStatusTextBlockStyle}"
                                            Text="{Binding FirmwareVersion}" />

                                        <Rectangle
                                            Grid.Row="5"
                                            Grid.ColumnSpan="2"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <StackPanel
                                            Grid.Row="6"
                                            Grid.ColumnSpan="2"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Style="{StaticResource ComponentStatusTextBlockStyle}"
                                                Text="No Errors" />
                                            <md:PackIcon
                                                Margin="10,0,0,0"
                                                Kind="{Binding HasErrors, Converter={StaticResource HasErrorsToDisplayConverter}}"
                                                ToolTip="{Binding ErrorMessage}" />

                                        </StackPanel>

                                    </Grid>

                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                    <!--  Tube Interface  -->

                    <Grid
                        Margin="0,10"
                        HorizontalAlignment="Center">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Rectangle
                            Grid.Column="0"
                            Style="{StaticResource SplitRectangeStyle}" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource SplitTextBlockStyle}"
                            Text="Tube Interface Status" />

                        <Rectangle
                            Grid.Column="2"
                            Style="{StaticResource SplitRectangeStyle}" />

                    </Grid>

                    <ItemsControl
                        HorizontalAlignment="Center"
                        ItemsSource="{Binding TubeInterfaceSources}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Height="100"
                                    Style="{StaticResource ComponentStatusBorderStyle}">

                                    <Grid>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.ColumnSpan="2"
                                            Style="{StaticResource ComponentStatusTextBlockStyle}"
                                            Text="{Binding Name}" />

                                        <Rectangle
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <StackPanel
                                            Grid.Row="2"
                                            Grid.ColumnSpan="2"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Style="{StaticResource ComponentStatusTextBlockStyle}"
                                                Text="Online Status" />

                                            <md:PackIcon
                                                Margin="8,0,0,0"
                                                Kind="{Binding Online, Converter={StaticResource XOnlineStatusToDisplayConverter}}" />

                                        </StackPanel>

                                        <Rectangle
                                            Grid.Row="3"
                                            Grid.ColumnSpan="2"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.ColumnSpan="2"
                                            Style="{StaticResource ComponentStatusTextBlockStyle}"
                                            Text="{Binding FirmwareVersion}" />

                                        <Rectangle
                                            Grid.Row="5"
                                            Grid.ColumnSpan="2"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <StackPanel
                                            Grid.Row="6"
                                            Grid.ColumnSpan="2"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Style="{StaticResource ComponentStatusTextBlockStyle}"
                                                Text="No Errors" />
                                            <md:PackIcon
                                                Margin="10,0,0,0"
                                                Kind="{Binding HasErrors, Converter={StaticResource HasErrorsToDisplayConverter}}"
                                                ToolTip="{Binding ErrorMessage}" />

                                        </StackPanel>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                    <!--  XRay Source  -->

                    <Grid
                        Margin="0,10"
                        HorizontalAlignment="Center">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Rectangle
                            Grid.Column="0"
                            Style="{StaticResource SplitRectangeStyle}" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource SplitTextBlockStyle}"
                            Text="XRay Source Status" />

                        <Rectangle
                            Grid.Column="2"
                            Style="{StaticResource SplitRectangeStyle}" />

                    </Grid>

                    <ItemsControl
                        HorizontalAlignment="Center"
                        ItemsSource="{Binding XRaySources}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ComponentStatusBorderStyle}">

                                    <Grid>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Style="{StaticResource ComponentStatusTextBlockStyle}"
                                                Text="{Binding Name, StringFormat={}{0}}" />

                                            <md:PackIcon Kind="{Binding Online, Converter={StaticResource XOnlineStatusToDisplayConverter}}" />

                                        </StackPanel>

                                        <Rectangle
                                            Grid.Row="1"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <TextBlock
                                            Grid.Row="2"
                                            Style="{StaticResource ComponentStatusTextBlockStyle}"
                                            Text="{Binding FirmwareVersion}" />

                                    </Grid>

                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                    <!--  Detector  -->

                    <Grid
                        Margin="0,10"
                        HorizontalAlignment="Center">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Rectangle
                            Grid.Column="0"
                            Style="{StaticResource SplitRectangeStyle}" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource SplitTextBlockStyle}"
                            Text="Detector Status" />

                        <Rectangle
                            Grid.Column="2"
                            Style="{StaticResource SplitRectangeStyle}" />

                    </Grid>

                    <StackPanel>

                        <Border
                            Width="1000"
                            Height="36"
                            Style="{StaticResource ComponentStatusBorderStyle}">

                            <Grid HorizontalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />

                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Style="{StaticResource ComponentStatusTextBlockStyle}"
                                    Text="Acquisition Card " />

                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource ComponentStatusTextBlockStyle}"
                                    Text=" - Serial Number 01 Status : " />

                                <md:PackIcon
                                    Grid.Column="2"
                                    Kind="{Binding AcquisitionCardSources[0].Status, Converter={StaticResource PartStatusToDisplayConverter}}" />

                                <TextBlock
                                    Grid.Column="3"
                                    Style="{StaticResource ComponentStatusTextBlockStyle}"
                                    Text=" - Firmware Version : " />

                                <TextBlock
                                    Grid.Column="4"
                                    Style="{StaticResource ComponentStatusTextBlockStyle}"
                                    Text="{Binding AcquisitionCardSources[0].FirmwareVersion}" />

                                <TextBlock
                                    Grid.Column="5"
                                    Style="{StaticResource ComponentStatusTextBlockStyle}"
                                    Text=" - Serial Number 02 Status : " />

                                <md:PackIcon
                                    Grid.Column="6"
                                    Kind="{Binding AcquisitionCardSources[1].Status, Converter={StaticResource PartStatusToDisplayConverter}}" />

                                <TextBlock
                                    Grid.Column="7"
                                    Style="{StaticResource ComponentStatusTextBlockStyle}"
                                    Text=" - Firmware Version : " />

                                <TextBlock
                                    Grid.Column="8"
                                    Style="{StaticResource ComponentStatusTextBlockStyle}"
                                    Text="{Binding AcquisitionCardSources[1].FirmwareVersion}" />

                            </Grid>

                        </Border>

                        <ItemsControl
                            HorizontalAlignment="Center"
                            ItemsSource="{Binding DetectorSources}">

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="720"
                                        Height="108"
                                        Style="{StaticResource ComponentStatusBorderStyle}">

                                        <Grid>

                                            <Grid.Resources>

                                                <Style TargetType="{x:Type StackPanel}">
                                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                    <Setter Property="Orientation" Value="Horizontal" />
                                                    <Setter Property="Margin" Value="5,0" />
                                                </Style>

                                                <Style
                                                    BasedOn="{StaticResource ComponentStatusTextBlockStyle}"
                                                    TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Margin" Value="5,0" />
                                                </Style>

                                            </Grid.Resources>

                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition Height="1" />
                                                <RowDefinition />
                                                <RowDefinition Height="1" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1.1*" />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <!--  Detector  -->
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.ColumnSpan="5"
                                                Text="{Binding Name}" />

                                            <!--  Split  -->
                                            <Rectangle
                                                Grid.Row="1"
                                                Grid.ColumnSpan="5"
                                                Fill="{StaticResource BaseForegroundColor}" />

                                            <!--  Process Boards  -->
                                            <TextBlock
                                                Grid.Row="2"
                                                Text="[ 4 Process Boards ]" />

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="1">

                                                <TextBlock Text="{Binding ProcessBoards[0].FirmwareVersion}" />
                                                <md:PackIcon Kind="{Binding ProcessBoards[0].Status, Converter={StaticResource PartStatusToDisplayConverter}}" />

                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="2">

                                                <TextBlock Text="{Binding ProcessBoards[1].FirmwareVersion}" />
                                                <md:PackIcon Kind="{Binding ProcessBoards[1].Status, Converter={StaticResource PartStatusToDisplayConverter}}" />

                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="3">

                                                <TextBlock Text="{Binding ProcessBoards[2].FirmwareVersion}" />
                                                <md:PackIcon Kind="{Binding ProcessBoards[2].Status, Converter={StaticResource PartStatusToDisplayConverter}}" />

                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="4">

                                                <TextBlock Text="{Binding ProcessBoards[3].FirmwareVersion}" />
                                                <md:PackIcon Kind="{Binding ProcessBoards[3].Status, Converter={StaticResource PartStatusToDisplayConverter}}" />

                                            </StackPanel>

                                            <!--  Split  -->
                                            <Rectangle
                                                Grid.Row="3"
                                                Grid.ColumnSpan="5"
                                                Fill="{StaticResource BaseForegroundColor}" />

                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                Text="[ Transmit Boards ]" />

                                            <StackPanel
                                                Grid.Row="4"
                                                Grid.Column="1">

                                                <TextBlock Text="{Binding TransmissionBoard.FirmwareVersion}" />
                                                <md:PackIcon Kind="{Binding TransmissionBoard.Status, Converter={StaticResource PartStatusToDisplayConverter}}" />

                                            </StackPanel>

                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="2"
                                                Grid.ColumnSpan="2"
                                                Text="[ Temperature Control Boards ]" />

                                            <StackPanel
                                                Grid.Row="4"
                                                Grid.Column="4">

                                                <TextBlock Text="{Binding TemperatureControlBoard.FirmwareVersion}" />
                                                <md:PackIcon Kind="{Binding TemperatureControlBoard.Status, Converter={StaticResource PartStatusToDisplayConverter}}" />

                                            </StackPanel>

                                        </Grid>

                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                        </ItemsControl>

                    </StackPanel>

                    <!--  Collimator  -->

                    <Grid
                        Margin="0,10"
                        HorizontalAlignment="Center">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Rectangle
                            Grid.Column="0"
                            Style="{StaticResource SplitRectangeStyle}" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource SplitTextBlockStyle}"
                            Text="Collimator Status" />

                        <Rectangle
                            Grid.Column="2"
                            Style="{StaticResource SplitRectangeStyle}" />

                    </Grid>

                    <ItemsControl
                        HorizontalAlignment="Center"
                        ItemsSource="{Binding CollimatorSources}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ComponentStatusBorderStyle}">

                                    <Grid>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="1" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Style="{StaticResource ComponentStatusTextBlockStyle}"
                                                Text="{Binding Name, StringFormat={}{0}}" />

                                            <md:PackIcon Kind="{Binding Online, Converter={StaticResource XOnlineStatusToDisplayConverter}}" />

                                        </StackPanel>

                                        <Rectangle
                                            Grid.Row="1"
                                            Fill="{StaticResource BaseForegroundColor}" />

                                        <TextBlock
                                            Grid.Row="2"
                                            Style="{StaticResource ComponentStatusTextBlockStyle}"
                                            Text="{Binding FirmwareVersion}" />

                                    </Grid>

                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                </StackPanel>

            </ScrollViewer>

        </Grid>

    </GroupBox>

</Grid>
