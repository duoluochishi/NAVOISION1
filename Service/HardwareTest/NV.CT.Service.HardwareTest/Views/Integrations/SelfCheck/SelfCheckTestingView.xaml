<Grid
    x:Class="NV.CT.Service.HardwareTest.Views.Integrations.SelfCheck.SelfCheckTestingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:NV.CT.Service.Common.Resources;assembly=NV.CT.Service.Common"
    xmlns:model="clr-namespace:NV.CT.Service.HardwareTest.Models.Integrations.SelfCheck"
    xmlns:vm="clr-namespace:NV.CT.Service.HardwareTest.ViewModels.Integrations.SelfCheck"
    xmlns:view="clr-namespace:NV.CT.Service.HardwareTest.Views.Integrations.SelfCheck"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance Type=vm:SelfCheckTestingViewModel}"
    x:Name="Root">
    <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition Height="10" />
        <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <Border
        Grid.Row="0"
        BorderThickness="1"
        BorderBrush="{StaticResource BaseTabBackBrush}">
        <ScrollViewer HorizontalAlignment="Stretch">
            <ItemsControl
                HorizontalAlignment="Center"
                Grid.IsSharedSizeScope="True"
                ItemsSource="{Binding Items}"
                d:ItemsSource="{d:SampleData ItemCount=20}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type model:SelfCheckPartModel}">
                        <GroupBox Margin="2 0 2 2" Header="{Binding}">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="5" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <CheckBox
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Command="{Binding DataContext.CheckedChangedCommand, ElementName=Root}">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                Text="{Binding PartName}" />
                                        </CheckBox>
                                        <view:SelfCheckStatusContentControl Grid.Column="2" />
                                    </Grid>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <ItemsControl ItemsSource="{Binding DetailedItems}" d:ItemsSource="{d:SampleData ItemCount=5}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type model:SelfCheckPartDetailedModel}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30" />
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition SharedSizeGroup="Text" />
                                            </Grid.ColumnDefinitions>
                                            <view:SelfCheckStatusContentControl />
                                            <TextBlock
                                                Grid.Column="2"
                                                VerticalAlignment="Center"
                                                Text="{Binding ItemName}" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Border>
    <StackPanel Grid.Row="2" Orientation="Horizontal">
        <CheckBox
            Content="All Check"
            IsChecked="{Binding IsAllChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Command="{Binding AllCheckedChangedCommand}" />
        <Button
            Margin="10 0"
            MinWidth="100"
            HorizontalAlignment="Left"
            IsEnabled="{Binding IsDoing,Converter={StaticResource InvertBooleanConverter}}"
            Content="{x:Static res:Common_Lang.Common_Start}"
            Command="{Binding StartCommand}" />
    </StackPanel>
</Grid>