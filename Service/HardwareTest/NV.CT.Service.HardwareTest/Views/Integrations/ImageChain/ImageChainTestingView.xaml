<Grid
    x:Class="NV.CT.Service.HardwareTest.Views.Integrations.ImageChain.ImageChainTestingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mk="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:foundation="clr-namespace:NV.CT.Service.HardwareTest.Models.Foundations"
    xmlns:model="clr-namespace:NV.CT.Service.HardwareTest.Models.Integrations.ImageChain"
    xmlns:vm="clr-namespace:NV.CT.Service.HardwareTest.ViewModels.Integrations.ImageChain"
    xmlns:universal="clr-namespace:NV.CT.Service.HardwareTest.UserControls.Universal"
    mc:Ignorable="d"
    d:Width="1800"
    d:Height="900"
    d:DataContext="{d:DesignInstance Type=vm:ImageChainTestingViewModel}">
    <Grid.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/NV.CT.Service.Common;component/MapUI/MapUIDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Grid.Resources>
    <Grid.RowDefinitions>
        <RowDefinition Height="46" />
        <RowDefinition />
        <RowDefinition Height="360" />
    </Grid.RowDefinitions>
    <Border
        Grid.Row="0"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        Background="{StaticResource PrimaryHueLightBrush}">
        <DockPanel LastChildFill="False">
            <Menu DockPanel.Dock="Left">
                <MenuItem Margin="1,0">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="5,0"
                                FontWeight="Bold"
                                Text="Historical Data" />
                            <md:PackIcon
                                Width="20"
                                Margin="5,0,0,0"
                                Kind="FileDocumentMultipleOutline" />
                        </StackPanel>
                    </MenuItem.Header>
                    <MenuItem
                        Background="Transparent"
                        Command="{Binding LoadRawDataSeriesFolderCommand}"
                        Header="Load RawData Series" />
                    <MenuItem
                        Background="Transparent"
                        Command="{Binding LoadDicomSeriesFolderCommand}"
                        Header="Load Dicom Series" />
                </MenuItem>
                <MenuItem Margin="1,0">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="5,0"
                                FontWeight="Bold"
                                Text="Image Actions" />
                            <md:PackIcon
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Kind="HandSaw" />
                        </StackPanel>
                    </MenuItem.Header>
                    <MenuItem
                        Background="Transparent"
                        Command="{Binding ExecuteImageCutCommand}"
                        Header="Image Cut Action"
                        IsEnabled="{Binding ImageViewerManager.CanRunRawDataActions}" />
                    <MenuItem
                        Background="Transparent"
                        Command="{Binding ExecuteImageSortCommand}"
                        Header="Image Sort Action"
                        IsEnabled="{Binding ImageViewerManager.CanRunRawDataActions}" />
                </MenuItem>
            </Menu>
            <TextBlock
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="{Binding ImageViewerManager.ImageLoadMessage, StringFormat='Image Loaded : {0}'}" />
            <ProgressBar
                Margin="10,0,0,0"
                Background="{StaticResource BaseTabBackBrush}"
                Foreground="Green"
                Style="{StaticResource MaterialDesignCircularProgressBar}"
                Visibility="{Binding DataLoadProgressVisibility, Delay=1000, Converter={StaticResource BooleanToVisibilityConverter}}"
                Value="{Binding DataLoadProgress}" />
            <StackPanel
                Margin="0,0,5,0"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <ItemsControl ItemsSource="{Binding ImageViewerManager.ImageViewerActions}">
                    <ItemsControl.Resources>
                        <DataTemplate DataType="{x:Type foundation:ImageViewerMutexAction}">
                            <ToggleButton
                                Command="{Binding DataContext.ImageViewerManager.ExecuteImageViewerMutexActionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                Style="{DynamicResource ImageMutexActionToggleButtonStyle}">
                                <md:PackIcon
                                    Width="19"
                                    Height="19"
                                    Kind="{Binding Icon}" />
                            </ToggleButton>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type foundation:ImageViewerNormalAction}">
                            <Button
                                Command="{Binding DataContext.ImageViewerManager.ExecuteImageViewerNormalActionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                Style="{DynamicResource ImageNormalActionButtonStyle}">
                                <md:PackIcon
                                    Width="19"
                                    Height="19"
                                    Kind="{Binding Icon}" />
                            </Button>
                        </DataTemplate>
                    </ItemsControl.Resources>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </DockPanel>
    </Border>
    <Grid
        Grid.Row="1"
        Grid.Column="1"
        Margin="0 2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <ContentControl
            Grid.Column="0"
            Content="{Binding ImageViewerManager.ImageViewer.XWindowsFormsHost, Mode=TwoWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded">
                    <i:InvokeCommandAction
                        Command="{Binding ImageViewerManager.ImageContentControlLoadedCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="SizeChanged">
                    <i:InvokeCommandAction
                        Command="{Binding ImageViewerManager.ImageContentControlSizeChangedCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContentControl}}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ContentControl>
        <ScrollBar
            Grid.Column="1"
            Maximum="{Binding ImageViewerManager.LoadedImageCount, Mode=TwoWay}"
            Minimum="1"
            Style="{DynamicResource ImageControlScrollBarStyle}"
            Thumb.DragDelta="ImageControlScrollBar_DragDelta"
            Value="{Binding ImageViewerManager.CurrentImageIndex, Mode=TwoWay}" />
    </Grid>
    <Border
        Grid.Row="2"
        Grid.Column="0"
        Grid.ColumnSpan="2"
        BorderBrush="{StaticResource BaseTabBackBrush}"
        BorderThickness="0.5">
        <Grid>
            <TabControl
                x:Name="ScanReconTabControl"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                ItemsSource="{Binding ScanReconParametersTabItems, Mode=TwoWay}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                SelectedIndex="{Binding SelectedScanReconParametersTabItemIndex, Mode=TwoWay}">
                <TabControl.Resources>
                    <Style
                        x:Key="ProgressTextBlockStyle"
                        BasedOn="{StaticResource NanoTextBlockStyle}"
                        TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>
                    <Style
                        x:Key="TabItemProgressBarStyle"
                        TargetType="{x:Type ProgressBar}">
                        <Setter Property="Height" Value="10" />
                        <Setter Property="Margin" Value="5,0" />
                        <Setter Property="Foreground" Value="Green" />
                        <Setter Property="IsIndeterminate" Value="False" />
                    </Style>
                    <Style
                        x:Key="ScanReconTabItemButtonStyle"
                        BasedOn="{StaticResource {x:Type Button}}"
                        TargetType="{x:Type Button}">
                        <Setter Property="Padding" Value="10,0" />
                        <Setter Property="Margin" Value="10,0,0,0" />
                    </Style>
                    <DataTemplate DataType="{x:Type model:ScanParametersTabItem}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="500" />
                            </Grid.ColumnDefinitions>
                            <ScrollViewer Margin="10">
                                <ItemsControl
                                    Grid.IsSharedSizeScope="True"
                                    ItemTemplateSelector="{StaticResource MapUIDataTemplateSelector}"
                                    ItemsSource="{Binding Parameters}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                            <Grid
                                Grid.Column="1"
                                Margin="0,10,10,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <universal:ConsoleControl
                                    Grid.Row="0"
                                    ConsoleMessage="{Binding ConsoleMessage, Mode=OneWay}"
                                    ClearCommand="{Binding ClearConsoleCommand}" />
                                <DockPanel
                                    Grid.Row="1"
                                    Margin="0,5">
                                    <TextBlock
                                        Style="{StaticResource ProgressTextBlockStyle}"
                                        Text="Scan Progress :" />
                                    <ProgressBar
                                        Style="{StaticResource TabItemProgressBarStyle}"
                                        Value="{Binding ProgressValue, Mode=TwoWay}" />
                                </DockPanel>
                                <Grid
                                    Grid.Row="2"
                                    HorizontalAlignment="Right">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="5" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Button
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Command="{Binding DataContext.StartScanCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                        Content="Start Scan"
                                        IsEnabled="{Binding CanStartScan}"
                                        Style="{StaticResource ScanReconTabItemButtonStyle}" />
                                    <Button
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Command="{Binding DataContext.StopScanCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                        Content="Stop Scan"
                                        Style="{StaticResource ScanReconTabItemButtonStyle}" />
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Command="{Binding DataContext.UseCurrentTablePositionCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                        Content="Use Table Pos"
                                        Style="{StaticResource ScanReconTabItemButtonStyle}" />
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Command="{Binding DataContext.LoadRawDataCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                        Content="Load Raw Data"
                                        IsEnabled="{Binding CanLoadRawData}"
                                        Style="{StaticResource ScanReconTabItemButtonStyle}" />
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        Command="{Binding DataContext.OpenDataAnalysisToolCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                        CommandParameter="{Binding}"
                                        Content="Open Tool"
                                        IsEnabled="{Binding CanOpenDataAnalysisTool}"
                                        Style="{StaticResource ScanReconTabItemButtonStyle}" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type model:ReconParametersTabItem}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="500" />
                            </Grid.ColumnDefinitions>
                            <ScrollViewer Margin="10">
                                <ItemsControl
                                    Grid.IsSharedSizeScope="True"
                                    ItemTemplateSelector="{StaticResource MapUIDataTemplateSelector}"
                                    ItemsSource="{Binding Parameters}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                            <Grid
                                Grid.Column="1"
                                Margin="0,10,10,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <universal:ConsoleControl
                                    Grid.Row="0"
                                    ConsoleMessage="{Binding ConsoleMessage, Mode=OneWay}"
                                    ClearCommand="{Binding ClearConsoleCommand}" />
                                <DockPanel
                                    Grid.Row="1"
                                    Margin="0,5">
                                    <TextBlock
                                        Style="{StaticResource ProgressTextBlockStyle}"
                                        Text="Offline Recon Progress :" />
                                    <ProgressBar
                                        Style="{StaticResource TabItemProgressBarStyle}"
                                        Value="{Binding ProgressValue, Mode=TwoWay}" />
                                </DockPanel>
                                <Grid
                                    Grid.Row="2"
                                    HorizontalAlignment="Right">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="5" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Button
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Command="{Binding DataContext.StartOfflineReconCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                        CommandParameter="{Binding}"
                                        Content="Start Recon"
                                        IsEnabled="{Binding CanStartRecon}"
                                        Style="{StaticResource ScanReconTabItemButtonStyle}" />
                                    <Button
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Command="{Binding DataContext.StopOfflineReconCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                        CommandParameter="{Binding}"
                                        Content="Stop Recon"
                                        IsEnabled="{Binding CanStopRecon}"
                                        Style="{StaticResource ScanReconTabItemButtonStyle}" />
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Command="{Binding DataContext.SaveReconParamsCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                        CommandParameter="{Binding}"
                                        Content="Save Params"
                                        Style="{StaticResource ScanReconTabItemButtonStyle}" />
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Command="{Binding DataContext.LoadReconDicomSeriesCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                        CommandParameter="{Binding}"
                                        Content="Load Image"
                                        IsEnabled="{Binding CanLoadReconImage}"
                                        Style="{StaticResource ScanReconTabItemButtonStyle}" />
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        Command="{Binding DataContext.OpenDataAnalysisToolCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                        CommandParameter="{Binding}"
                                        Content="Open Tool"
                                        IsEnabled="{Binding CanOpenDataAnalysisTool}"
                                        Style="{StaticResource ScanReconTabItemButtonStyle}" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </TabControl.Resources>
                <TabControl.ItemContainerStyle>
                    <Style
                        BasedOn="{StaticResource {x:Type TabItem}}"
                        TargetType="{x:Type TabItem}">
                        <EventSetter Event="Selector.Selected" Handler="ScanReconTabControl_Selected" />
                    </Style>
                </TabControl.ItemContainerStyle>
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                            HorizontalAlignment="Stretch"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="{Binding TabItemHeader}" />
                            <Button
                                x:Name="CloseTabItemButton"
                                Width="20"
                                Height="20"
                                Margin="5,0"
                                HorizontalAlignment="Center"
                                Command="{Binding DataContext.CloseReconParametersTabItemCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                CommandParameter="{Binding}"
                                Cursor="Hand">
                                <md:PackIcon
                                    Width="12"
                                    Height="12"
                                    Kind="Close" />
                            </Button>
                        </StackPanel>
                        <DataTemplate.Triggers>
                            <DataTrigger
                                Binding="{Binding TabItemHeader}"
                                Value="Scan Parameters">
                                <Setter TargetName="CloseTabItemButton" Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </TabControl.ItemTemplate>
            </TabControl>
            <md:PopupBox
                Width="30"
                Height="30"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                IsPopupOpen="{Binding IsAddPopupBoxOpened, Mode=TwoWay}"
                PlacementMode="LeftAndAlignBottomEdges"
                StaysOpen="False"
                Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}">
                <Border
                    BorderBrush="{StaticResource ControlBorderBrush}"
                    BorderThickness="1">
                    <StackPanel Background="{StaticResource FocusBackground}">
                        <StackPanel.Resources>
                            <Style
                                BasedOn="{StaticResource MaterialDesignMenuItem}"
                                TargetType="{x:Type MenuItem}">
                                <Setter Property="Margin" Value="1" />
                                <Setter Property="Background" Value="{StaticResource ButtonMainBackground}" />
                                <Setter Property="Command" Value="{Binding AddReconParametersTabItemCommand}" />
                                <Setter Property="HeaderTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="{Binding Header, RelativeSource={RelativeSource AncestorType=MenuItem}}" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </StackPanel.Resources>
                        <MenuItem
                            CommandParameter="{Binding Path=Header, RelativeSource={RelativeSource Self}}"
                            Header="Basic Testing" />
                        <!-- 暂时去掉
                        <MenuItem
                            Header="High Resolution Testing"
                            CommandParameter="{Binding Path=Header, RelativeSource={RelativeSource Self}}" />
                        <MenuItem
                            Header="Low Density Testing"
                            CommandParameter="{Binding Path=Header, RelativeSource={RelativeSource Self}}" />
                        -->
                    </StackPanel>
                </Border>
            </md:PopupBox>
        </Grid>
    </Border>
</Grid>