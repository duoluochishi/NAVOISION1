<UserControl
    x:Class="NV.CT.ProtocolManagement.Views.English.ReconParameterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:NV.CT.UI.Controls.Behavior;assembly=NV.CT.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    xmlns:vt="clr-namespace:NV.CT.UI.Controls;assembly=NV.CT.UI.Controls"
    d:DesignHeight="950"
    d:DesignWidth="1470"
    mc:Ignorable="d">
    <AdornerDecorator>
        <Grid Name="recongrid">
            <Border
                Background="#14142B"
                BorderBrush="#5A5A89"
                BorderThickness="1,1,1,1"
                CornerRadius="10,10,10,10">
                <Grid IsEnabled="{Binding ReconIsEnabled}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="0" />
                    </Grid.ColumnDefinitions>
                    <ScrollViewer
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto">
                        <Grid
                            Name="grdForm"
                            Grid.Row="2"
                            Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.BindingGroup>
                                <BindingGroup x:Name="bg" />
                            </Grid.BindingGroup>
                            <Grid
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="3">
                                <Label
                                    x:Name="lblTitle"
                                    Grid.ColumnSpan="2"
                                    Height="34"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Content="{x:Static res:LanguageResource.Content_ReconParameters}"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Foreground="#FFC6C6EC" />
                                <Rectangle
                                    Grid.Column="0"
                                    Width="{Binding ElementName=lblTitle, Path=ActualWidth}"
                                    Height="3"
                                    Margin="0,5,0,10"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    SnapsToDevicePixels="True"
                                    Stroke="#3044D9"
                                    StrokeThickness="3" />
                            </Grid>
                            <Label
                                Grid.Row="2"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_SeriesDescription}" />
                            <TextBox
                                x:Name="txtSeriesDescription"
                                Grid.Row="2"
                                Grid.Column="2"
                                Height="30"
                                MaxLength="20"
                                Text="{Binding ReconParameter.SeriesDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <i:Interaction.Behaviors>
                                    <local:RestrictedInputBehavior />
                                </i:Interaction.Behaviors>
                            </TextBox>
                            <Label
                                Grid.Row="2"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_FOV}" />
                            <TextBox
                                x:Name="txtFOV"
                                Grid.Row="2"
                                Grid.Column="6"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{Binding ReconParameter.ReconFOV, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="2"
                                Grid.Column="6"
                                Margin="0,0,-35,0"
                                HorizontalAlignment="Right"
                                Content="mm" />
                            <Label
                                Grid.Row="3"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_SliceThickness}" />
                            <ComboBox
                                Name="cbbSliceThickness"
                                Grid.Row="3"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding SliceThicknessList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectSliceThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="3"
                                Grid.Column="2"
                                Margin="0,0,-35,0"
                                HorizontalAlignment="Right"
                                Content="mm" />
                            <Label
                                Grid.Row="3"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_ReconMatrix}" />
                            <ComboBox
                                Name="cbbReconMatrix"
                                Grid.Row="3"
                                Grid.Column="6"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding ReconMatrixList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectReconMatrix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="4"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Recon increment" />
                            <ComboBox
                                Name="cbbReconIncrement"
                                Grid.Row="4"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding ReconIncrementList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectReconIncrement, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="4"
                                Grid.Column="2"
                                Margin="0,0,-35,0"
                                HorizontalAlignment="Right"
                                Content="mm" />
                            <Label
                                Grid.Row="4"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_ImageOrder}" />
                            <ComboBox
                                Name="cbbImageOrder"
                                Grid.Row="4"
                                Grid.Column="6"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding ImageOrderList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectImageOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="5"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_RemoveArtifacts}" />
                            <CheckBox
                                Grid.Row="5"
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Bone"
                                IsChecked="{Binding IsBoneAritifacEnable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox
                                Grid.Row="5"
                                Grid.Column="2"
                                Margin="110,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Metal"
                                IsChecked="{Binding IsMetalAritifacEnable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox
                                Grid.Row="5"
                                Grid.Column="2"
                                Margin="210,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Ring"
                                IsChecked="{Binding IsRingAritifactEnable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <!--<ComboBox Name="cbbRemoveArtifacts" Grid.Row="5" Grid.Column="2" Height="30" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedValuePath="Key" DisplayMemberPath="Value"
                                SelectedItem="{Binding Path=SelectRemoveArtifact, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding RemoveArtifactList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />-->
                            <Label
                                Grid.Row="5"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_CenterX_Y}" />
                            <TextBox
                                x:Name="nupCenterX"
                                Grid.Row="5"
                                Grid.Column="6"
                                Width="180"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                MaxLength="20"
                                Text="{Binding ReconParameter.CenterX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Name="lblCenterXY"
                                Grid.Row="5"
                                Grid.Column="6"
                                Margin="188,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="/" />
                            <TextBox
                                x:Name="nupCenterY"
                                Grid.Row="5"
                                Grid.Column="6"
                                Width="180"
                                Height="30"
                                Margin="200,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                MaxLength="20"
                                Text="{Binding ReconParameter.CenterY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="6"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_ReconMethod}"
                                Visibility="Visible" />
                            <ComboBox
                                Name="cbbReconMethod"
                                Grid.Row="6"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding ReconMethodList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectReconMethod, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="6"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_IsRTD}" />
                            <CheckBox
                                Grid.Row="6"
                                Grid.Column="6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{Binding ReconParameter.IsRTD, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="False" />
                            <Label
                                Grid.Row="7"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_Kernel}" />
                            <ComboBox
                                Name="cbbKernel"
                                Grid.Row="7"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding KernelList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectKernel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="7"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Bowtie" />
                            <CheckBox
                                Grid.Row="7"
                                Grid.Column="6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsBowtie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="8"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_Window}" />
                            <ComboBox
                                Name="cbbWindowType"
                                Grid.Row="8"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding WindowList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectWindow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="8"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="PreBinning" />
                            <ComboBox
                                Name="cbbBinning"
                                Grid.Row="8"
                                Grid.Column="6"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding BinningList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectedBinning, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="9"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_WWWL}" />
                            <TextBox
                                x:Name="txtWindowWidth"
                                Grid.Row="9"
                                Grid.Column="2"
                                Width="180"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                MaxLength="5"
                                Text="{Binding ReconParameter.WindowWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Name="lblwwwl"
                                Grid.Row="9"
                                Grid.Column="2"
                                Margin="188,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="/" />
                            <TextBox
                                x:Name="txtWindowCenter"
                                Grid.Row="9"
                                Grid.Column="2"
                                Width="180"
                                Height="30"
                                Margin="200,0,0,0"
                                VerticalAlignment="Center"
                                MaxLength="5"
                                Text="{Binding ReconParameter.WindowCenter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="9"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="InterType" />
                            <ComboBox
                                Name="cbbInterpType"
                                Grid.Row="9"
                                Grid.Column="6"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding InterpTypeList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectedInterpType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="10"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="PreDenoiseCoef" />
                            <TextBox
                                x:Name="txtPreDenoiseCoef"
                                Grid.Row="10"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{Binding ReconParameter.PreDenoiseCoef, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="10"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="PostDenoiseCoef" />
                            <TextBox
                                x:Name="txtPostDenoiseCoef"
                                Grid.Row="10"
                                Grid.Column="6"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{Binding ReconParameter.PostDenoiseCoef, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="11"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="AirCorrectionMode" />
                            <ComboBox
                                Name="cbbAirCorrectionMode"
                                Grid.Row="11"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding AirCorrectionModeList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectedAirCorrectionMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />

                            <Label
                                Grid.Row="11"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="SmoothZ" />
                            <CheckBox
                                Grid.Row="11"
                                Grid.Column="6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsSmoothZEnable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="12"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="TwoPass" />
                            <CheckBox
                                Grid.Row="12"
                                Grid.Column="6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsTwoPassEnable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <Label
                                Grid.Row="12"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="IVRTVCoef" />
                            <TextBox
                                x:Name="txtIVRTVCoef"
                                Grid.Row="12"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{Binding ReconParameter.IVRTVCoef, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="13"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="RingCorrectCoef" />
                            <TextBox
                                x:Name="txtRingCorrectCoef"
                                Grid.Row="13"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{Binding ReconParameter.RingCorrectCoef, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="14"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_PreDenoise}" />
                            <ComboBox
                                Name="cbbPreDenoiseType"
                                Grid.Row="14"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding PreDenoiseTypeList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectedPreDenoise, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="13"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_PostDenoise}" />
                            <ComboBox
                                Name="cbbPostDenoiseType"
                                Grid.Row="13"
                                Grid.Column="6"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding PostDenoiseTypeList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectedPostDenoise, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="14"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_ReconBodyPart}" />
                            <ComboBox
                                Name="cbbReconBodyPart"
                                Grid.Row="14"
                                Grid.Column="6"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding ReconBodyPartList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding Path=SelectedReconBodyPart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Key" />
                            <Label
                                Grid.Row="15"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_IsHDRecon}" />
                            <CheckBox
                                Grid.Row="15"
                                Grid.Column="6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{Binding ReconParameter.IsHDRecon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="15"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_WindmillArtifactEnable}" />
                            <CheckBox
                                Grid.Row="15"
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{Binding ReconParameter.IsWindMillEanble, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="16"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_ConeAngleArtifactEnable}" />
                            <CheckBox
                                Grid.Row="16"
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{Binding ReconParameter.IsConeAngleEanble, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Grid.Row="16"
                                Grid.Column="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static res:LanguageResource.Content_AutoRecon}" />
                            <CheckBox
                                Grid.Row="16"
                                Grid.Column="6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{Binding ReconParameter.IsAutoRecon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Button
                                x:Name="btn_Save"
                                Grid.Row="17"
                                Grid.Column="6"
                                Width="120"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Command="{Binding Commands[SaveCommand]}"
                                Content="{x:Static res:LanguageResource.Content_Save}" />
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </AdornerDecorator>
</UserControl>
