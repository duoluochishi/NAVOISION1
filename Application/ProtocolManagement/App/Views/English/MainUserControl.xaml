<UserControl
    x:Class="NV.CT.ProtocolManagement.Views.English.MainUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="clr-namespace:NV.CT.ProtocolManagement.Views.English"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="1040"
    d:DesignWidth="1900"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="GridStyle" TargetType="{x:Type Grid}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="stackPanel" />
        <SolidColorBrush x:Key="ListBox.Static.Background" Color="#FFFFFFFF" />
        <SolidColorBrush x:Key="ListBox.Static.Border" Color="#FFABADB3" />
        <SolidColorBrush x:Key="ListBox.Disabled.Background" Color="#FFFFFFFF" />
        <SolidColorBrush x:Key="ListBox.Disabled.Border" Color="#FFD9D9D9" />
        <Style x:Key="listBoxStyle" TargetType="{x:Type ListBox}">
            <Setter Property="Background" Value="{StaticResource ListBox.Static.Background}" />
            <Setter Property="BorderBrush" Value="{StaticResource ListBox.Static.Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="true" />
            <Setter Property="ScrollViewer.PanningMode" Value="Both" />
            <Setter Property="Stylus.IsFlicksEnabled" Value="False" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}">
                        <Border
                            x:Name="Bd"
                            Padding="1"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="true">
                            <ScrollViewer Padding="{TemplateBinding Padding}" Focusable="false">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </ScrollViewer>
                        </Border>
                        <!--<ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="Bd" Value="{StaticResource ListBox.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="Bd" Value="{StaticResource ListBox.Disabled.Border}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsGrouping" Value="true"/>
                                    <Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="false"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>-->
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <AdornerDecorator>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2" />
                <ColumnDefinition />
                <ColumnDefinition Width="2" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.RowSpan="4"
                Grid.ColumnSpan="3"
                Background="#05050F"
                BorderThickness="0"
                CornerRadius="0" />
            <Border
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Background="#5A5A89"
                CornerRadius="0"
                Opacity="0.3" />
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="120" />
                    <RowDefinition Height="10" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  协议筛选  -->
                <my:ProtocolFilter />

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35" />
                            <RowDefinition Height="45" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <!--  搜索框  -->
                        <my:SearchBoxControl Height="35" DataContext="{Binding SearchBoxViewModel}" />

                        <Border
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Margin="0,10,0,0"
                            Background="#16162B"
                            BorderBrush="#5A5A89"
                            BorderThickness="1"
                            CornerRadius="10" />

                        <!--  协议操作功能栏  -->
                        <my:ProtocolOperationControl Grid.Row="1" />

                        <!--  协议树  -->
                        <my:ProtocolTreeControl Grid.Row="2" />

                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.RowSpan="3"
                            BorderBrush="#5A5A89"
                            BorderThickness="1"
                            CornerRadius="10" />
                        <!--  协议参数展示  -->
                        <Grid IsEnabled="{Binding DataContext.ProtocolControlIsEnable, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}" Style="{StaticResource GridStyle}">
                            <my:ProtocolParameterControl />
                        </Grid>
                        <!-- <Grid Visibility="{Binding DataContext.ScanControlIsEnable,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}">-->
                        <Grid IsEnabled="{Binding DataContext.MeasurementControlIsEnable, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}" Style="{StaticResource GridStyle}">
                            <!--<my:MeasurementParameterControl />-->
                        </Grid>
                        <Grid IsEnabled="{Binding DataContext.ScanControlIsEnable, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}" Style="{StaticResource GridStyle}">
                            <my:ScanParameterControl />
                        </Grid>
                        <Grid IsEnabled="{Binding DataContext.ReconControlIsEnable, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}" Style="{StaticResource GridStyle}">
                            <my:ReconParameterControl />
                        </Grid>

                        <!--  测试TimeLine  -->
                        <!--<ListBox
                        x:Name="listBox"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        ScrollViewer.PanningMode="HorizontalOnly"
                        Style="{DynamicResource listBoxStyle}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <timeline:TimeLine Margin="0,0,20,0" />
                        <timeline:TimeLine Margin="20,0,20,0" />
                        <timeline:TimeLine Margin="20,0,20,0" />
                        <timeline:TimeLine Margin="20,0,20,0" />
                    </ListBox>-->
                        <!--<ListBox
                        x:Name="listBox"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        ScrollViewer.PanningMode="HorizontalOnly"
                        Style="{DynamicResource listBoxStyle}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <timeline:TwoEditionTimeLine Margin="0,0,30,0" />
                        <timeline:TwoEditionTimeLine Margin="30,0,30,0" />
                        <timeline:TwoEditionTimeLine Margin="30,0,30,0" />
                        <timeline:TwoEditionTimeLine Margin="30,0,30,0" />
                    </ListBox>-->
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </AdornerDecorator>
</UserControl>
