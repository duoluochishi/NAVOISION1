<Window x:Class="NV.CT.ProtocolManagement.Views.English.ProtocolNameEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
        xmlns:local="clr-namespace:NV.CT.ProtocolManagement.Views.English"
        xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
        Title="ProtocolNameConfirm"
        Width="580"
        Height="220"
        Top="265" 
        Left="410"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        WindowStyle="None"
        mc:Ignorable="d" ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="SExposuresIconFillBrush">#FFA63F</SolidColorBrush>
        <SolidColorBrush x:Key="BorderColor">#16162B</SolidColorBrush>
        <Style
            x:Key="NBorderBaseStyle"
            TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{DynamicResource BorderColor}" />
            <Setter Property="CornerRadius" Value="10,10,10,10" />
            <Setter Property="BorderBrush" Value="#5a5a89" />
            <Setter Property="BorderThickness" Value="0.5" />
        </Style>
        <Style
            x:Key="NBorderStyle"
            BasedOn="{StaticResource NBorderBaseStyle}"
            TargetType="{x:Type Border}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5a5a89" />
                    <Setter Property="Opacity" Value="0.3" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style
            x:Key="DataGridTextColumnCenterStyle"
            TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />

        </Style>
        <Style
            x:Key="ImgStyle"
            TargetType="Image">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="4,8,8,8" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Grid>
        <Border
            Background="#14142B"
            BorderBrush="#5A5A89"
            CornerRadius="5">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[DragMoveCommand]}"
                        CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="90" />
                    <!--70-->
                    <RowDefinition Height="0" />
                    <!--40-->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    Grid.ColumnSpan="5"
                    Background="#5A5A89"
                    CornerRadius="5, 5, 0, 0"
                    Opacity="0.3" />
                <StackPanel Orientation="Horizontal" Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom">
                    <Image Source="pack://application:,,,/NV.CT.UI.Controls;component/Icons/Custom.png" Width="20" Height="20"></Image>
                    <Label Foreground="White" Margin="10,0,0,0" Content="{x:Static res:LanguageResource.Content_Repeat}">
                    </Label>
                </StackPanel>
                <Button
                    Grid.Row="0"
                    Grid.Column="3"
                    Width="22"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    ToolTip="{x:Static res:LanguageResource.ToolTip_Close}"
                    Command="{Binding Commands[CloseCommand]}"
                    Style="{StaticResource MaterialDesignIconButton}">
                    <Path Style="{StaticResource TileClosePathStyle}" />
                </Button>

                <Grid
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="5" Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Text="{Binding NodeTypeDescription}" />
                        <md:MarkableTextBox x:Name="txtName"
                            Width="280" 
                            Style="{StaticResource MarkableTextBox}"
                            Text="{Binding Path=NewNodeName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                            InputMethod.IsInputMethodEnabled="False" MaxLength="64">
                        </md:MarkableTextBox>
                    </StackPanel>
                </Grid>
                <Grid
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="5"
                    HorizontalAlignment="Right" Margin="0,0,90,0">
                    <Button
                        Width="100"
                        Height="37"
                        HorizontalAlignment="Center"
                        Content="{x:Static res:LanguageResource.Content_Confirm}"
                        Command="{Binding Commands[ConfirmCommand]}">
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
