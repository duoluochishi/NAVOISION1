<UserControl
    x:Class="NV.CT.ProtocolManagement.Views.English.SearchBoxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="35"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Border
        Background="#292947"
        BorderBrush="#5A5A89"
        BorderThickness="1"
        CornerRadius="10">
        <StackPanel Orientation="Horizontal">
            <TextBox
                x:Name="txt_Search"
                Width="350"
                Background="Transparent"
                BorderThickness="0" />
            <Button
                x:Name="btn_Search"
                Width="38"
                Margin="10,0,10,0"
                Background="Transparent"
                BorderThickness="1.5,0,0,0"
                CommandParameter="{Binding ElementName=txt_Search, Path=Text}">
                <Button.Clip>
                    <RectangleGeometry
                        RadiusX="5"
                        RadiusY="5"
                        Rect="0 0 50 50" />
                </Button.Clip>
                <Button.Content>
                    <Image
                        Width="25"
                        Height="25"
                        Source="pack://application:,,,/NV.CT.UI.Controls;component/Icons/Search.png" />
                </Button.Content>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
