<UserControl x:Class="NV.CT.UserConfig.View.English.ImageTextViewSetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="370" Background="Transparent">
    <Grid Background="Transparent" Margin="10,20,0,0">
        <ListBox Style="{x:Null}" Background="Transparent" BorderThickness="0" ItemsSource="{Binding Items,Mode=TwoWay}" 
                 SelectedItem="{Binding CurrentSelectedItem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                 SelectionMode="Single">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding Commands[SetItemCommand]}" 
                                           CommandParameter="{Binding DataContext,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBoxItem}}"></i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem" BasedOn="{x:Null}">
                    <Setter Property="Background" Value="Transparent"></Setter>
                    <Setter Property="BorderThickness" Value="0"></Setter>
                    <Setter Property="Margin" Value="0,0,0,0"></Setter>
                    <Setter Property="Padding" Value="0,0,0,0"></Setter>
                    <Setter Property="Height" Value="33"></Setter>
                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <WrapPanel Margin="0,0,0,5">
                        <CheckBox IsChecked="{Binding Visibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                  Content="{Binding Name}" 
                                  Tag="{Binding Name}"
                                  HorizontalAlignment="Left" 
                                  Width="210" Margin="0,0,5,0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:InvokeCommandAction Command="{Binding DataContext.Commands[SetItemVisibilityCommand],RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}" 
                                                           CommandParameter="{Binding DataContext,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBoxItem}}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="Unchecked">
                                    <i:InvokeCommandAction Command="{Binding DataContext.Commands[SetItemVisibilityCommand],RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}" 
                                                           CommandParameter="{Binding DataContext,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBoxItem}}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </CheckBox>
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>