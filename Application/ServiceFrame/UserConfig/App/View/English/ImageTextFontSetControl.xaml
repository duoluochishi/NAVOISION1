<UserControl x:Class="NV.CT.UserConfig.View.English.ImageTextFontSetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="230" Margin="0,10,20,0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Label Grid.ColumnSpan="2" Height="34" FontSize="15" FontWeight="Bold" Content="{x:Static res:LanguageResource.Content_FontConfig}" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFC6C6EC" />
            <Rectangle VerticalAlignment="Top" Grid.Column="0" Stroke="#3044D9" Height="3" StrokeThickness="3" Width="85" HorizontalAlignment="Left"
                       Margin="0,25,0,10" SnapsToDevicePixels="True" />
        </Grid>
        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Content="{x:Static res:LanguageResource.Content_FontSize}" />
        <ComboBox Grid.Column="1" Grid.Row="1" 
                  ItemsSource="{Binding Path=FontSizes}" 
                  SelectedItem="{Binding CurrentFontSize,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Center" 
                  Height="30">
        </ComboBox>
        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Content="{x:Static res:LanguageResource.Content_FontColor}" />
        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="6" Content="{x:Static res:LanguageResource.Content_Custom}" />
        <Rectangle Grid.Column="1" Grid.Row="2"  Stroke="Black" Fill="#FFFF96" Height="30" Cursor="Hand" >
            <Rectangle.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding Commands[SetFontColorCommand]}" CommandParameter="#FFFF96"></MouseBinding>
            </Rectangle.InputBindings>
        </Rectangle>
        <Rectangle  Grid.Row="3" Grid.Column="1" Stroke="Black" Fill="#FFA63F" Height="30" Cursor="Hand">
            <Rectangle.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding Commands[SetFontColorCommand]}" CommandParameter="#FFA63F"></MouseBinding>
            </Rectangle.InputBindings>
        </Rectangle>
        <Rectangle  Grid.Row="4" Grid.Column="1" Stroke="Black" Fill="Gray" Height="30" Cursor="Hand">
            <Rectangle.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding Commands[SetFontColorCommand]}" CommandParameter="Gray"></MouseBinding>
            </Rectangle.InputBindings>
        </Rectangle>
        <Rectangle  Grid.Row="5" Grid.Column="1" Stroke="Black" Fill="White" Height="30" Cursor="Hand" >
            <Rectangle.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding Commands[SetFontColorCommand]}" CommandParameter="White"></MouseBinding>
            </Rectangle.InputBindings>
        </Rectangle>
        <TextBlock Grid.Column="1" Grid.Row="6" Height="30" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="Hand">
            <TextBlock.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding Commands[SelectFontColorCommand]}"></MouseBinding>
            </TextBlock.InputBindings>
            <TextBlock.Background>
                <ImageBrush ImageSource="pack://application:,,,/NV.CT.UI.Controls;component/Icons/Color.png" Stretch="Uniform" />
            </TextBlock.Background>
        </TextBlock>
    </Grid>
</UserControl>