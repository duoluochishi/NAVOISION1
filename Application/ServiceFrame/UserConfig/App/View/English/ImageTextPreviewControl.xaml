<UserControl x:Class="NV.CT.UserConfig.View.English.ImageTextPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="toVisibilityConverter"></BooleanToVisibilityConverter>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Stretch" Margin="20,20,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="350*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="350*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"></ColumnDefinition>
            <ColumnDefinition Width="180*"></ColumnDefinition>
            <ColumnDefinition Width="300*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" CornerRadius="0"  BorderBrush="#5A5A89" />
        <StackPanel Grid.Row="0" Grid.Column="0" Tag="0" Orientation="Vertical" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" 
                    AllowDrop="True" DragEnter="StackPanel_DragEnter" DragOver="StackPanel_DragOver" Drop="StackPanel_Drop">
            <ListBox ItemsSource="{Binding LeftTopItems,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Style="{x:Null}" 
                     Margin="0,0,0,5" BorderThickness="0" Background="Transparent" Tag="0">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Height" Value="30"></Setter>
                        <Setter Property="BorderThickness" Value="0"></Setter>
                        <Setter Property="Background" Value="Transparent"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock x:Name="leftTopItem" Text="{Binding Name}" Visibility="{Binding Path=Visibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource toVisibilityConverter}}" 
                                       FontSize="{Binding DataContext.CurrentFontSize,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}" 
                                       Foreground="{Binding DataContext.CurrentFontColor,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}" 
                                       HorizontalAlignment="Left" PreviewMouseDown="Item_PreviewMouseDown" Tag="0">
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Margin="10,0,0,0"
                    AllowDrop="True" DragEnter="StackPanel_DragEnter" DragOver="StackPanel_DragOver" Drop="StackPanel_Drop">
            <TextBlock Text="{Binding DataContext.CenterTopName,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" 
                       FontSize="{Binding DataContext.CurrentFontSize,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" 
                       Foreground="{Binding DataContext.CurrentFontColor,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2" Tag="2" Orientation="Vertical" 
                    HorizontalAlignment="Right" VerticalAlignment="Top" 
                    AllowDrop="True" DragEnter="StackPanel_DragEnter" DragOver="StackPanel_DragOver" Drop="StackPanel_Drop">
            <ListBox Background="Transparent" ItemsSource="{Binding RightTopItems,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                     Style="{x:Null}" Margin="0,0,0,5" BorderThickness="0" Tag="2">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Height" Value="30"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                        <Setter Property="BorderThickness" Value="0"></Setter>
                        <Setter Property="Background" Value="Transparent"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" Visibility="{Binding Path=Visibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource toVisibilityConverter}}" 
                                       FontSize="{Binding DataContext.CurrentFontSize,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}" 
                                       Foreground="{Binding DataContext.CurrentFontColor,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}" 
                                       HorizontalAlignment="Left" PreviewMouseDown="Item_PreviewMouseDown" Tag="2">
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" Tag="4" Orientation="Vertical" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
            <TextBlock Text="{Binding DataContext.CenterRightName,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" 
                       FontSize="{Binding DataContext.CurrentFontSize,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" 
                       Foreground="{Binding DataContext.CurrentFontColor,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" ></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" 
             HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0">
            <TextBlock Text="{Binding DataContext.CenterLeftName,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" 
                FontSize="{Binding DataContext.CurrentFontSize,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" 
                Foreground="{Binding DataContext.CurrentFontColor,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2" Tag="4" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                    AllowDrop="True" DragEnter="StackPanel_DragEnter" DragOver="StackPanel_DragOver" Drop="StackPanel_Drop">
            <ListBox Background="Transparent" ItemsSource="{Binding RightBottomItems,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Style="{x:Null}" 
                      Margin="0,0,0,5" BorderThickness="0">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Height" Value="30"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                        <Setter Property="BorderThickness" Value="0"></Setter>
                        <Setter Property="Background" Value="Transparent"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" Visibility="{Binding Path=Visibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource toVisibilityConverter}}" 
                                       FontSize="{Binding DataContext.CurrentFontSize,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}" 
                                       Foreground="{Binding DataContext.CurrentFontColor,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}" 
                                       HorizontalAlignment="Left" PreviewMouseDown="Item_PreviewMouseDown" Tag="4">
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" 
                    HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,0">
            <TextBlock Text="{Binding DataContext.CenterBottomName,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" 
                       FontSize="{Binding DataContext.CurrentFontSize,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" 
                       Foreground="{Binding DataContext.CurrentFontColor,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" ></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Tag="6" Orientation="Vertical" 
                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    AllowDrop="True" DragEnter="StackPanel_DragEnter" DragOver="StackPanel_DragOver" Drop="StackPanel_Drop">
            <ListBox Background="Transparent" ItemsSource="{Binding LeftBottomItems,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Style="{x:Null}" 
                     Margin="0,0,0,5" BorderThickness="0">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Height" Value="30"></Setter>
                        <Setter Property="BorderThickness" Value="0"></Setter>
                        <Setter Property="Background" Value="Transparent"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" Visibility="{Binding Path=Visibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource toVisibilityConverter}}" 
                                       FontSize="{Binding DataContext.CurrentFontSize,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}" 
                                       Foreground="{Binding DataContext.CurrentFontColor,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}" 
                                       HorizontalAlignment="Left" PreviewMouseDown="Item_PreviewMouseDown" Tag="6">
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>