<UserControl x:Class="NV.CT.UserConfig.View.English.ImageTextTypeListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="1300" HorizontalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="2"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Style="{x:Null}" BorderThickness="0" Grid.Row="0" Background="Transparent" 
                 ItemsSource="{Binding ImageAnnotationTabs,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                 Margin="10,10,0,0" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"></Setter>
                    <Setter Property="BorderThickness" Value="1"></Setter>
                    <Setter Property="Margin" Value="0,0,0,0"></Setter>
                    <Setter Property="Padding" Value="0,0,0,0"></Setter>
                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Cursor="Hand" Width="200" CornerRadius="10,10,0,0" 
                                        BorderBrush="#3247E5" BorderThickness="0,0,0,0" 
                                        Background="Transparent" Panel.ZIndex="2">
                                    <Label Content="{Binding ImageAnnotationName}" Width="200" Height="50" 
                                           HorizontalContentAlignment="Center" VerticalContentAlignment="Top" 
                                           VerticalAlignment="Center" Padding="0,10,0,0" Background="Transparent">
                                        <Label.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.Commands[LoadImageAnnotationCommand],RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"
                                                  CommandParameter="{Binding ImageAnnotationName}"></MouseBinding>
                                        </Label.InputBindings>
                                    </Label>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <StackPanel Grid.Row="1" Height="2" Margin="11,-2,0,0" Orientation="Horizontal" HorizontalAlignment="Left" 
                    Width="{Binding ActualWidth,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Grid}}" >
            <Border HorizontalAlignment="Left" Width="{Binding LeftWidth,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></Border>
            <Border Height="3" Background="#3247E5" Panel.ZIndex="0" Width="200"></Border>
        </StackPanel>
    </Grid>
</UserControl>