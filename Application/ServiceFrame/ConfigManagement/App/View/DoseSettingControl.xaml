<UserControl x:Class="NV.CT.ConfigManagement.View.DoseSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"         
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"          
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
             xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"        
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent" >
    <Grid>
        <Border BorderThickness="1" CornerRadius="10" BorderBrush="#5A5A89" Background="Transparent" Margin="0,2,0,0"></Border>
        <Grid Margin="50,30,0,0" Height="420" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!-- Notice设置 -->
            <Grid Grid.Row="0" Height="50" VerticalAlignment="Top" Margin="20,0,0,0">
                <Label x:Name="lblNoticeTab" 
                       FontSize="15" 
                       FontWeight="Bold" 
                       Margin="0,8,0,10" 
                       Content="{x:Static res:LanguageResource.Content_NoticeSettingTitle}" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       Height="34" 
                       Foreground="#FFC6C6EC" />
                <Rectangle VerticalAlignment="Bottom" 
                           Grid.Column="0" 
                           Stroke="#3044D9" Height="3" 
                           StrokeThickness="3" 
                           Width="{Binding ElementName=lblNoticeTab,Path=ActualWidth}" 
                           HorizontalAlignment="Left" 
                           Margin="0,10,0,10" 
                           SnapsToDevicePixels="True" />
            </Grid>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center">
                <CheckBox Content="{x:Static res:LanguageResource.Content_IsNotification}" 
                          IsChecked="{Binding IsNotice,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                          Margin="38,0,0,0"
                          HorizontalContentAlignment="Right" 
                          HorizontalAlignment="Right" 
                          Foreground="White"/>
            </StackPanel>
            <!-- Alert设置 -->
            <Grid Grid.Row="2" Height="50" VerticalAlignment="Top" Margin="20,0,0,0">
                <Label x:Name="lblAlertTab" 
                       FontSize="15" 
                       FontWeight="Bold" 
                       Margin="0,8,0,10" 
                       Content="{x:Static res:LanguageResource.Content_AlertSettingTitle}" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       Height="34" 
                       Foreground="#FFC6C6EC" />
                <Rectangle VerticalAlignment="Bottom"  
                           Grid.Column="0" 
                           Stroke="#3044D9" 
                           Height="3" 
                           StrokeThickness="3" 
                           Width="{Binding ElementName=lblAlertTab,Path=ActualWidth}" 
                           HorizontalAlignment="Left" 
                           Margin="0,10,0,10" 
                           SnapsToDevicePixels="True" />
            </Grid>
            <Grid Grid.Row="3" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="100"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Static res:LanguageResource.Text_Adult}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="{x:Static res:LanguageResource.Text_Child}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"></TextBlock>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static res:LanguageResource.Text_CTDIvol}" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Margin="35,0,10,0"></TextBlock>
                <md:MarkableTextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource MarkableTextBox}" InputMethod.IsInputMethodEnabled="False" TextType="Decimal" Minimum="0" Maximum="99999999" Text="{Binding AdultCTDIVal,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Height="30" VerticalContentAlignment="Center"></md:MarkableTextBox>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="mGy" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"></TextBlock>
                <md:MarkableTextBox Grid.Row="1" Grid.Column="3" Style="{StaticResource MarkableTextBox}" InputMethod.IsInputMethodEnabled="False" TextType="Decimal" Minimum="0" Maximum="99999999" Text="{Binding ChildCTDIVal,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Height="30" VerticalContentAlignment="Center"></md:MarkableTextBox>
                <TextBlock Grid.Row="1" Grid.Column="4" Text="mGy" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"></TextBlock>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static res:LanguageResource.Text_DLP}" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Margin="35,0,10,0"></TextBlock>
                <md:MarkableTextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource MarkableTextBox}" InputMethod.IsInputMethodEnabled="False" TextType="Decimal" Minimum="0" Maximum="99999999" Text="{Binding AdultDLPVal,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Height="30" VerticalContentAlignment="Center"></md:MarkableTextBox>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="mGy*cm" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"></TextBlock>
                <md:MarkableTextBox Grid.Row="2" Grid.Column="3" Style="{StaticResource MarkableTextBox}" InputMethod.IsInputMethodEnabled="False" TextType="Decimal" Minimum="0" Maximum="99999999" Text="{Binding ChildDLPVal,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Height="30" VerticalContentAlignment="Center"></md:MarkableTextBox>
                <TextBlock Grid.Row="2" Grid.Column="4" Text="mGy*cm" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"></TextBlock>

                <Button Grid.Row="3" Grid.Column="3" Height="40" Content="{x:Static res:LanguageResource.Content_Save}" Command="{Binding Commands[SaveCommand]}"></Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>