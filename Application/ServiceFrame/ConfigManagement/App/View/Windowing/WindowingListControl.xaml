<UserControl
    x:Class="NV.CT.ConfigManagement.View.WindowingListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
    xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"   
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="ButtonStyle" BasedOn="{StaticResource NanoButtonStyle}" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource BaseBackgroundColor}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonBackground}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border Background="Transparent"  Margin="0,2,0,0" CornerRadius="10,10,10,10" BorderThickness="1,1,1,1" BorderBrush="#5A5A89" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="0"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10,0,0,0" >
                <Label Grid.ColumnSpan="2" 
                       Name="lblTabTitle" 
                       FontSize="16" FontWeight="Bold" 
                       Margin="0,0,0,0" 
                       Content="Windowing list"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       Height="34" 
                       Foreground="#FFC6C6EC" />
                <Rectangle Grid.Column="0" 
                     VerticalAlignment="Bottom" Stroke="#3044D9" 
                     Height="3" StrokeThickness="3" 
                     Width="{Binding ElementName=lblTabTitle,Path=ActualWidth}" HorizontalAlignment="Left"
                     Margin="-3,0,0,8" 
                     SnapsToDevicePixels="True" Visibility="Visible" />
            </Grid>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Collapsed">
                <Button  Height="40" Width="120" Opacity="1" Margin="0,0,10,0" 
                      Command="{Binding Commands[AddCommand]}" 
                      Content="{x:Static res:LanguageResource.Content_Add}" Style="{StaticResource ButtonStyle}"></Button>
                <Button  Height="40" Width="120" Opacity="1" Margin="0,0,10,0" 
                      Command="{Binding Commands[EditCommand]}" 
                      Content="{x:Static res:LanguageResource.Content_Edit}" Style="{StaticResource ButtonStyle}" IsEnabled="{Binding IsFactory}"></Button>
                <Button  Height="40" Width="120" Opacity="1" Margin="0,0,10,0" 
                      Command="{Binding Commands[DeleteCommand]}" 
                      Content="{x:Static res:LanguageResource.Content_Delete}" Style="{StaticResource ButtonStyle}" IsEnabled="{Binding IsFactory}"></Button>
            </StackPanel> 
            <!--  study列表组件 DataGrid  -->
            <DataGrid Grid.Row="2" ItemsSource="{Binding WindowingList}" SelectedItem="{Binding SelectedWindowing, Mode=TwoWay}" SelectionMode="Single"
                      Style="{StaticResource CommonDataGrid}" Margin="0 5 5 5">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="{x:Static res:LanguageResource.Content_BodyPart}" Width="*"   >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding BodyPart}" HorizontalAlignment="Left" Margin="15,0,0,0" Style="{StaticResource DataGridContentTextBlock}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="250" MinWidth="100" Header="{x:Static res:LanguageResource.Content_WindowWidth}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding WindowWidth}" HorizontalAlignment="Left" Margin="15,0,0,0" Style="{StaticResource DataGridContentTextBlock}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="250" MinWidth="100"  Header="{x:Static res:LanguageResource.Content_WindowLevel}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding WindowLevel}" HorizontalAlignment="Left" Margin="15,0,0,0"  Style="{StaticResource DataGridContentTextBlock}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="200" MinWidth="100" Header="{x:Static res:LanguageResource.Content_Shortcut}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Shortcut}" HorizontalAlignment="Left" Margin="15,0,0,0" Style="{StaticResource DataGridContentTextBlock}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="*" MinWidth="100" Header="{x:Static res:LanguageResource.Content_Remark}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Description}" HorizontalAlignment="Left" Margin="15,0,0,0" Style="{StaticResource DataGridContentTextBlock}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>