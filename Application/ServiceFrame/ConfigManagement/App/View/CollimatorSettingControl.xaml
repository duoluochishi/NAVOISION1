<UserControl
    x:Class="NV.CT.ConfigManagement.View.CollimatorSettingControl"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
     xmlns:comboBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableComboBox;assembly=MaterialDesignThemes.Wpf"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"    
    d:DesignHeight="650"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>        
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource  NanoButtonStyle}">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,55,85,0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>
    <Border Background="Transparent"  Margin="0,2,0,0" CornerRadius="10,10,10,10" BorderThickness="1,1,1,1" BorderBrush="#5A5A89" >
        <StackPanel Orientation="Vertical" Width="750" HorizontalAlignment="Left" Margin="50 30 0 0">
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="20 0 0 0">
                <StackPanel Orientation="Vertical">
                    <Label Grid.ColumnSpan="2" Name="lblTabTitle" 
                          FontSize="16" FontWeight="Bold" 
                          Margin="0,8,0,0" 
                          Content="Collimator setting"
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Center" 
                          Height="34" 
                          Foreground="#FFC6C6EC" />
                    <Rectangle Grid.Column="0" 
                          VerticalAlignment="Bottom" Stroke="#3044D9" 
                          Height="3" StrokeThickness="3" 
                          Width="{Binding ElementName=lblTabTitle,Path=ActualWidth}" HorizontalAlignment="Left"
                          Margin="0,0,0,-5" 
                          SnapsToDevicePixels="True" Visibility="Visible" />
                </StackPanel>

                <Grid Margin="0 15 0 0" Height="42">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Content="Collimator min"/>
                    <md:MarkableTextBox  Grid.Column="2" TextType="Decimal" Minimum="0" Maximum="4096" FontSize="14px"  VerticalContentAlignment="Center"   Margin="0 0 5 0" Text="{Binding MinCollimator,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid Margin="0 15 0 0" Height="42">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Content="Collimator max"/>
                    <md:MarkableTextBox  Grid.Column="2" TextType="Decimal" Minimum="0" Maximum="4096" FontSize="14px"  VerticalContentAlignment="Center"   Margin="0 0 5 0" Text="{Binding MaxCollimator,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid Margin="0 15 0 0" Height="42">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Content="Module count"/>
                    <md:MarkableTextBox  Grid.Column="2" TextType="Decimal" Minimum="24" Maximum="300" FontSize="14px"  VerticalContentAlignment="Center"   Margin="0 0 5 0" Text="{Binding ModuleCount,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid Margin="0 15 0 0" Height="46">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Content="CollimatorMode"/>
                    <ListView Grid.Column="2" FontSize="14px" Margin="0 0 5 0" ItemsSource="{Binding CollimatorModes}" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Margin="0,0,0,0"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Stretch"                                                                   
                                         Cursor="Hand"
                                         Orientation="Horizontal">
                                </WrapPanel>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Display}" 
                                     IsChecked="{Binding IsChecked,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="2,0,0,0"
                                     HorizontalContentAlignment="Left" 
                                     HorizontalAlignment="Left" 
                                     Foreground="White"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ListView>
                </Grid>
                <Grid Margin="0 15 0 0" Height="42">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Content="Max front blade move step"/>
                    <md:MarkableTextBox  Grid.Column="2" TextType="Decimal" Minimum="0" Maximum="1000000" FontSize="14px" IsEnabled="False" VerticalContentAlignment="Center" Margin="0 0 5 0" Text="{Binding MaxFrontBladeMoveStep,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid Margin="0 15 0 0" Height="42">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Content="Max rear blade move step"/>
                    <md:MarkableTextBox  Grid.Column="2" TextType="Decimal" Minimum="0" Maximum="1000000" FontSize="14px" IsEnabled="False" VerticalContentAlignment="Center" Margin="0 0 5 0" Text="{Binding MaxRearBladeMoveStep,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid Margin="0 15 0 0" Height="42">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Content="Max bowtie move step"/>
                    <md:MarkableTextBox  Grid.Column="2" TextType="Decimal" Minimum="0" Maximum="1000000" FontSize="14px" IsEnabled="False" VerticalContentAlignment="Center" Margin="0 0 5 0" Text="{Binding MaxBowtieMoveStep,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </StackPanel>
            <Button Style="{StaticResource SaveButtonStyle}" Command="{Binding Commands[SaveCommand]}" Content="{x:Static res:LanguageResource.Content_Save}" />
        </StackPanel>
    </Border>
</UserControl>