<UserControl
    x:Class="NV.CT.ConfigManagement.View.KvMaCoefficientControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
    xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"   
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="SearchButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignToolButton}">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
        </Style>
        <Style x:Key="ButtonStyle" BasedOn="{StaticResource NanoButtonStyle}" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource BaseBackgroundColor}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonBackground}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border Background="Transparent"  Margin="0,2,0,0" CornerRadius="10,10,10,10" BorderThickness="1,1,1,1" BorderBrush="#5A5A89" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10,0,0,0" >
                <Label Grid.ColumnSpan="2" 
                       Name="lblTabTitle" 
                       FontSize="16" FontWeight="Bold" 
                       Margin="0,0,0,0" 
                       Content="Kv Ma Coefficient list"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       Height="34" 
                       Foreground="#FFC6C6EC" />
                <Rectangle Grid.Column="0" 
                     VerticalAlignment="Bottom" Stroke="#3044D9" 
                     Height="3" StrokeThickness="3" 
                     Width="{Binding ElementName=lblTabTitle,Path=ActualWidth}" HorizontalAlignment="Left"
                     Margin="-3,0,0,8" 
                     SnapsToDevicePixels="True" Visibility="Visible" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="490"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0" Margin="10 0 0 0">
                    <TextBox Width="450" Height="38"
                            x:Name="txtSearchBox"                          
                            wpf:HintAssist.Hint="Please enter what you want to search"
                            wpf:TextFieldAssist.DecorationVisibility="Visible"
                            wpf:TextFieldAssist.TextFieldCornerRadius="15" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" Background="Transparent">
                        <i:Interaction.Triggers>
                            <i:KeyTrigger FiredOn="KeyUp" Key="Return">
                                <i:InvokeCommandAction Command="{Binding Commands[SearchCommand]}" CommandParameter="{Binding ElementName=txtSearchBox,Path=Text}"></i:InvokeCommandAction>
                            </i:KeyTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <Button Command="{Binding Commands[SearchCommand]}" 
                         CommandParameter="{Binding ElementName=txtSearchBox, Path=Text}"
                         Style="{StaticResource SearchButtonStyle}" Margin="-50,0,0,0">
                        <wpf:PackIcon Foreground="White" Kind="Magnify" Opacity="1" Margin="0,0,0,0" />
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button  Height="40" Width="120" Opacity="1" Margin="0,0,10,0" 
                      Command="{Binding Commands[AddCommand]}" 
                      Content="{x:Static res:LanguageResource.Content_Add}" Style="{StaticResource ButtonStyle}"></Button>
                    <Button  Height="40" Width="120" Opacity="1" Margin="0,0,10,0" 
                      Command="{Binding Commands[EditCommand]}"                      
                      Content="{x:Static res:LanguageResource.Content_Edit}" Style="{StaticResource ButtonStyle}"></Button>
                    <Button  Height="40" Width="120" Opacity="1" Margin="0,0,10,0" 
                      Command="{Binding Commands[DeleteCommand]}" 
                      Content="{x:Static res:LanguageResource.Content_Delete}" Style="{StaticResource ButtonStyle}"></Button>
                </StackPanel>
            </Grid>
            <!--  study列表组件 DataGrid  -->
            <DataGrid Grid.Row="2" ItemsSource="{Binding Nodes}" SelectedItem="{Binding SelectedNode, Mode=TwoWay}" SelectionMode="Single"
                      Style="{StaticResource CommonDataGrid}" Margin="0 5 5 5">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="100" MinWidth="100"  Header="KV">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="15,0,0,0" Text="{Binding KV}" HorizontalAlignment="Left"  Style="{StaticResource DataGridContentTextBlock}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="100" MinWidth="100" Header="MA">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding MA}" Margin="15,0,0,0" Style="{StaticResource DataGridContentTextBlock}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="*" MinWidth="200" Header="Coefficients">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SourceDisplay}" Margin="15,0,0,0" Style="{StaticResource DataGridContentTextBlock}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>