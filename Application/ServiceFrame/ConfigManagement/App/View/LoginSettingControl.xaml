<UserControl x:Class="NV.CT.ConfigManagement.View.LoginSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NV.CT.ConfigManagement.View"
             mc:Ignorable="d" 
             xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"   xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"    
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource  NanoButtonStyle}">
			<Setter Property="Width" Value="150"/>
			<Setter Property="Height" Value="40"/>
			<Setter Property="Margin" Value="0,35,85,0"/>
			<Setter Property="HorizontalAlignment" Value="Right"/>
		</Style>
	</UserControl.Resources>
	<Border Background="Transparent" Margin="0,2,0,0" CornerRadius="10,10,10,10" BorderThickness="1,1,1,1" BorderBrush="#5A5A89" >
		<StackPanel Orientation="Vertical" Width="850" HorizontalAlignment="Left" Margin="50 30 0 0">
			<StackPanel Grid.Row="1" Orientation="Vertical" Margin="20 0 0 0">
				<StackPanel Orientation="Vertical">
					<Label Grid.ColumnSpan="2" Name="lblTabTitle" 
                          FontSize="16" FontWeight="Bold" 
                          Margin="0,8,0,0" 
                          Content="Login Setting"
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Center" 
                          Height="34" 
                          Foreground="#FFC6C6EC" />
					<Rectangle Grid.Column="0" 
                          VerticalAlignment="Bottom" Stroke="#3044D9" 
                          Height="3" StrokeThickness="3" 
                          Width="{Binding ElementName=lblTabTitle,Path=ActualWidth}" HorizontalAlignment="Left"
                          Margin="0,0,0,-5" 
                          SnapsToDevicePixels="True" Visibility="Visible" />
				</StackPanel>
				<Grid Margin="0 15 0 0" Height="46">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="40" />
						<ColumnDefinition Width="300" />
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="80" />
					</Grid.ColumnDefinitions>
					<Label Grid.Column="1" Content="Apply Strong Password"/>
					<Grid Grid.Column="2"  Margin="0 0 5 0" >
						<CheckBox FontSize="14px" Content="alphabet and numeric" 
                                    IsChecked="{Binding ApplyStrongPassword,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="2,0,0,0"
                                    HorizontalContentAlignment="Left" 
                                    HorizontalAlignment="Left" 
                                    Foreground="White"/>
					</Grid>
				</Grid>
				<Grid Margin="0 15 0 0" Height="42">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="40" />
						<ColumnDefinition Width="300" />
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="80" />
					</Grid.ColumnDefinitions>
					<Label Grid.Column="1" Content="Min Password Length"/>
					<md:MarkableTextBox  Grid.Column="2" FontSize="14px" TextType="Decimal" VerticalContentAlignment="Center" Margin="0 0 5 0" Text="{Binding MinPasswordLength,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
					<Label Grid.Column="3" Content=""/>
				</Grid>

				<Grid Margin="0 15 0 0" Height="42">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="40" />
						<ColumnDefinition Width="300" />
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="80" />
					</Grid.ColumnDefinitions>
					<Label Grid.Column="1" Content="Max Password Length"/>
					<md:MarkableTextBox  Grid.Column="2" FontSize="14px" TextType="Decimal" VerticalContentAlignment="Center"  Margin="0 0 5 0" Text="{Binding MaxPasswordLength,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
					<Label Grid.Column="3" Content=""/>
				</Grid>

				<Grid Margin="0 15 0 0" Height="42">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="40" />
						<ColumnDefinition Width="300" />
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="80" />
					</Grid.ColumnDefinitions>
					<Label Grid.Column="1" Content="Wrong Password Max Try Times"/>
					<md:MarkableTextBox  Grid.Column="2" FontSize="14px" TextType="Decimal" VerticalContentAlignment="Center"  Margin="0 0 5 0" Text="{Binding WrongPassTryTimes,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
					<Label Grid.Column="3" Content=""/>
				</Grid>

			</StackPanel>
			<Button Style="{StaticResource SaveButtonStyle}" Command="{Binding Commands[SaveCommand]}" Content="{x:Static res:LanguageResource.Content_Save}" />
		</StackPanel>
	</Border>
</UserControl>
