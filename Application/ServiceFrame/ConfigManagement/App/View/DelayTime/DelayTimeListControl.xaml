<UserControl
    x:Class="NV.CT.ConfigManagement.View.DelayTimeListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:markableComboBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableComboBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"   
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>
    <Border Background="Transparent"  Margin="0,2,0,0" CornerRadius="10,10,10,10" BorderThickness="1,1,1,1" BorderBrush="#5A5A89" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="10,0,0,0" >
                <Label Grid.ColumnSpan="2" 
                       Name="lblTabTitle" 
                       FontSize="16" FontWeight="Bold" 
                       Margin="0,0,0,0" 
                       Content="Delay time list"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       Height="34" 
                       Foreground="#FFC6C6EC" />
                <Rectangle Grid.Column="0" 
                     VerticalAlignment="Bottom" Stroke="#3044D9" 
                     Height="3" StrokeThickness="3" 
                     Width="{Binding ElementName=lblTabTitle,Path=ActualWidth}" HorizontalAlignment="Left"
                     Margin="-3,0,0,8" 
                     SnapsToDevicePixels="True" Visibility="Visible" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="490"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0" Margin="10 0 0 0">
                    <Label VerticalAlignment="Center"
                        Content="ScanType" />
                    <markableComboBox:MarkableComboBox   
                         VerticalContentAlignment="Center"
                         DisplayMemberPath="Value"                        
                         SelectedValuePath="Key"
                         Margin="5 0 0 0"
                         MinWidth="150"
                         Style="{StaticResource MarkableComboBox}">                        
                    </markableComboBox:MarkableComboBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button  Height="40" Width="120" Opacity="1" Margin="0,0,10,0" 
                      Command="{Binding Commands[RoleAddCommand]}" 
                      Content="{x:Static res:LanguageResource.Content_Add}"></Button>
                    <Button  Height="40" Width="120" Opacity="1" Margin="0,0,10,0" 
                      Command="{Binding Commands[RoleEditCommand]}" 
                      CommandParameter="{Binding CurrentSelectedItem,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                      Content="{x:Static res:LanguageResource.Content_Edit}"></Button>
                    <Button  Height="40" Width="120" Opacity="1" Margin="0,0,10,0" 
                      Command="{Binding Commands[RoleDeleteCommand]}" 
                      CommandParameter="{Binding CurrentSelectedItem,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                      Content="{x:Static res:LanguageResource.Content_Delete}"></Button>
                </StackPanel>
            </Grid>
            <!--  study列表组件 DataGrid  -->
            <DataGrid Grid.Row="2" ItemsSource="{Binding VStudies}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" SelectionMode="Single"
                      Style="{StaticResource CommonDataGrid}" Margin="0 5 5 5">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="*" MinWidth="100"  Header="ScanType">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5,0,0,0" Text="{Binding ScanType}"  Style="{StaticResource DataGridContentTextBlock}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="250" MinWidth="100" Header="FrameTime">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FrameTime}" Style="{StaticResource DataGridContentTextBlock}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="250" MinWidth="100" Header="TDelay">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TDelay}"   Style="{StaticResource DataGridContentTextBlock}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="250" MinWidth="100" Header="RDelay">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding RDelay}" HorizontalAlignment="Left" Margin="10,0,0,0" Style="{StaticResource DataGridContentTextBlock}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="250" MinWidth="100" Header="SpotDelay">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SpotDelay}" HorizontalAlignment="Left" Margin="10,0,0,0" Style="{StaticResource DataGridContentTextBlock}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="250" MinWidth="100" Header="CorlDelay">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CorlDelay}" HorizontalAlignment="Left" Margin="10,0,0,0"   Style="{StaticResource DataGridContentTextBlock}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>