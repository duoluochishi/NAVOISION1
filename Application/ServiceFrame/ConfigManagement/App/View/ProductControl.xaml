<UserControl x:Class="NV.CT.ConfigManagement.View.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
             xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
             xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes" 
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1000">
    <Grid Name="grdContainer"  Margin="0,2,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="275*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.RowSpan="2" 
                            BorderThickness="1" CornerRadius="10" 
                            BorderBrush="#5A5A89" Background="#16162B" />
            <Grid Grid.Row="0" Height="50" VerticalAlignment="Top" Margin="80,30,0,0">
                <Label FontSize="15" FontWeight="Bold" Margin="0,8,0,10" Content="Product" 
                                       HorizontalAlignment="Left" x:Name="lblTabTitle" VerticalAlignment="Center" 
                                       Grid.ColumnSpan="2" Height="34" 
                                       Foreground="#FFC6C6EC" />
                <Rectangle VerticalAlignment="Bottom"  Grid.Column="0" 
                                            Stroke="#3044D9" Height="3" 
                                            StrokeThickness="3" Width="{Binding ElementName=lblTabTitle,Path=ActualWidth}" 
                                            HorizontalAlignment="Left" 
                                            Margin="0,10,0,10" 
                                            SnapsToDevicePixels="True" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0" Name="grdErrorEditor" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="255" />
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="110" />
                    <RowDefinition Height="50" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Content="{x:Static res:LanguageResource.Content_ImplementationClassUID}"></Label>
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Content="{x:Static res:LanguageResource.Content_SoftwareName}"></Label>
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Content="{x:Static res:LanguageResource.Content_VersionName}"></Label>
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="1" Content="{x:Static res:LanguageResource.Content_DetailName}"></Label>
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="6" Grid.Column="1" Content="{x:Static res:LanguageResource.Content_Manufacturer}"></Label>
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="7" Grid.Column="1" Content="{x:Static res:LanguageResource.Content_ManufacturerModel}"></Label>
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="8" Grid.Column="1" Content="{x:Static res:LanguageResource.Content_DeviceSerialNumber}"></Label>
                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="9" Grid.Column="1" Content="{x:Static res:LanguageResource.Content_StationName}"></Label>

                <Label Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" Content="{Binding ProductInfo.ImplementationClassUID}"></Label>
                <Label Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" Content="{Binding ProductInfo.SoftwareName}"></Label>
                <Label Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" Content="{Binding ProductInfo.VersionName}"></Label>
                <Label Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left" Content="{Binding ProductInfo.DetailName}"></Label>
                <Label Grid.Row="6" Grid.Column="2" HorizontalAlignment="Left" Content="{Binding ProductInfo.Manufacturer}"></Label>
                <Label Grid.Row="7" Grid.Column="2" HorizontalAlignment="Left" Content="{Binding ProductInfo.ManufacturerModel}"></Label>
                <Label Grid.Row="8" Grid.Column="2" HorizontalAlignment="Left" Content="{Binding ProductInfo.DeviceSerialNumber}"></Label>
                <Label Grid.Row="9" Grid.Column="2" HorizontalAlignment="Left" Content="{Binding ProductInfo.StationName}"></Label>
            </Grid>
        </Grid>
    </Grid>
</UserControl>