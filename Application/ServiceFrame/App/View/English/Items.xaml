<UserControl x:Class="NV.CT.ServiceFrame.View.English.Items"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
             xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="340">
    <UserControl.Resources>
        <!--<Style x:Key="TaskListButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="FontSize" Value="15px"/>
            <Setter Property="Foreground" Value="{StaticResource BaseForegroundColor}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="{StaticResource ButtonMainBackground}" />           
            <Setter Property="Margin" Value="0 2 0 0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10 0 0 0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>-->
        <Style x:Key="TaskListBoxItemStyle" TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource MaterialDesignListBoxItem}">
            <Setter Property="Padding" Value="8 0 8 0"/>            
        </Style>
        <Style x:Key="TaskListBoxStyle" TargetType="{x:Type ListView}" BasedOn="{StaticResource MaterialDesignListBox}">
            <Setter Property="ItemContainerStyle" Value="{StaticResource TaskListBoxItemStyle}" />
            <Setter Property="Background" Value="#16162B" />           
            <Setter Property="MinHeight" Value="30" />
            <Setter Property="Margin" Value="0 0 0 0" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>
    <Grid x:Name="itemPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="42"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" CornerRadius="10 10 0 0" Background="#2A2A47">
            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Cursor="Hand" Height="42">
                <TextBlock FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Title}" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Background="Transparent" BorderThickness="1" BorderBrush="#5A5A89" 
                CornerRadius="0,0,10,10" 
                VerticalAlignment="Stretch"
                Margin="0,0,0,0">
            <StackPanel Orientation="Vertical">
                <ListView  x:Name="lsItems"  Style="{StaticResource TaskListBoxStyle}" SelectedItem="{Binding SelectedItem}"
                           ItemsSource="{Binding Path=Items,Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="36">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="36" />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Path=Category,Mode=TwoWay}" Margin="5 0 0 0" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding Commands[SwitchControlCommand]}" CommandParameter="{Binding SelectedItem, ElementName=lsItems}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>