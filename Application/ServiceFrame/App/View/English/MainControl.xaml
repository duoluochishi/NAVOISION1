<UserControl x:Class="NV.CT.ServiceFrame.View.English.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NV.CT.ServiceFrame.View.English"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{DynamicResource MaterialDesignPaper}" CornerRadius="0">
        <Grid Grid.Column="1" Name="mainStackPanel"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15.0*"/>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="85.0*"/>
            </Grid.ColumnDefinitions>
            <local:Items x:Name="itemsControl" Margin="5,5,0,5" Grid.Column="0"></local:Items>
            <Border Margin="0,5,5,5" Grid.Column="2" Background="{DynamicResource MaterialDesignPaper}" BorderThickness="0" CornerRadius="10" BorderBrush="#5a5a89">
                <Grid x:Name="gdContent">
                    <ContentControl Content="{Binding UiContent}" />
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>