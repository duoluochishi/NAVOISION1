<Window x:Class="NV.CT.Print.View.ProtocolSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
        xmlns:local="clr-namespace:NV.CT.Print.View"
        mc:Ignorable="d"
        xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language" 
        xmlns:converter="clr-namespace:NV.CT.UI.Controls.Converter;assembly=NV.CT.UI.Controls"
        Width="800" Height="600" Background="Transparent" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" 
        Title="Print protocol settings">
    <Window.Resources>
        <converter:BoolToStyleConverter x:Key="bool2StyleConverter"></converter:BoolToStyleConverter>
        <!--<Style x:Key="NormalButton" TargetType="{x:Type Button}"/>-->
    </Window.Resources>
    <Border CornerRadius="10" Style="{StaticResource WindowsBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Style="{StaticResource WindowContentBorder}" />
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image HorizontalAlignment="Left" Source="pack://application:,,,/NV.CT.UI.Controls;component/Icons/Custom.png" Stretch="Fill" Width="15" Height="15" Margin="10,5,0,4" />
                <TextBlock Style="{StaticResource TileTextBlock}" Text="{x:Static res:LanguageResource.Content_PrintProtocolSettings}" Margin="30,0,0,0"/>
                <Button Grid.Column="1" Style="{StaticResource TileCloseButtonStyle}" 
                        ToolTip="{x:Static res:LanguageResource.Content_Close}"
                        Command="{Binding Commands[CloseCommand]}"              
                        CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                    <Path Style="{StaticResource TileClosePathStyle}" />
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*" />
                    <ColumnDefinition Width="60*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="#3b3b5f" BorderThickness="1" Background="#14142B" CornerRadius="10" Margin="8,8,8,0">
                        <ListBox Style="{StaticResource MaterialDesignListBox}" 
                                 ItemsSource="{Binding PrintProtocolSource}" 
                                 SelectedItem="{Binding CurrentPrintProtocolModel}" SelectionMode="Single"
                                 BorderThickness="0" BorderBrush="#3b3b5f" Margin="0,6,0,6"
                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding Commands[ProtocolSelectionChangedCommand]}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                                        <Path Width="20" Height="20" Fill="White" Stretch="Uniform" 
                                              Style="{Binding Path=IsSystem, Converter={StaticResource bool2StyleConverter}, ConverterParameter='Lock:Unlock'}">
                                        </Path>
                                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Left" Margin="8,0,0,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" FlowDirection="LeftToRight">
                        <Button x:Name="btnAdd" Command="{Binding Commands[AddNewCommand]}" Content="{x:Static res:LanguageResource.Content_Add}"
                                Style="{StaticResource CommonButton}" Margin="50,0,0,0" />

                        <Button Command="{Binding Commands[DeleteCommand]}" IsEnabled="{Binding IsEnabled}" Content="{x:Static res:LanguageResource.Content_Delete}"
                                Style="{StaticResource CommonButton}" Margin="10,0,0,0" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />  <!--//0 Name-->
                        <RowDefinition Height="50" />  <!--//1 Body part-->
                        <RowDefinition Height="50" />  <!--//2 Is Default-->
                        <RowDefinition Height="201" /> <!--//3 Cells Selection-->
                        <RowDefinition Height="50" />  <!--//4 Set Row and Column-->
                        <RowDefinition Height="*"/>    <!--//5 Empty-->
                        <RowDefinition Height="50" />  <!--//6 Commands-->
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="44*"/>
                            <ColumnDefinition Width="56*"/>
                        </Grid.ColumnDefinitions>
                        <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource MandatoryInputTextBlock}"/>
                            <TextBlock Text="{x:Static res:LanguageResource.Content_Name}" Margin="1,0,0,0"
                                   Style="{StaticResource MandatoryInputLabelTextBlock}" />
                        </WrapPanel>
                        <md:MarkableTextBox Grid.Column="1" MaxLength="20" Style="{StaticResource MarkableTextBox}" MarkStatus="{Binding NameMarkStatus}"
                                            IsEnabled="{Binding IsEnabled}" Margin="0,0,8,0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <i:InvokeCommandAction Command="{Binding Commands[NameChangedCommand], Mode=TwoWay}"  />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <TextBox.Text>
                                <Binding Path="CurrentPrintProtocolModel.Name" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True"/>
                            </TextBox.Text>
                        </md:MarkableTextBox>
                    </Grid>
                    <Grid Grid.Row="1" Style="{StaticResource InfomationGrid}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="44*"/>
                            <ColumnDefinition Width="56*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{x:Static res:LanguageResource.Content_BodyPart}" Style="{StaticResource InputLabelTextBlock}" 
                           Margin="8,0,0,0" />
                        <ComboBox Grid.Column="1" ItemsSource="{Binding BodyParts}" Margin="0,0,8,0"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectedValuePath="Key" DisplayMemberPath="Value">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding Commands[BodyPartSelectionChangedCommand]}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>                            
                            <ComboBox.SelectedValue>
                                <Binding Path="SelectedBodyPart" />
                            </ComboBox.SelectedValue>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="2" Style="{StaticResource InfomationGrid}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <CheckBox Content="{x:Static res:LanguageResource.Content_IsDefault}" Width="120" HorizontalAlignment="Left"
                                  IsChecked="{Binding CurrentPrintProtocolModel.IsDefault}" Margin="8,0,0,0" />
                    </Grid>
                    <Grid Grid.Row="3" Style="{StaticResource InfomationGrid}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <ItemsControl Background="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Width="201" Height="201" 
                                      ItemsSource="{Binding CellList}" IsEnabled="{Binding IsEnabled}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="1" BorderBrush="Black" Width="20" Height="20">
                                        <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AllowDrop="False" 
                                            PreviewMouseLeftButtonUp="OnCellMouseLeftButtonUp"
                                            PreviewMouseLeftButtonDown="OnCellMouseLeftButtonDown"
                                            PreviewMouseMove="OnCellMouseMove"
                                            Tag="{Binding}" Background="{Binding CellColor, Mode=TwoWay}">
                                        <!--<i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PreviewMouseUp">
                                                <i:InvokeCommandAction Command="{Binding Commands[CellMouseUpCommand]}" />
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="PreviewMouseDown">
                                                <i:InvokeCommandAction Command="{Binding Commands[CellMouseDownCommand]}" />
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="PreviewMouseMove">
                                                <i:InvokeCommandAction Command="{Binding Commands[CellMouseMoveCommand]}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>-->
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                    <Grid Grid.Row="4" Style="{StaticResource InfomationGrid}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="44*"/>
                            <ColumnDefinition Width="56*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="{x:Static res:LanguageResource.Content_Row}" Style="{StaticResource InputLabelTextBlock}" Margin="8,0,0,0" />
                            <md:MarkableTextBox Style="{StaticResource MarkableTextBox}" IsEnabled="{Binding IsEnabled}" MaxLength="2" 
                                                Minimum="1" Maximum="10" TextType="Decimal" Margin="8,0,0,0" Width="80">
                                <TextBox.Text>
                                    <Binding Path="CurrentRowNumber" NotifyOnSourceUpdated="True" UpdateSourceTrigger="PropertyChanged" 
                                             ValidatesOnDataErrors="True" Mode="TwoWay"/>
                                </TextBox.Text>
                            </md:MarkableTextBox>                             
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{x:Static res:LanguageResource.Content_Column}" Style="{StaticResource InputLabelTextBlock}" Margin="8,0,0,0" />
                            <md:MarkableTextBox Style="{StaticResource MarkableTextBox}" IsEnabled="{Binding IsEnabled}" MaxLength="2" 
                                                Minimum="1" Maximum="10" TextType="Decimal" Margin="8,0,0,0" Width="80">
                                <TextBox.Text>
                                    <Binding Path="CurrentColumnNumber" NotifyOnSourceUpdated="True" UpdateSourceTrigger="PropertyChanged" 
                                             ValidatesOnDataErrors="True"  Mode="TwoWay"/>
                                </TextBox.Text>
                            </md:MarkableTextBox>                          
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="6" Style="{StaticResource InfomationGrid}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <Button Command="{Binding Commands[CloseCommand]}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Content="{x:Static res:LanguageResource.Content_Cancel}"
                                Style="{StaticResource CommonButton}" Margin="10,0,0,0" />
                            <Button Command="{Binding Commands[SaveCommand]}" Content="{x:Static res:LanguageResource.Content_Save}"
                                Style="{StaticResource CommonButton}" Margin="10,0,0,0" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
