<UserControl x:Class="NV.CT.Print.View.SelectPagesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NV.CT.Print.View"
             xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/> <!-- 0 //Print Section -->
            <RowDefinition Height="50"/> <!-- 1 //Select Pages -->
            <RowDefinition Height="300"/> <!-- 2 //Pages List -->
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock x:Name="lblPrint" Text="{x:Static res:LanguageResource.Content_Print}" 
                           Style="{StaticResource SectionTitleTextBlock}" Margin="8,0,0,0"/>
            <Rectangle Width="{Binding ElementName=lblPrint,Path=ActualWidth}"
                           Style="{StaticResource SectionTitleUnderlineRectangle}" Margin="8,0,0,14"/>
        </Grid>
        <Grid Grid.Row="1" Style="{StaticResource InfomationGrid}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="36*"/>
                <ColumnDefinition Width="64*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{x:Static res:LanguageResource.Content_SelectPages}" Style="{StaticResource InputLabelTextBlock}" 
                           Margin="8,0,0,0" />
            <CheckBox Grid.Column="1" Content="{x:Static res:LanguageResource.Content_SelectAll}" Width="120" HorizontalAlignment="Left"
                          IsChecked="{Binding SelectAll, Mode=TwoWay}" Margin="8,0,8,0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Checked">
                        <i:InvokeCommandAction Command="{Binding Commands[SelectAllChangedCommand]}" CommandParameter="true"/>
                    </i:EventTrigger>
                    <i:EventTrigger EventName="Unchecked">
                        <i:InvokeCommandAction Command="{Binding Commands[SelectAllChangedCommand]}" CommandParameter="false"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </CheckBox>
        </Grid>
        <Grid Grid.Row="2" Style="{StaticResource InfomationGrid}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="36*"/>
                <ColumnDefinition Width="64*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" BorderBrush="#3b3b5f" BorderThickness="1" Background="#14142B" CornerRadius="10" Margin="0,0,8,0">
                <ListBox Style="{StaticResource MaterialDesignListBox}" ItemsSource="{Binding PageWithCheckModelList}" SelectionMode="Single"
                         BorderThickness="0" BorderBrush="#3b3b5f" Margin="0,0,8,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding DisplayPageNumber}" IsChecked="{Binding IsChecked}" HorizontalAlignment="Stretch"
                                      Checked="OnSelectPageCheckChanged" Unchecked="OnSelectPageCheckChanged" Width="204"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

    </Grid>
</UserControl>
