<UserControl
	x:Class="NV.CT.Recon.Layout.ReconControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:extensions="clr-namespace:NV.CT.Recon.Extensions"
	xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:local="clr-namespace:NV.CT.Recon.View"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
	xmlns:view="clr-namespace:NV.CT.UI.Exam.View;assembly=NV.CT.UI.Exam"
	xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
	x:Name="RTDPanelContainer"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.Resources>

		<Style
			x:Key="CircleButton"
			BasedOn="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
			TargetType="{x:Type Button}">
			<Setter Property="Width" Value="60" />
			<Setter Property="Height" Value="60" />
			<Setter Property="FontSize" Value="15px" />
			<Style.Triggers>
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Background" Value="#5a5a89" />
				</Trigger>
				<Trigger Property="IsEnabled" Value="True">
					<Setter Property="Background" Value="#1665D8" />
				</Trigger>
			</Style.Triggers>
		</Style>

	</UserControl.Resources>
	<AdornerDecorator>
		<Grid Background="#05050F">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="10" />
				<ColumnDefinition Width="300" />
			</Grid.ColumnDefinitions>

			<!--  左侧图像显示和Toolbar  -->
			<Border
				Grid.Column="0"
				Margin="10,0,0,0"
				BorderThickness="0"
				CornerRadius="10 10 10 10"
				Style="{StaticResource WindowsBorder}">

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<!--<ColumnDefinition Width="5" />
                        <ColumnDefinition Width="80" />-->
					</Grid.ColumnDefinitions>

					<Border
						Grid.Column="0"
						Background="Black"
						CornerRadius="10"
						Style="{StaticResource WindowsBorder}">
						<Grid>
							<ContentControl
								Name="container2d"
								HorizontalAlignment="Stretch"
								VerticalAlignment="Stretch"
								HorizontalContentAlignment="Stretch"
								VerticalContentAlignment="Stretch"
								AllowDrop="True"
								Content="{Binding AdvancedReconControl.WindowsFormsHost}" />
						</Grid>
					</Border>

					<!--<Border
                        Grid.Column="2"
                        Background="Black"
                        CornerRadius="10"
                        Style="{StaticResource WindowsBorder}">
                        <view:ToolsControl Style="{StaticResource BaseLiftMargin}" />
                    </Border>-->
				</Grid>
			</Border>

			<!--  右侧操作  -->
			<Border
				Grid.Column="2"
				Background="#2A2A47"
				BorderThickness="0"
				CornerRadius="10"
				Style="{StaticResource WindowsBorder}">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="1*" />
						<RowDefinition Height="1*" />
						<RowDefinition Height="80" />
					</Grid.RowDefinitions>

					<!--  Recon Ranges  -->
					<local:ReconRangeControl Grid.Row="0" />

					<!--  计划基准区  -->
					<local:PlanningBaseControl Grid.Row="1" />

					<!--  重建控制区 重建和取消按钮  -->
					<Border
						Grid.Row="2"
						Margin="0,0,0,10"
						Padding="0"
						VerticalAlignment="Center"
						Background="Transparent">

						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="100" />
								<ColumnDefinition Width="10" />
								<ColumnDefinition Width="100" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>

							<!--  recon按钮  -->
							<Button
								Grid.Row="0"
								Grid.Column="1"
								Command="{Binding Commands[Recon]}"
								IsEnabled="{Binding IsReconEnable, Mode=TwoWay}"
								Content="{x:Static res:LanguageResource.Content_Recon}"
								Style="{StaticResource CircleButton}" />

							<!---->

							<!--  cancel按钮  -->
							<Button
								Grid.Row="0"
								Grid.Column="3"
								Command="{Binding Commands[Cancel]}"
								IsEnabled="{Binding IsCancelEnable, Mode=TwoWay}"
								Content="{x:Static res:LanguageResource.Content_Cancel}"
								Style="{StaticResource CircleButton}" />
							<!---->
						</Grid>
					</Border>

				</Grid>
			</Border>
		</Grid>
	</AdornerDecorator>
</UserControl>
