<Window
    x:Class="NV.CT.ScreenManagement.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="#696969"
    Loaded="Window_Loaded"
    Opacity="0.8"
    Topmost="True"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style
            x:Key="btn_Yes"
            TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="#FFFFFFFF" />
            <Setter Property="Background" Value="#18a18b" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="40" />
            <Setter Property="BorderThickness" Value="0" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <!--  我们将 Grid 用作根，原因在于这便于添加更多的元素来自定义按钮  -->
                        <Grid x:Name="Grid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Rectangle
                                x:Name="Rectangle"
                                Grid.ColumnSpan="2"
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Fill="#18a18b"
                                RadiusX="2"
                                RadiusY="5"
                                Stroke="#18a18b" />
                            <Rectangle
                                x:Name="Rectangle1"
                                Grid.Column="0"
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Fill="#18a18b"
                                RadiusX="5"
                                RadiusY="5"
                                Stroke="#18a18b" />

                            <!--  Content Presenter 是控件放置文本内容等项之处  -->
                            <!--  通过利用绑定，无需编辑模板即可将控件参数化  -->
                            <ContentPresenter
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />
                        </Grid>

                        <ControlTemplate.Triggers>

                            <!--  鼠标移入移出  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Rectangle" Property="Stroke" Value="#25b19a" />
                                <Setter TargetName="Rectangle" Property="Fill" Value="#25b19a" />
                                <Setter TargetName="Rectangle1" Property="Stroke" Value="#25b19a" />
                                <Setter TargetName="Rectangle1" Property="Fill" Value="#25b19a" />
                            </Trigger>
                            <!--  按钮按下弹起  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Rectangle" Property="Stroke" Value="#0c8c77" />
                                <Setter TargetName="Rectangle" Property="Fill" Value="#0c8c77" />
                                <Setter TargetName="Rectangle1" Property="Stroke" Value="#0c8c77" />
                                <Setter TargetName="Rectangle1" Property="Fill" Value="#0c8c77" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <Style
            x:Key="btn_No"
            TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="#FFFFFFFF" />
            <Setter Property="Background" Value="#38476c" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="40" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <!--  我们将 Grid 用作根，原因在于这便于添加更多的元素来自定义按钮  -->
                        <Grid x:Name="Grid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Rectangle
                                x:Name="Rectangle"
                                Grid.ColumnSpan="2"
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Fill="#38476c"
                                RadiusX="2"
                                RadiusY="5"
                                Stroke="#38476c" />
                            <Rectangle
                                x:Name="Rectangle1"
                                Grid.Column="0"
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Fill="#38476c"
                                RadiusX="5"
                                RadiusY="5"
                                Stroke="#38476c" />

                            <!--  Content Presenter 是控件放置文本内容等项之处  -->
                            <!--  通过利用绑定，无需编辑模板即可将控件参数化  -->
                            <ContentPresenter
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />
                        </Grid>

                        <ControlTemplate.Triggers>

                            <!--  鼠标移入移出  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Rectangle" Property="Stroke" Value="#475880" />
                                <Setter TargetName="Rectangle" Property="Fill" Value="#475880" />
                                <Setter TargetName="Rectangle1" Property="Stroke" Value="#475880" />
                                <Setter TargetName="Rectangle1" Property="Fill" Value="#475880" />
                            </Trigger>
                            <!--  按钮按下弹起  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Rectangle" Property="Stroke" Value="#2c3b5f" />
                                <Setter TargetName="Rectangle" Property="Fill" Value="#2c3b5f" />
                                <Setter TargetName="Rectangle1" Property="Stroke" Value="#2c3b5f" />
                                <Setter TargetName="Rectangle1" Property="Fill" Value="#2c3b5f" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>


            </Setter>


        </Style>

        <Style
            x:Key="btn_Close"
            TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Background" Value="#191e29" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <!--  我们将 Grid 用作根，原因在于这便于添加更多的元素来自定义按钮  -->
                        <TextBlock
                            x:Name="Grid"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="X" />

                        <ControlTemplate.Triggers>

                            <!--  按钮按下  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Grid" Property="Background" Value="#2b303c" />
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid
        x:Name="Grid_01"
        Width="500"
        Height="300"
        Background="#3c4354"
        Opacity="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="260" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="TitleBar"
            Grid.Row=" 0"
            Height="Auto"
            Background="#2b303c">
            <TextBlock
                x:Name="TitleName"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="Microsoft YaHei"
                FontSize="18"
                FontWeight="Bold"
                Foreground="#ffffff"
                Text="Warning" />
            <Button
                Width="50"
                Height="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Click="btn_Close_Click"
                FontSize="18"
                Foreground="#ffffff"
                Style="{StaticResource btn_Close}"
                Visibility="Collapsed" />
        </Grid>
        <StackPanel
            Grid.Row="1"
            Width="450"
            Margin="0,0,0,70"
            HorizontalAlignment="Center"
            Orientation="Vertical">
            <Image
                x:Name="ImageShow"
                Width="80"
                Height="80"
                Margin="0,40,0,20"
                Source="/resources/Estop.png" />
            <TextBlock
                x:Name="InfoMessage"
                Width="Auto"
                Height="Auto"
                Margin="16,0,15,0"
                HorizontalAlignment="Center"
                FontFamily="Microsoft YaHei"
                FontSize="18"
                FontWeight="Bold"
                Foreground="Red"
                Text="The system enters the emergency stop state！"
                TextWrapping="Wrap" />

            <StackPanel
                Margin="0,80,0,20"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Visibility="Collapsed">
                <Button
                    x:Name="btn_Continue"
                    Width="80"
                    Height="40"
                    Click="btn_Yes_Click"
                    Content="保持"
                    Style="{StaticResource btn_Yes}" />
                <Button
                    x:Name="btn_No"
                    Width="80"
                    Height="40"
                    Margin="10,0,0,0"
                    Click="btn_No_Click"
                    Content="恢复"
                    Style="{StaticResource btn_No}" />
            </StackPanel>

        </StackPanel>
    </Grid>

</Window>