<UserControl
    x:Class="NV.CT.ImageViewer.View.PostProcessPostDenoise"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:markableComboBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableComboBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    xmlns:type="clr-namespace:NV.CT.FacadeProxy.Common.Enums.PostProcessEnums;assembly=NV.CT.FacadeProxy.Common"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="AddButtonStyle" TargetType="materialDesign:PackIcon">
            <Setter Property="Width" Value="25" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Foreground" Value="#90EE90" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="20*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"
            Command="{Binding Commands[AddCommand]}" 
            CommandParameter="{Binding Source={x:Static type:PostProcessType.Denoise}, Mode=OneWay}" 
            VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent">
            <materialDesign:PackIcon Kind="PlusCircle" Style="{StaticResource AddButtonStyle}"/>
        </Button>
        <Label
            Grid.Column="1"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_PostPrcoessDenoise}" />
        <Grid
            Grid.Column="2"
            HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>
            <markableComboBox:MarkableComboBox
                 Grid.Column="0"
                 DisplayMemberPath="Value"
                 IsEnabled="True"
                 ItemsSource="{Binding PostDenoiseTypeList,Mode=TwoWay}"
                 MarkStatus="{Binding Path=PostProcessMarkStatus}"
                 SelectedItem="{Binding Path=SelectPostProcessDenoiseType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 SelectedValuePath="Key"
                 Style="{StaticResource MarkableComboBox}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="GotFocus">
                        <b:InvokeCommandAction
                             Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                             CommandParameter="SelectPostProcessDenoiseType" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="SelectionChanged">
                        <b:InvokeCommandAction
                             Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                             CommandParameter="SelectPostProcessDenoiseType" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </markableComboBox:MarkableComboBox>
            <Label
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Content="{x:Static res:LanguageResource.Content_Level}" />
            <md:MarkableTextBox                
                Grid.Column="2"
                TextType="Decimal"
                Minimum="0"
                Maximum="100"              
                IsEnabled="{Binding Path=ReconPageEnable}"
                MarkStatus="{Binding Path=PostDenoiseCoefMarkStatus}"
                Style="{StaticResource MarkableTextBox}"
                Text="{Binding Path=DenoiseLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="GotFocus">
                        <b:InvokeCommandAction
                            Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                            CommandParameter="DenoiseLevel" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="TextChanged">
                        <b:InvokeCommandAction
                            Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                            CommandParameter="DenoiseLevel" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </md:MarkableTextBox>
        </Grid>
    </Grid>
</UserControl>