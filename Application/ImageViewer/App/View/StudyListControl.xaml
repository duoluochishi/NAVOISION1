<UserControl
    x:Class="NV.CT.ImageViewer.View.StudyListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:NV.CT.UI.Controls.Converter;assembly=NV.CT.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:Visuality2Converter x:Key="Visuality2Converter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--  StudyList标签文本和下面的矩形标记  -->
        <Grid Grid.Row="0">
            <Label
                Name="lblStudyList"
                Grid.ColumnSpan="2"
                Height="34"
                Margin="10,8,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="{x:Static res:LanguageResource.Content_StudyInfo}"
                FontSize="15"
                FontWeight="Bold"
                Foreground="#FFC6C6EC" />
            <Rectangle
                Grid.Column="0"
                Width="{Binding ElementName=lblStudyList, Path=ActualWidth}"
                Height="3"
                Margin="10,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                SnapsToDevicePixels="True"
                Stroke="#3044D9"
                StrokeThickness="3"
                Visibility="{Binding ShowBottomLine, Converter={StaticResource Visuality2Converter}}" />
        </Grid>

        <!--  StudyList列表  -->
        <DataGrid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="3"
            HorizontalAlignment="Stretch"
            AutoGenerateColumns="False"
            ColumnHeaderHeight="40"
            FontSize="12"
            GridLinesVisibility="Horizontal"
            HorizontalScrollBarVisibility="Hidden"
            IsReadOnly="True"
            ItemsSource="{Binding VStudyModels}"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
            SelectionUnit="FullRow"
            VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>

                <DataGridTemplateColumn
                    Width="auto"
                    MinWidth="70"
                    Header="{x:Static res:LanguageResource.Content_BodyPartExam}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Text="{Binding BodyPart}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Width="auto"
                    MinWidth="110"
                    Header="{x:Static res:LanguageResource.Content_StartDate}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Text="{Binding ExamStartTime, StringFormat='yyyy/MM/dd HH:mm:ss'}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
