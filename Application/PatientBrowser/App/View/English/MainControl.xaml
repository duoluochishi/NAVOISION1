<UserControl x:Class="NV.CT.PatientBrowser.View.English.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NV.CT.PatientBrowser.View.English"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding Commands[ColsedCommand]}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>  
    <AdornerDecorator>
        <Border Background="Black" CornerRadius="0">
            <Grid Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <local:WorkList Margin="5,5,0,5" DataContext="{Binding WorkListViewModel}"></local:WorkList>
                <local:PatientInfo Margin="0,5,5,5" Grid.Column="2" DataContext="{Binding PatientInfoViewModel}"></local:PatientInfo>
            </Grid>
        </Border>
    </AdornerDecorator>   
</UserControl>