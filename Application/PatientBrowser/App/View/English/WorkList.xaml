<UserControl
    x:Class="NV.CT.PatientBrowser.View.English.WorkList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:converter="clr-namespace:NV.CT.UI.Controls.Converter;assembly=NV.CT.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="600"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:PatientTypeStyleConverter x:Key="patientTypeStyleConverter" />
        <Style x:Key="FIcon" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <TextBox
                x:Name="txtSearchBox"
                Uid="txtSearchBox"
                wpf:HintAssist.Hint="{x:Static res:LanguageResource.ToolTip_Search}"
                Style="{StaticResource SearchTextBox}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="TextChanged">
                        <b:InvokeCommandAction Command="{Binding Commands[SearchCommand]}" CommandParameter="{Binding ElementName=txtSearchBox, Path=Text}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </TextBox>
            <Button
                Uid="btnSearch"
                Command="{Binding Commands[SearchCommand]}"
                CommandParameter="{Binding ElementName=txtSearchBox, Path=Text}"
                Style="{StaticResource SearchButton}">
                <wpf:PackIcon
                    Width="25"
                    Height="25"
                    Foreground="White"
                    Kind="Magnify"
                    Opacity=".56" />
            </Button>
        </Grid>
        <Border
            Grid.Row="2"
            Grid.Column="0"
            BorderBrush="#5A5A89"
            BorderThickness="1"
            CornerRadius="10" />
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="42" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border
                Grid.ColumnSpan="2"
                Background="#5A5A89"
                CornerRadius="10,10,0,0"
                Opacity="0.5" />
            <Grid Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="45" />
                    <ColumnDefinition Width="45" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="5,0,0,0"
                    Style="{StaticResource HeaderLabelTextBlock}"
                    Text="{x:Static res:LanguageResource.Content_Studies}" />
                <TextBlock
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    FontSize="10"
                    Style="{StaticResource HeaderLabelTextBlock}"
                    Text="{Binding ScheduledDescription}" />

                <Button
                    Name="UpdateWorkList"
                    Grid.Column="4"
                    Style="{StaticResource RefreshGlintButton}"
                    ToolTip="{x:Static res:LanguageResource.ToolTip_Refresh}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding Commands[RefreshWorkListCommand]}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
                <Button
                    x:Name="btnFilter"
                    Grid.Column="5"
                    Style="{StaticResource FilterGlintButton}"
                    ToolTip="{x:Static res:LanguageResource.ToolTip_Filter}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding Commands[FilterCommand]}" CommandParameter="{Binding ElementName=btnFilter}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </Grid>
            <Border
                Grid.Row="1"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                Background="#14142b"
                BorderBrush="#5A5A89"
                BorderThickness="1.4"
                CornerRadius="0,0,10,10"
                Opacity="1" />
            <ScrollViewer
                Grid.Row="1"
                Grid.ColumnSpan="2"
                MaxWidth="490"
                Margin="3"
                Style="{StaticResource CommonScrollViewer}">
                <DataGrid
                    x:Name="dgWorkList"
                    ItemsSource="{Binding Studies}"
                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                    Style="{StaticResource CommonDataGrid}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonUp">
                            <i:InvokeCommandAction Command="{Binding Commands[SelectPatientInWorkListCommand]}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn
                            Width="auto"
                            MinWidth="100"
                            Header="{x:Static res:LanguageResource.Header_PatientName}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Path
                                            Width="15"
                                            Height="15"
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Style="{Binding PatientType, Converter={StaticResource patientTypeStyleConverter}}"
                                            ToolTip="{Binding PatientTypeString}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="5,0,0,0"
                                            Style="{StaticResource DataGridContentTextBlock}"
                                            Text="{Binding PatientName}" />
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="auto"
                            MinWidth="100"
                            CanUserSort="True"
                            Header="{x:Static res:LanguageResource.Header_PatientId}"
                            SortMemberPath="PatientId">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource DataGridContentTextBlock}" Text="{Binding PatientId}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="auto"
                            MinWidth="100"
                            Header="{x:Static res:LanguageResource.Header_StudyDescription}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Style="{StaticResource DataGridContentTextBlock}"
                                        Text="{Binding StudyDescription}"
                                        ToolTip="{Binding StudyDescription}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="auto"
                            MinWidth="100"
                            CanUserSort="True"
                            Header="{x:Static res:LanguageResource.Header_Birthday}"
                            SortMemberPath="Birthday">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource DataGridContentTextBlock}" Text="{Binding Birthday, StringFormat='yyyy/M/dd'}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="auto"
                            MinWidth="100"
                            Header="{x:Static res:LanguageResource.Header_Sex}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource DataGridContentTextBlock}" Text="{Binding GenderString}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="auto"
                            MinWidth="110"
                            CanUserSort="True"
                            Header="{x:Static res:LanguageResource.Header_CreatedTime}"
                            SortMemberPath="CreateTime">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource DataGridContentTextBlock}" Text="{Binding CreateTime, StringFormat='yyyy/M/dd HH:mm:ss'}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>