<Window
    x:Class="NV.CT.UI.Exam.View.TubePositionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    Width="300" Height="155" Background="Transparent" AllowsTransparency="True" ResizeMode="NoResize"
    WindowStyle="None"  mc:Ignorable="d">
    <Window.Resources>
        <SolidColorBrush x:Key="ButtonBackColor" Color="#5a5a89" Opacity="0.28"/>
        <SolidColorBrush x:Key="ButtonFontColor" Color="White"  />
        <Style x:Key="BoundingBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#3c4354"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#5a5a89"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#5a5a89"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="CornerRadius" Value="5 5 0 0"/>
        </Style>
        <Style x:Key="ImageStyle" TargetType="{x:Type Image}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Height" Value="22" />
            <Setter Property="Width" Value="22" />
            <Setter Property="Margin" Value="5 0 0 0" />
            <Setter Property="Stretch" Value="Fill" />
            <Setter Property="Source" Value="pack://application:,,,/NV.CT.UI.Controls;component/Icons/setup_1.png" />
        </Style>
        <Style x:Key="TileTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource  MaterialDesignTextBlock}">
            <Setter Property="Margin" Value="35 0 0 0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16px"/>
            <Setter Property="Foreground" Value="{StaticResource BaseForegroundColor}" />
        </Style>      
        <Style x:Key="OKButtonStyle" TargetType="Button" BasedOn="{StaticResource  MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="25 0 90 0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Content" Value="{x:Static res:LanguageResource.Content_OK}"/>
            <Setter Property="Background" Value="{StaticResource ButtonBackColor}"/>
        </Style>
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource  MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="15 0 25 0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Content" Value="{x:Static res:LanguageResource.Content_Cancel}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource ButtonBackColor}"/>
        </Style>
        <Style x:Key="RadioButtonStyle" BasedOn="{StaticResource NanoRadioButtonStyle}" TargetType="{x:Type RadioButton}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 0 5 0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>        
    </Window.Resources>
    <Border CornerRadius="10" Style="{StaticResource WindowsBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36" />
                <RowDefinition Height="50" />                        
                <RowDefinition Height="55" />
            </Grid.RowDefinitions>
            <Border Style="{StaticResource BorderStyle}" />
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="45"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Style="{StaticResource ImageStyle}"/>
                <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource TileTextBlockStyle}" Text="{x:Static res:LanguageResource.Text_TubePosition}" />
                <Button Grid.Column="2" Style="{StaticResource TileCloseButtonStyle}" Command="{Binding  Commands[CloseCommand]}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                    <Path Style="{StaticResource TileClosePathStyle}" />
                </Button>
            </Grid>
            <StackPanel Orientation="Horizontal" Grid.Row="1"  VerticalAlignment="Center">
                <RadioButton Margin="15 0 0 0"
                    VerticalAlignment="Center"
                    IsChecked="{Binding IsTop,Mode=TwoWay}"
                    Content="{x:Static res:LanguageResource.Content_Top}"
                    ToolTip="{x:Static res:LanguageResource.Content_Top}"
                    GroupName="Top"/>
                <RadioButton Margin="10 0 0 0"
                    VerticalAlignment="Center"
                    IsChecked="{Binding IsBottom,Mode=TwoWay}"
                    Content="{x:Static res:LanguageResource.Content_Bottom}"                     
                    ToolTip="{x:Static res:LanguageResource.Content_Bottom}"
                    GroupName="Top"/>
                <RadioButton Margin="10 0 0 0" 
                    VerticalAlignment="Center"
                    IsChecked="{Binding IsLeft,Mode=TwoWay}"
                    Content="{x:Static res:LanguageResource.Content_Left}"
                    ToolTip="{x:Static res:LanguageResource.Content_Left}"
                    GroupName="Right"/>
                <RadioButton Margin="10 0 0 0"
                    VerticalAlignment="Center"
                    IsChecked="{Binding IsRight,Mode=TwoWay}"
                    Content="{x:Static res:LanguageResource.Content_Right}"
                    ToolTip="{x:Static res:LanguageResource.Content_Right}" 
                    GroupName="Right"/>
            </StackPanel>            
            <Grid Grid.Row="2" VerticalAlignment="Bottom">
                <Button Style="{StaticResource OKButtonStyle}" Command="{Binding  Commands[LoadCommand]}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>
                <Button Style="{StaticResource CancelButtonStyle}" Command="{Binding  Commands[CloseCommand]}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>
            </Grid>
        </Grid>
    </Border>
</Window>