<UserControl
    x:Class="NV.CT.UI.Exam.View.Timeline"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:view="clr-namespace:NV.CT.UI.Exam.View"
    Width="auto" d:DesignHeight="450" mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            x:Key="ListViewItemStyle"
            BasedOn="{StaticResource MaterialDesignListBoxItem}"
            TargetType="{x:Type ListViewItem}">
            <Setter Property="Foreground" Value="#5a5a89" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style
            x:Key="ListViewStyle"
            BasedOn="{StaticResource MaterialDesignListBox}"
            TargetType="{x:Type ListView}">
            <Setter Property="ItemContainerStyle" Value="{StaticResource ListViewItemStyle}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled" />
        </Style>
        <Style x:Key="ConfigPathStyle" BasedOn="{StaticResource Config}"
            TargetType="{x:Type Path}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Height" Value="15" />
            <Setter Property="Width" Value="15" />
            <Setter Property="Margin" Value="10 0 0 5" />
            <Setter Property="Fill" Value="{StaticResource TextBoxBrush}" />
            <Setter Property="Stretch" Value="Fill" />
        </Style>
        <Style x:Key="EnhancePathStyle" BasedOn="{StaticResource SEnhance}"
            TargetType="{x:Type Path}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Height" Value="15" />
            <Setter Property="Width" Value="15" />
            <Setter Property="Margin" Value="10 0 0 5" />
            <Setter Property="Fill" Value="{StaticResource TextBoxBrush}" />
            <Setter Property="Stretch" Value="Fill" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Visibility" Value="Hidden"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="VoicePathStyle" BasedOn="{StaticResource VoicePath}"
            TargetType="{x:Type Path}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Height" Value="15" />
            <Setter Property="Width" Value="15" />
            <Setter Property="Margin" Value="10 0 0 5" />
            <Setter Property="Fill" Value="{StaticResource TextBoxBrush}" />
            <Setter Property="Stretch" Value="Fill" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Visibility" Value="Hidden"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style
            x:Key="TimelineArrBunttonStyle"
            BasedOn="{StaticResource MaterialDesignRaisedButton}"
            TargetType="{x:Type Button}">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Visibility" Value="Hidden"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="lvTimeline" Grid.Column="0" ItemsSource="{Binding ScanList,Mode=TwoWay}" SelectedItem="{Binding SelectScan,Mode=TwoWay}" Style="{StaticResource ListViewStyle}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Margin="0" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="TimeBorder" BorderThickness="1" CornerRadius="5" Padding="0 0 10 0">
                        <Grid Margin="2" Opacity="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="44"/>
                                <RowDefinition Height="22"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Vertical" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Margin="0" HorizontalAlignment="Center" >
                                <Path Style="{StaticResource EnhancePathStyle}" IsEnabled="{Binding IsEnhance}" Margin="0 8 0 0" Height="18" Width="16"/>
                                <Path Style="{StaticResource VoicePathStyle}" IsEnabled="{Binding IsVoiceEnable}" Margin="0 5 0 0" Height="15" Width="16"/>
                            </StackPanel>
                            <ItemsControl Grid.Column="1" Grid.Row="0" ItemsSource="{Binding ScanChildren}" Background="Transparent" Margin="5 0 0 0" BorderThickness="0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Margin="0" Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="12"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" FontSize="14" Text="{Binding ScanIndex}" Foreground="AliceBlue" Margin="5 5 0 2"/>
                                            <!--延迟时间线  -->
                                            <Line Grid.Row="1" X1="{Binding DelayTimeX1Axis}" X2="{Binding DelayTimeX2Axis}" Y1="{Binding YAxis}" Y2="{Binding YAxis}" StrokeThickness="{Binding StrokeThickness}" Stroke="#FFFFE0" Opacity="0.2" StrokeStartLineCap="Round" StrokeEndLineCap="Square"/>
                                            <!--曝光时间线  普通扫描的 -->
                                            <Path Grid.Row="1" Fill="#FFA63F" StrokeThickness="0" Margin="0" IsEnabled="{Binding IsSpiralScan}">
                                                <Path.Style>
                                                    <Style TargetType="{x:Type Path}">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="True">
                                                                <Setter Property="Visibility" Value="Hidden"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                                <Path.Data>
                                                    <RectangleGeometry Rect="{Binding ExposureTimeRect}"/>
                                                </Path.Data>
                                            </Path>
                                            <!--曝光时间线  多圈扫描的 -->
                                            <ItemsControl Grid.Row="1" ItemsSource="{Binding SpiralScanTaskList}" Background="Transparent" BorderThickness="0" IsEnabled="{Binding IsSpiralScan}">
                                                <ItemsControl.Style>
                                                    <Style TargetType="{x:Type ItemsControl}">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsEnabled" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Visibility" Value="Hidden"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ItemsControl.Style>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Margin="0" Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Path Fill="#FFA63F" StrokeThickness="0.5" Stroke="Black" Margin="0" >
                                                            <Path.Data>
                                                                <RectangleGeometry Rect="{Binding ExposureTimeRect,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                            </Path.Data>
                                                        </Path>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            <!--后语音的延迟时间 -->
                                            <Line Grid.Row="1" X1="{Binding TableAccelerationTimeX1Axis}" X2="{Binding TableAccelerationTimeX2Axis}" Y1="{Binding YAxis}" Y2="{Binding YAxis}" StrokeThickness="{Binding StrokeThickness}" Stroke="#FFFFE0" Opacity="0.2" StrokeStartLineCap="Square" StrokeEndLineCap="Round"/>
                                            <!--扫描延迟扫描时间完成线-->                          
                                            <Path Grid.Row="1" Fill="#1665D8" StrokeThickness="0" Margin="0" IsEnabled="{Binding IsCompleted}">
                                                <Path.Style>
                                                    <Style TargetType="{x:Type Path}">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsEnabled" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Visibility" Value="Hidden"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                                <Path.Data>
                                                    <RectangleGeometry Rect="{Binding ExposureTimeRect}"/>
                                                </Path.Data>
                                            </Path>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Path Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Fill="#1665D8" Opacity="0.5" StrokeThickness="0" Margin="5 0 0 0" IsEnabled="{Binding IsCompleted}">
                                <Path.Style>
                                    <Style TargetType="{x:Type Path}">
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="True">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                                <Path.Data>
                                    <RectangleGeometry Rect="{Binding ScanTimeRect}" />
                                </Path.Data>
                            </Path>
                            <view:GraduatedScale
                                Grid.Row="1"   
                                Grid.Column="1"
                                Height="25"
                                Margin="5,-18,0,0"
                                AFewLinesApartHigher="4"
                                BackGround="Transparent"
                                BorderColor="#5A5A89"
                                BottomHorizontalLineColor="White"
                                ColorOfNumbers="White"
                                ColorOfScaleLine="White"
                                ConvertToScale="{Binding ConvertToScale}"
                                EndValue="{Binding TotalScanTime}"
                                FigureBlank="5"
                                FontHeight="-30"
                                RadiusX="7"
                                RadiusY="7"
                                RectangleHeight="80"
                                ScaleHeight="20"
                                WhetherToDisplayTheEndScale="True" />
                        </Grid>
                    </Border>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}"
                                    Value="True">
                            <Setter TargetName="TimeBorder" Property="BorderBrush" Value="#FFFFE0" />
                            <Setter TargetName="TimeBorder" Property="Opacity" Value="0.6" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}"
                                    Value="False">
                            <Setter TargetName="TimeBorder" Property="BorderBrush" Value="#FFFFE0" />
                            <Setter TargetName="TimeBorder" Property="Opacity" Value="0.3" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}, Mode=FindAncestor}}"
                                    Value="True">
                            <Setter TargetName="TimeBorder" Property="BorderBrush" Value="#FFFFE0" />
                            <Setter TargetName="TimeBorder" Property="Opacity" Value="0.6" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListView>
        <StackPanel Grid.Column="1" Orientation="Vertical" >
            <Button Style="{StaticResource TimelineArrBunttonStyle}" IsEnabled="{Binding IsArrowEnable}" Command="{Binding Commands[TimelineNextCommand]}" CommandParameter="{Binding ElementName=lvTimeline}" Margin="0 10 0 0">
                <materialDesign:PackIcon Kind="ArrowLeftCircleOutline" Width="22" Height="22"/>
            </Button>
            <Button Style="{StaticResource TimelineArrBunttonStyle}" IsEnabled="{Binding IsArrowEnable}" Command="{Binding Commands[TimelineBackCommand]}" CommandParameter="{Binding ElementName=lvTimeline}" Margin="0">
                <materialDesign:PackIcon Kind="ArrowRightCircleOutline" Width="22" Height="22"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>