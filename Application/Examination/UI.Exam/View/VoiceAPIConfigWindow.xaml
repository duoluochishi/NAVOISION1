<Window
    x:Class="NV.CT.UI.Exam.View.VoiceAPIConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:markableComboBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableComboBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    Width="480" Height="375" Background="Transparent" AllowsTransparency="True" ResizeMode="NoResize"
    WindowStyle="None"  mc:Ignorable="d">
    <Window.Resources>
        <SolidColorBrush x:Key="ButtonBackColor" Color="#5a5a89" Opacity="0.28"/>
        <SolidColorBrush x:Key="ButtonFontColor" Color="White"  />
        <Style x:Key="BoundingBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#3c4354"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#5a5a89"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#5a5a89"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="CornerRadius" Value="5 5 0 0"/>
        </Style>
        <Style x:Key="TilePathStyle" TargetType="{x:Type Path}" BasedOn="{StaticResource VoicePath}">
            <Setter Property="Margin" Value="5 0 0 0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Fill" Value="White"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Stretch" Value="Fill" />
        </Style>
        <Style x:Key="TileTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource  MaterialDesignTextBlock}">
            <Setter Property="Margin" Value="35 0 0 0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16px"/>
            <Setter Property="Foreground" Value="{StaticResource BaseForegroundColor}" />
        </Style>
        <Style x:Key="MessageInfoStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="LineHeight" Value="18"/>
            <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
            <Setter Property="LineHeight" Value="18"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="25 0 0 0"/>
        </Style>
        <Style x:Key="OKButtonStyle" TargetType="Button" BasedOn="{StaticResource  MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="37"/>
            <Setter Property="Margin" Value="25 0 115 0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Content" Value="{x:Static res:LanguageResource.Content_OK}"/>
            <Setter Property="Background" Value="{StaticResource ButtonBackColor}"/>
        </Style>
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource  MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="37"/>
            <Setter Property="Margin" Value="15 0 25 0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Content" Value="{x:Static res:LanguageResource.Content_Cancel}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource ButtonBackColor}"/>
        </Style>
        <Style x:Key="CheckBoxStyle" BasedOn="{StaticResource NanoCheckBoxStyle}" TargetType="{x:Type CheckBox}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 0 5 0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="MarkableTextBoxStyle" BasedOn="{StaticResource MarkableTextBox}" TargetType="{x:Type md:MarkableTextBox}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 0 25 0"/>
            <Setter Property="Height" Value="36"/>
        </Style>
    </Window.Resources>
    <Border CornerRadius="10" Style="{StaticResource WindowsBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36" />
                <RowDefinition Height="35" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="55" />
            </Grid.RowDefinitions>
            <Border Style="{StaticResource BorderStyle}" />
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="45"/>
                </Grid.ColumnDefinitions>
                <Path Grid.Column="0" Style="{StaticResource TilePathStyle}"/>
                <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource TileTextBlockStyle}" Text="{x:Static res:LanguageResource.Text_API}" />
                <Button Grid.Column="2" Style="{StaticResource TileCloseButtonStyle}" Command="{Binding  Commands[CloseCommand]}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                    <Path Style="{StaticResource TileClosePathStyle}" />
                </Button>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource MessageInfoStyle}" Text="{x:Static res:LanguageResource.Text_Language}"  Grid.Column="0" />
                <markableComboBox:MarkableComboBox Grid.Column="1" DisplayMemberPath="Value" SelectedValuePath="Key" Style="{StaticResource MarkableComboBox}" ItemsSource="{Binding LanguageList}" SelectedItem="{Binding Path=SelectedLanguage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
            <Grid Grid.Row="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource MessageInfoStyle}" Text="{x:Static res:LanguageResource.Text_PreVoice}"  Grid.Column="0" />
                <markableComboBox:MarkableComboBox Grid.Column="1" DisplayMemberPath="Value" SelectedValuePath="Key" Style="{StaticResource MarkableComboBox}" ItemsSource="{Binding PreVoiceList,Mode=OneWay}" SelectedItem="{Binding Path=SelectedPreVoice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
            <Grid Grid.Row="6" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource MessageInfoStyle}" Text="{x:Static res:LanguageResource.Text_PostVoiceDelayTime}"  Grid.Column="0" />
                <md:MarkableTextBox Maximum="100" Minimum="0" TextType="Decimal" Grid.Column="1" Text="{Binding PostVoiceDelayTime,Mode=TwoWay}"  Style="{StaticResource MarkableTextBoxStyle}"></md:MarkableTextBox>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource MessageInfoStyle}" Text="{x:Static res:LanguageResource.Text_PostVoice}"  Grid.Column="0" />
                <markableComboBox:MarkableComboBox Grid.Column="1" DisplayMemberPath="Value" SelectedValuePath="Key" Style="{StaticResource MarkableComboBox}" ItemsSource="{Binding PostVoiceList,Mode=OneWay}" SelectedItem="{Binding Path=SelectedPostVoice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="1" Style="{StaticResource CheckBoxStyle}" Content="{x:Static res:LanguageResource.Text_Default}" IsChecked="{Binding IsDefault,Mode=TwoWay}"/>
            </Grid>
            <Grid Grid.Row="7" VerticalAlignment="Bottom">
                <Button Style="{StaticResource OKButtonStyle}" Command="{Binding  Commands[LoadCommand]}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>
                <Button Style="{StaticResource CancelButtonStyle}" Command="{Binding  Commands[CloseCommand]}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>
            </Grid>
        </Grid>
    </Border>
</Window>