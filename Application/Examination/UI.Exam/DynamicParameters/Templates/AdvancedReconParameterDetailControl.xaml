<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Templates.AdvancedReconParameterDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NV.CT.UI.Exam.DynamicParameters.Parameters.Recon"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    Background="Transparent"
    FontSize="14"
    mc:Ignorable="d" >
    <UserControl.Resources>
        <Style
            x:Key="StackPanelGrid"
            TargetType="{x:Type Grid}">
            <Setter Property="Width" Value="470" />
            <Setter Property="Margin" Value="15,5,0,5" />
        </Style>
        <Style
            x:Key="WrapPanelGrid"
            TargetType="{x:Type Grid}">
            <Setter Property="Width" Value="470" />
            <Setter Property="Margin" Value="5,5,0,5" />
        </Style>
        <Style x:Key="ConfigPathStyle" BasedOn="{StaticResource Config}" TargetType="{x:Type Path}">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Fill" Value="{StaticResource TextBoxBrush}" />
            <Setter Property="Stretch" Value="Fill" />
        </Style>
        <Style BasedOn="{StaticResource NanoCheckBoxStyle}" TargetType="{x:Type CheckBox}">
            <Setter Property="Width" Value="17" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style x:Key="PostProcessPathStyle" BasedOn="{StaticResource JobStatusProcessing}" TargetType="{x:Type Path}">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Fill" Value="{StaticResource TextBoxBrush}" />
            <Setter Property="Stretch" Value="Fill" />
        </Style>
        <!-- post process -->
        <Style x:Key="AddButtonStyle" TargetType="materialDesign:PackIcon">
            <Setter Property="Width" Value="25" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Foreground" Value="#90EE90" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="46*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>

        <!--  General  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Orientation="Vertical">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Path Style="{StaticResource ConfigPathStyle}" />
                <Label
                    Grid.Column="1"
                    Content="{x:Static res:LanguageResource.Content_AdvancedTitle}"
                    Style="{StaticResource BoldLabelStyle}" />
                <Rectangle
                    Grid.ColumnSpan="2"
                    Width="105"
                    Style="{StaticResource StressLineStyle}" />
            </Grid>
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:ReconBodyPart/>
            </Grid>
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:AirCorrectionMode />
            </Grid>
            <!--  Recon Method  -->
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:ReconMethod />
            </Grid>
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:IVRTVCoef />
            </Grid>
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:RingCorrectionCoef />
            </Grid>
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:ReconBinning/>
            </Grid>
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:PreDenoise />
            </Grid>
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:PostDenoise />
            </Grid>       
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:IsBoneAritifact/>
            </Grid>
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:IsWindmillArtifact/>
            </Grid>
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:IsConeAngleArtifact/>
            </Grid>
        </StackPanel>

        <StackPanel
            Grid.Row="1"           
            Grid.Column="3"
            Orientation="Vertical">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Path Style="{StaticResource PostProcessPathStyle}" />
                <Label
                     Grid.Column="1"
                     Content="{x:Static res:LanguageResource.Content_PostProcessTitle}"
                     Style="{StaticResource BoldLabelStyle}" />
                <Rectangle
                 Grid.ColumnSpan="2"
                 Width="120"
                 Style="{StaticResource StressLineStyle}" />
            </Grid>
            <Grid Style="{StaticResource StackPanelGrid}">
                <local:PostProcessGroup />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>