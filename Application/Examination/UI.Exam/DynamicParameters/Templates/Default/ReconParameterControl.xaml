<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Templates.Default.ReconParameterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NV.CT.UI.Exam.DynamicParameters.Parameters.Recon"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
    d:DesignHeight="450" d:DesignWidth="1000" mc:Ignorable="d">
    <UserControl.Resources>      
        <Style
            x:Key="WrapPanelGrid"
            TargetType="{x:Type Grid}">
            <Setter Property="Width" Value="328" />
            <Setter Property="Margin" Value="2,5,0,5" />
        </Style>
    </UserControl.Resources>
    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--  Slice thickness  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonSliceThickness />
        </Grid>

        <!--  Recon matrix  -->
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonReconMatrix />
        </Grid>

        <!--  Recon Method  -->
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonReconMethodShow />
        </Grid>

        <!--  No. of Images  -->
        <Grid
            Grid.Row="0"
            Grid.Column="2"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonImageCount />
        </Grid>

        <!--  Window  -->
        <Grid
            Grid.Row="1"
            Grid.Column="2"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonWindow />
        </Grid>

        <!--  WW/WL  -->
        <Grid
            Grid.Row="2"
            Grid.Column="2"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonWW_WL />
        </Grid>

        <!--  FOV  -->
        <Grid
            Grid.Row="0"
            Grid.Column="4"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonTestFOV />
        </Grid>

        <!--  CenterX  -->
        <Grid
            Grid.Row="1"
            Grid.Column="4"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonCenterX />
        </Grid>
        <!--  StartEndRange  -->
        <Grid
          Grid.Row="2"
          Grid.Column="4"
          Style="{StaticResource WrapPanelGrid}">
            <local:CommonStartEndRange />
        </Grid>
    </Grid>
</UserControl>