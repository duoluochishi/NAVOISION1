<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Templates.Bolus.ScanParameterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NV.CT.UI.Exam.DynamicParameters.Parameters.Scan"    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            BasedOn="{StaticResource MaterialDesignLabel}"
            TargetType="{x:Type Label}">
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="WrapPanelGrid"
            TargetType="{x:Type Grid}">
            <Setter Property="Width" Value="320" />
            <Setter Property="Margin" Value="2,2,0,0" />
        </Style>
        <Style
            x:Key="StackPanelGrid"
            TargetType="Grid">
            <Setter Property="Margin" Value="5 0 5 0" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Visibility" Value="Hidden" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <!--  make content area more condense  -->
    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonKv />
        </Grid>
        <Grid
             Grid.Row="0"
             Grid.Column="0"
             Style="{StaticResource WrapPanelGrid}">
            <local:CommonEffectiveKv />
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonMa />
        </Grid>
        
        <Grid
             Grid.Row="2"
             Grid.Column="0"
             Style="{StaticResource WrapPanelGrid}">
            <local:CommonInterval />
        </Grid>
        <Grid
             Grid.Row="3"
             Grid.Column="0"
             Style="{StaticResource WrapPanelGrid}">    
            <local:CommonRotTime />
        </Grid>
        <Grid
             Grid.Row="4"
             Grid.Column="0"
             Style="{StaticResource WrapPanelGrid}">
            <local:CommonRange />
        </Grid>
        
        <Grid
             Grid.Row="0"
             Grid.Column="2"
             Style="{StaticResource WrapPanelGrid}">
            <local:CommonTableFeed />
        </Grid>
        
        <Grid
            Grid.Row="1"
            Grid.Column="2"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonScanNum />
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.Column="2"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonDelay />
        </Grid>
        <Grid
          Grid.Row="3"
          Grid.Column="2"
          Style="{StaticResource WrapPanelGrid}">
            <local:CommonAutoVoice />
        </Grid>
      
        <Grid
            Grid.Row="0"
            Grid.Column="4"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonDoseTitle />
        </Grid>

        <Grid
            Grid.Row="1"
            Grid.Column="4"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonCTDlvol />
        </Grid>

        <Grid
            Grid.Row="2"
            Grid.Column="4"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonDLP />
        </Grid>

        <Grid
            Grid.Row="3"
            Grid.Column="4"
            Style="{StaticResource WrapPanelGrid}">
            <local:CommonScanTime />
        </Grid>
    </Grid>
</UserControl>