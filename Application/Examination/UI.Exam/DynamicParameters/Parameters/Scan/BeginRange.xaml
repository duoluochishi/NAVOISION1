<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Scan.BeginRange"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80" d:DesignWidth="800" mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="20*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_BeginRange}" />
        <md:MarkableTextBox
            Name="BenginRange"
            Grid.Column="1"
            VerticalContentAlignment="Center"
            IsEnabled="{Binding Path=IsBeginRangeEnable}"           
            MarkStatus="{Binding Path=BeginRangeMarkStatus}"
            MaxLength="10"          
            Style="{StaticResource MarkableTextBox}"
            Text="{Binding Path=BeginRange, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
            TextType="Decimal">           
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="BeginRange" />
                </b:EventTrigger>                
                <b:EventTrigger EventName="LostFocus">
                    <b:InvokeCommandAction Command="{Binding Commands[MarkableTextBoxTextChanged]}" CommandParameter="BeginRange" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </md:MarkableTextBox>      
        <Label
            Grid.Column="2"
            Content="{x:Static res:LanguageResource.Content_LangthUnitMM}" />
    </Grid>
</UserControl>
