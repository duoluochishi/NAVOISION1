<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Scan.CommonRange"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80" d:DesignWidth="800" mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="55*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0 0 10 0"
            Content="Range" />
        <Grid
             Grid.Column="1"
             HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="45*" />
            </Grid.ColumnDefinitions>
            <md:MarkableTextBox
                 Grid.Column="0"
                 IsEnabled="{Binding Path=IsBolusRangeStartEnable}"
                 MarkStatus="{Binding Path=BeginRangeMarkStatus}"
                 Style="{StaticResource MarkableTextBox}"
                 Text="{Binding Path=BeginRange, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="GotFocus">
                        <b:InvokeCommandAction
                             Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                             CommandParameter="BeginRange" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="LostFocus">
                        <b:InvokeCommandAction
                             Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                             CommandParameter="BeginRange" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </md:MarkableTextBox>
            <Label
                 Grid.Column="1"
                 HorizontalAlignment="Stretch"
                 HorizontalContentAlignment="Center"
                 Content="/" />
            <md:MarkableTextBox                
                 Grid.Column="2"
                 IsEnabled="False"
                 MarkStatus="{Binding Path=EndRangeMarkStatus}"
                 Style="{StaticResource MarkableTextBox}"
                 Text="{Binding Path=EndRange, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="GotFocus">
                        <b:InvokeCommandAction
                             Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                             CommandParameter="EndRange" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="LostFocus">
                        <b:InvokeCommandAction
                             Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                             CommandParameter="EndRange" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </md:MarkableTextBox>
        </Grid>
    </Grid>
</UserControl>