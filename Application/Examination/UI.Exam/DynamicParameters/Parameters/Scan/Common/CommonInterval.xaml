<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Scan.CommonInterval"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:markableComboBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableComboBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80" d:DesignWidth="800" mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="GridStyle" TargetType="Grid">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid IsEnabled="{Binding IsIntervelEnable, Mode=OneWay}" Style="{StaticResource GridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="55*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0 0 10 0"
            Content="{x:Static res:LanguageResource.Content_ExposureInterval}" />
        <markableComboBox:MarkableComboBox
            x:Name="select1"
            Grid.Column="1"
            VerticalContentAlignment="Center"
            DisplayMemberPath="Value"
            IsEnabled="{Binding Path=PageEnable}"
            ItemsSource="{Binding LoopTimeList}"
            MarkStatus="{Binding Path=SelectedLoopTimeMarkStatus}"
            SelectedItem="{Binding Path=SelectedLoopTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedValuePath="Key"
            Style="{StaticResource MarkableComboBox}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="SelectedLoopTime" />
                </b:EventTrigger>
                <b:EventTrigger EventName="SelectionChanged">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                        CommandParameter="SelectedLoopTime" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </markableComboBox:MarkableComboBox>
    </Grid>
</UserControl>