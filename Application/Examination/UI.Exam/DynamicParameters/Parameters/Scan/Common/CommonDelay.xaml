<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Scan.CommonDelay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language" 
    d:DesignHeight="80" d:DesignWidth="800" mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="55*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
             HorizontalAlignment="Right"
            Margin="0 0 10 0"
            Content="{x:Static res:LanguageResource.Content_Delay}" />
        <md:MarkableTextBox
            Name="txtCommonDelayTime"
            Grid.Column="1"
            VerticalContentAlignment="Center"
            IsEnabled="{Binding Path=PageEnable}"
            MarkStatus="{Binding Path=DelayTimeMarkStatus}"
            Maximum="600"
            Style="{StaticResource MarkableTextBox}"
            Text="{Binding Path=DelayTime, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
            TextType="Decimal">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="DelayTime" />
                </b:EventTrigger>
                <b:EventTrigger EventName="TextChanged">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                        CommandParameter="DelayTime" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </md:MarkableTextBox>
        <Label
            Grid.Column="2"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_TimeUnitSecond}" />
    </Grid>
</UserControl>