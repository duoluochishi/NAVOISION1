<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Scan.CommonCenterPosition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"     
    d:DesignHeight="450" d:DesignWidth="800" mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="55*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" VerticalAlignment="Center" Content="{x:Static res:LanguageResource.Content_CenterPosition}" />
        <TextBlock Grid.Column="1" IsEnabled="False" Text="{Binding Path=CenterPosition, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Grid.Column="2" Content="{x:Static res:LanguageResource.Content_LangthUnitMM}" />
    </Grid>
</UserControl>