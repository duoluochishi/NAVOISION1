<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Scan.CommonAutoVoice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="80" d:DesignWidth="800" mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="VoicePathStyle" BasedOn="{StaticResource VoicePath}"
            TargetType="{x:Type Path}">
            <Setter Property="HorizontalAlignment" Value="Left" />          
            <Setter Property="Height" Value="15" />
            <Setter Property="Width" Value="15" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Fill" Value="White" />
            <Setter Property="Stretch" Value="Fill" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="true">
                    <Setter Property="Opacity" Value="1" />                   
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />                    
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CheckBoxStyle" BasedOn="{StaticResource NanoCheckBoxStyle}"
            TargetType="{x:Type CheckBox}">
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />                 
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="55*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <CheckBox Grid.Column="0" Style="{StaticResource CheckBoxStyle}" Margin="0 0 10 0"  Content="{x:Static res:LanguageResource.Content_API}" IsEnabled="{Binding Path=PageEnable,Mode=OneWay}" IsChecked="{Binding IsVoiceSupported,Mode=TwoWay}" Width="45" />
        <Path  Grid.Column="1" Style="{StaticResource VoicePathStyle}" IsEnabled="{Binding IsVoiceSupported,Mode=OneWay}" >
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseDown">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[AppliedToAllProtocolsCommand]}"/>
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Path>
    </Grid>
</UserControl>