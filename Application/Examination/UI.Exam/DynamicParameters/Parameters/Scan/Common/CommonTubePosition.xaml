<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Scan.CommonTubePosition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80" d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <RadioButton               
                Margin="0,0,10,0"
                IsChecked="{Binding NormalPosition,Mode=TwoWay}"
                Content="{x:Static res:LanguageResource.Content_Normal}"
                GroupName="DetailTubePosition"
                IsEnabled="{Binding Path=PageEnable}" />
            <RadioButton               
                Margin="5,0,10,0"
                IsChecked="{Binding LateralPosition,Mode=TwoWay}"
                Content="{x:Static res:LanguageResource.Content_Lateral}"
                GroupName="DetailTubePosition"
                IsEnabled="{Binding Path=PageEnable}" />
            <RadioButton               
                Margin="5,0,10,0"
                IsChecked="{Binding DualScoutPosition,Mode=TwoWay}"
                Content="{x:Static res:LanguageResource.Content_DualScout}"
                GroupName="DetailTubePosition"
                IsEnabled="{Binding Path=PageEnable}" />
        </StackPanel>
    </Grid>
</UserControl>