<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Scan.TubePosition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80" d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ImageStyle" TargetType="{x:Type Image}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Height" Value="15" />
            <Setter Property="Width" Value="15" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Stretch" Value="Fill" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="true">
                    <Setter Property="Source" Value="pack://application:,,,/NV.CT.UI.Controls;component/Icons/setup_1.png" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Source" Value="pack://application:,,,/NV.CT.UI.Controls;component/Icons/setup_0.png" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <RadioButton               
                Margin="0,0,15,0"
                IsChecked="{Binding NormalPosition,Mode=TwoWay}"
                Content="{x:Static res:LanguageResource.Content_Normal}"
                GroupName="TubePosition"
                IsEnabled="{Binding Path=PageEnable}" />
            <RadioButton               
                Margin="5,0,15,0"
                IsChecked="{Binding LateralPosition,Mode=TwoWay}"
                Content="{x:Static res:LanguageResource.Content_Lateral}"
                GroupName="TubePosition"
                IsEnabled="{Binding Path=PageEnable}" />
            <RadioButton               
                Margin="5,0,20,0"
                IsChecked="{Binding DualScoutPosition,Mode=TwoWay}"
                Content="{x:Static res:LanguageResource.Content_DualScout}"
                GroupName="TubePosition"
                IsEnabled="{Binding Path=PageEnable}" />
            <!--<Image Style="{StaticResource ImageStyle}" IsEnabled="{Binding DualScoutPosition,Mode=OneWay}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseDown">
                        <b:InvokeCommandAction
                                Command="{Binding Commands[SettingTubePositionCommand]}"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Image>-->         
        </StackPanel>
    </Grid>
</UserControl>