<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Scan.ExposureIntervalTime"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language" 
    d:DesignHeight="80" d:DesignWidth="800" mc:Ignorable="d">
    <Grid Tag="{Binding IsAutoScanNotFirst}">
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <Trigger Property="Tag" Value="{StaticResource TrueValue}">
                        <Setter Property="Visibility" Value="Visible" />
                    </Trigger>
                    <Trigger Property="Tag" Value="{StaticResource FalseValue}">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="20*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_ExposureIntervalTime}" />
        <md:MarkableTextBox           
            Grid.Column="1"
            VerticalContentAlignment="Center"
            IsEnabled="{Binding Path=PageEnable}"
            MarkStatus="{Binding Path=ExposureIntervalTimeMarkStatus}"
            Maximum="600"
            Minimum="0"
            Style="{StaticResource MarkableTextBox}"
            Text="{Binding Path=ExposureIntervalTime, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
            TextType="Decimal">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="ExposureIntervalTime" />
                </b:EventTrigger>
                <b:EventTrigger EventName="LostFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                        CommandParameter="ExposureIntervalTime" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </md:MarkableTextBox>
        <Label
            Grid.Column="2"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_TimeUnitSecond}" />
    </Grid>
</UserControl>