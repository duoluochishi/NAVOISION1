<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Recon.PreDenoise"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:markableComboBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableComboBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_PreDenoise}" />
        <Grid
            Grid.Column="1"
            HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>
            <markableComboBox:MarkableComboBox               
                 Grid.Column="0"
                 DisplayMemberPath="Value"
                 IsEnabled="{Binding Path=ReconPageEnable}"
                 ItemsSource="{Binding PreDenoiseTypeList,Mode=TwoWay}"
                 MarkStatus="{Binding Path=PreDenoiseTypeMarkStatus}"
                 SelectedItem="{Binding Path=SelectPreDenoiseType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 SelectedValuePath="Key"
                 Style="{StaticResource MarkableComboBox}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="GotFocus">
                        <b:InvokeCommandAction
                             Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                             CommandParameter="SelectPreDenoiseType" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="SelectionChanged">
                        <b:InvokeCommandAction
                             Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                             CommandParameter="SelectPreDenoiseType" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </markableComboBox:MarkableComboBox>
            <Label
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Content="/" />
            <md:MarkableTextBox                
                Grid.Column="2"
                TextType="Decimal"
                Minimum="0"
                Maximum="100"   
                IsEnabled="{Binding Path=ReconPageEnable}"
                MarkStatus="{Binding Path=PreDenoiseCoefMarkStatus}"
                Style="{StaticResource MarkableTextBox}"
                Text="{Binding Path=PreDenoiseCoef, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="GotFocus">
                        <b:InvokeCommandAction 
                            Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                            CommandParameter="PreDenoiseCoef" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="LostFocus">
                        <b:InvokeCommandAction
                            Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                            CommandParameter="PreDenoiseCoef" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </md:MarkableTextBox>
        </Grid>
    </Grid>
</UserControl>