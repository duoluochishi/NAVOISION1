<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Recon.CenterXY"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*" />
            <ColumnDefinition Width="57*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_CenterX_Y}" />
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="45*" />
            </Grid.ColumnDefinitions>
            <md:MarkableTextBox
                Grid.Column="0"
                IsEnabled="False"
                MarkStatus="{Binding Path=CenterXMarkStatus}"
                Style="{StaticResource MarkableTextBox}"
                TextType="Decimal"
                Minimum="-100000"
                Maximum="100000"
                Text="{Binding Path=CenterX, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="GotFocus">
                        <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="CenterX" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="LostFocus">
                        <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                        CommandParameter="CenterX" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </md:MarkableTextBox>
            <Label
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Content="/" />
            <md:MarkableTextBox
                Grid.Column="2"
                IsEnabled="False"
                MarkStatus="{Binding Path=CenterYMarkStatus}"
                Style="{StaticResource MarkableTextBox}"
                TextType="Decimal"
                Minimum="-100000"
                Maximum="100000"
                Text="{Binding Path=CenterY, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="GotFocus">
                        <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="CenterY" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="LostFocus">
                        <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                        CommandParameter="CenterY" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </md:MarkableTextBox>
        </Grid>       
    </Grid>
</UserControl>