<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Recon.PostProcessSharp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    xmlns:type="clr-namespace:NV.CT.FacadeProxy.Common.Enums.PostProcessEnums;assembly=NV.CT.FacadeProxy.Common"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="AddButtonStyle" TargetType="materialDesign:PackIcon">
            <Setter Property="Width" Value="25" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Foreground" Value="#90EE90" />
        </Style>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="20*" />
            <!--<ColumnDefinition Width="10*" />-->
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"
            Command="{Binding Commands[AddCommand]}" 
            CommandParameter="{Binding Source={x:Static type:PostProcessType.Sharp}, Mode=OneWay}"
            VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent">
            <materialDesign:PackIcon Kind="PlusCircle" Style="{StaticResource AddButtonStyle}"/>
        </Button>
        <Label
            Grid.Column="1"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_PostProcessSharp}" />
        <!--<Label
           Grid.Column="2"
           VerticalAlignment="Center"
           Content="{x:Static res:LanguageResource.Content_Level}" />-->
        <md:MarkableTextBox
            Grid.Column="2"
            IsEnabled="{Binding Path=ReconPageEnable}"
            MarkStatus="{Binding Path=PostProcessMarkStatus}"
            Style="{StaticResource MarkableTextBox}"
            TextType="Decimal"
            Minimum="1"
            Maximum="5"
            Text="{Binding Path=SharpLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="SharpLevel" />
                </b:EventTrigger>
                <b:EventTrigger EventName="TextChanged">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                        CommandParameter="SharpLevel" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </md:MarkableTextBox>
    </Grid>
</UserControl>