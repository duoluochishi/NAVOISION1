<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Recon.IsAutoRecon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*" />
            <ColumnDefinition Width="57*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            IsEnabled="{Binding Path=IsAutoReconEnabled}"
            Content="{x:Static res:LanguageResource.Content_AutoRecon}"/>
        <CheckBox
            Grid.Column="1"
            IsChecked="{Binding Path=IsAutoRecon, Mode=TwoWay}"
            IsEnabled="{Binding Path=IsAutoReconEnabled}" />
    </Grid>
</UserControl>