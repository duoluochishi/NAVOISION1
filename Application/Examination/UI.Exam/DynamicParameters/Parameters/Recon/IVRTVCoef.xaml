<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Recon.IVRTVCoef"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid IsEnabled="{Binding IsIVRTVCoefEnable}">
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="True">
                        <Setter Property="Visibility" Value="Visible" />
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_IVRTVCoef}" />

        <md:MarkableTextBox
            Grid.Column="1"
            IsEnabled="{Binding Path=ReconPageEnable}"
            MarkStatus="{Binding Path=IVRTVCoefMarkStatus}"
            Style="{StaticResource MarkableTextBox}"
            TextType="Decimal"
            Text="{Binding Path=IVRTVCoef, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="IVRTVCoef" />
                </b:EventTrigger>
                <b:EventTrigger EventName="LostFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                        CommandParameter="IVRTVCoef" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </md:MarkableTextBox>
    </Grid>
</UserControl>