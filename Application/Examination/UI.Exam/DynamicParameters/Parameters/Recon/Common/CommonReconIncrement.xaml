<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Recon.CommonReconIncrement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:markableComboBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableComboBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*" />
            <ColumnDefinition Width="48*" />
            <ColumnDefinition Width="17*" /> 
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_ReconIncrement}" />        
        <markableComboBox:MarkableComboBox     
            Grid.Column="1"
            DisplayMemberPath="Value"
            IsEnabled="{Binding Path=ReconPageEnable}"
            ItemsSource="{Binding ReconIncrementList}"
            MarkStatus="{Binding Path=ReconIncrementMarkStatus}"
            SelectedItem="{Binding Path=SelectReconIncrement, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedValuePath="Key"
            Style="{StaticResource MarkableComboBox}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotFocus">
                    <b:InvokeCommandAction
           Command="{Binding Commands[MarkableTextBoxGotFocus]}"
           CommandParameter="SelectReconIncrement" />
                </b:EventTrigger>
                <b:EventTrigger EventName="SelectionChanged">
                    <b:InvokeCommandAction
           Command="{Binding Commands[MarkableTextBoxTextChanged]}"
           CommandParameter="SelectReconIncrement" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </markableComboBox:MarkableComboBox>
        <Label
            Grid.Column="2"
            Margin="5,0,0,0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_LangthUnitMM}" />
    </Grid>
</UserControl>