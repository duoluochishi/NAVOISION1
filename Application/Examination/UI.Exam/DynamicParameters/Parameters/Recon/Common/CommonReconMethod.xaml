<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Recon.CommonReconMethod"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
    xmlns:markableComboBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableComboBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="18*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_ReconMethod}" />
        <markableComboBox:MarkableComboBox            
            Grid.Column="1"
            VerticalAlignment="Center"
            DisplayMemberPath="Value"
            IsEnabled="{Binding Path=ReconPageEnable}"
            ItemsSource="{Binding ReconMethodList}"
            MarkStatus="{Binding Path=SelectReconMethodMarkStatus}"
            SelectedItem="{Binding Path=SelectReconMethod, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
            SelectedValuePath="Key"
            Style="{StaticResource MarkableComboBox}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="SelectReconMethod" />
                </b:EventTrigger>
                <b:EventTrigger EventName="SelectionChanged">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                        CommandParameter="SelectReconMethod" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </markableComboBox:MarkableComboBox>
    </Grid>
</UserControl>