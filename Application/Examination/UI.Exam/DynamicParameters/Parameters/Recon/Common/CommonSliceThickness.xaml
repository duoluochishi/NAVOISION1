<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Recon.CommonSliceThickness"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    
    xmlns:markableComboBox="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableComboBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="18*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_SliceThickness}" />

        <markableComboBox:MarkableComboBox
            x:Name="mcbCommonSliceThickness"
            x:Uid="mcbCommonSliceThickness"
            Grid.Column="1"
            DisplayMemberPath="Value"
            IsEnabled="{Binding Path=ReconPageEnable}"
            ItemsSource="{Binding SliceThicknessList}"
            MarkStatus="{Binding Path=SelectSliceThicknessMarkStatus}"
            SelectedItem="{Binding Path=SelectSliceThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedValuePath="Key"
            Style="{StaticResource MarkableComboBox}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="SelectSliceThickness" />
                </b:EventTrigger>
                <b:EventTrigger EventName="SelectionChanged">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                        CommandParameter="SelectSliceThickness" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </markableComboBox:MarkableComboBox>

        <Label
            Grid.Column="2"
            Margin="5,0,0,0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_LangthUnitMM}" />
    </Grid>
</UserControl>