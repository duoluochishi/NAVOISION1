<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Recon.CommonImageCount"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--  No. of Images  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="53*" />
            <ColumnDefinition Width="17*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_NumberOfImages}" />

        <md:MarkableTextBox
            Grid.Column="1"
            IsEnabled="False"
            MarkStatus="{Binding Path=ImagesCountMarkStatus}"
            Style="{StaticResource MarkableTextBox}"
            Text="{Binding Path=ImagesCount, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                        CommandParameter="ImagesCount" />
                </b:EventTrigger>
                <b:EventTrigger EventName="LostFocus">
                    <b:InvokeCommandAction
                        Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                        CommandParameter="ImagesCount" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </md:MarkableTextBox>
    </Grid>
</UserControl>