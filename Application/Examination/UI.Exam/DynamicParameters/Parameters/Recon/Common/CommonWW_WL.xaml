<UserControl
    x:Class="NV.CT.UI.Exam.DynamicParameters.Parameters.Recon.CommonWW_WL"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf.Controls.MarkableTextBox;assembly=MaterialDesignThemes.Wpf"
    xmlns:res="clr-namespace:NV.CT.Language;assembly=NV.CT.Language"
    d:DesignHeight="80"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="53*" />
            <ColumnDefinition Width="17*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Static res:LanguageResource.Content_WWWL}" />
        <Grid
            Grid.Column="1"
            HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="45*" />
            </Grid.ColumnDefinitions>
            <md:MarkableTextBox
                x:Name="mtbCommonWw"
                x:Uid="mtbCommonWw"
                Grid.Column="0"
                IsEnabled="{Binding Path=WwEnable, Mode=TwoWay}"
                MarkStatus="{Binding Path=WwMarkStatus}"
                Style="{StaticResource MarkableTextBox}"
                Text="{Binding Path=Ww, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="GotFocus">
                        <b:InvokeCommandAction
                            Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                            CommandParameter="Ww" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="LostFocus">
                        <b:InvokeCommandAction
                            Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                            CommandParameter="Ww" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </md:MarkableTextBox>
            <Label
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Content="/" />
            <md:MarkableTextBox
                x:Name="mtbCommonWl"
                x:Uid="mtbCommonWl"
                Grid.Column="2"
                IsEnabled="{Binding Path=WlEnable, Mode=TwoWay}"
                MarkStatus="{Binding Path=WlMarkStatus}"
                Style="{StaticResource MarkableTextBox}"
                Text="{Binding Path=Wl, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="GotFocus">
                        <b:InvokeCommandAction
                            Command="{Binding Commands[MarkableTextBoxGotFocus]}"
                            CommandParameter="Wl" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="LostFocus">
                        <b:InvokeCommandAction
                            Command="{Binding Commands[MarkableTextBoxTextChanged]}"
                            CommandParameter="Wl" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </md:MarkableTextBox>
        </Grid>
    </Grid>
</UserControl>