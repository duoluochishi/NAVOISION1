		<!--  锁屏与否  -->
		<Image
			Grid.Column="4"
			Width="34"
			Height="34"
			Cursor="Hand"
			Opacity="0.5"
			Source="../Resources/icons/lock.png" />


		<view:TimeControl Grid.Column="5" />

	</Grid>
</UserControl>
