<Window
    x:Class="NV.CT.RGT.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:NV.CT.RGT.View"
    Title="{Binding StaticResources[MainTitle]}"
    d:DesignHeight="540"
    d:DesignWidth="960"
    Background="Transparent"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <!--WindowStyle="SingleBorderWindow"-->
    <!--WindowState="Maximized"-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding Commands[CloseCommand]}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border
        Margin="0"
        Padding="0">
        <Grid>
            <view:ScanMainControl x:Name="MainControl" />
            <view:WelcomeControl x:Name="WelcomeControl" />
        </Grid>
    </Border>
</Window>
