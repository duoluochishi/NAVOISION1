<UserControl
	x:Class="NV.CT.RGT.Layout.ScanDefault"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:view="clr-namespace:NV.CT.RGT.View"
	d:DesignHeight="760"
	d:DesignWidth="1300"
	Background="#0c0c27"
	mc:Ignorable="d">
	<UserControl.Resources>
		<Style
			x:Key="BaseTextBlock"
			TargetType="TextBlock">
			<Setter Property="FontSize" Value="30" />
			<Setter Property="Foreground" Value="Cyan" />
			<Setter Property="Height" Value="50" />
		</Style>

		<Style
			x:Key="LT"
			BasedOn="{StaticResource BaseTextBlock}"
			TargetType="{x:Type TextBlock}">
			<Setter Property="Margin" Value="40,10" />
			<Setter Property="Width" Value="210" />
		</Style>

		<Style
			x:Key="RT"
			BasedOn="{StaticResource BaseTextBlock}"
			TargetType="{x:Type TextBlock}">
			<Setter Property="Margin" Value="10" />
		</Style>

	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="5*" />
			<ColumnDefinition Width="5*" />
		</Grid.ColumnDefinitions>

		<Grid Grid.Column="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="50" />
				<RowDefinition Height="*" />
				<RowDefinition Height="50" />
			</Grid.RowDefinitions>

			<StackPanel
				Grid.Row="1"
				VerticalAlignment="Center">
				<StackPanel Orientation="Horizontal">
					<TextBlock
						Style="{StaticResource LT}"
						Text="Protocol:" />
					<TextBlock
						Style="{StaticResource RT}"
						Text="{Binding Protocol}" />
				</StackPanel>

				<StackPanel Orientation="Horizontal">
					<TextBlock
						Style="{StaticResource LT}"
						Text="Current Scan:" />
					<TextBlock
						Style="{StaticResource RT}"
						Text="{Binding ScanType}" />
				</StackPanel>

				<StackPanel Orientation="Horizontal">
					<TextBlock
						Style="{StaticResource LT}"
						Text="KV:" />
					<TextBlock
						Style="{StaticResource RT}"
						Text="{Binding Kv, StringFormat={}{0:F0}}" />
				</StackPanel>

				<StackPanel Orientation="Horizontal">
					<TextBlock
						Style="{StaticResource LT}"
						Text="mA:" />
					<TextBlock
						Style="{StaticResource RT}"
						Text="{Binding Ma, StringFormat={}{0:F0}}" />
				</StackPanel>

				<StackPanel Orientation="Horizontal">
					<TextBlock
						Style="{StaticResource LT}"
						Text="Body Position:" />
					<TextBlock
						Style="{StaticResource RT}"
						Text="{Binding PatientPosition}" />
				</StackPanel>

				<StackPanel Orientation="Horizontal">
					<TextBlock
						Style="{StaticResource LT}"
						Text="Scan Length:" />
					<TextBlock
						Style="{StaticResource RT}"
						Text="{Binding ScanLength, StringFormat={}{0} mm}" />
				</StackPanel>

				<StackPanel Orientation="Horizontal">
					<TextBlock
						Style="{StaticResource LT}"
						Text="CTDlvol:" />
					<TextBlock
						Style="{StaticResource RT}"
						Text="{Binding CTDlvol, StringFormat={}{0:F1} mGy}" />
				</StackPanel>

				<StackPanel Orientation="Horizontal">
					<TextBlock
						Style="{StaticResource LT}"
						Text="DLP:" />
					<TextBlock
						Style="{StaticResource RT}"
						Text="{Binding DLP, StringFormat={}{0:F1} mGy*cm}" />
					<!--  mGy*cm  -->
				</StackPanel>
			</StackPanel>
		</Grid>

		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="50" />
				<RowDefinition Height="*" />
				<RowDefinition Height="50" />
				<RowDefinition Height="50" />
			</Grid.RowDefinitions>

			<Grid Grid.Row="1">
				<!--  倒计时  -->
				<view:CountDown
					x:Name="circleProgressBar"
					CurrentValue="0"
					Visibility="{Binding DelayVisibility}" />

				<Image
					Width="300"
					Cursor="Hand"
					Source="../Resources/images/Beforescan.png"
					Visibility="{Binding NotScanVisibility}" />

				<Image
					Width="300"
					Cursor="Hand"
					Source="../Resources/images/Scanning.png"
					Visibility="{Binding ScanningVisibility}" />

			</Grid>


			<!--  底部交互 debug only  -->
			<Grid Grid.Row="3">
				<!--<Slider Minimum="0" Maximum="100"
                        x:Name="CirularSlider" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center" Value="10"/>-->

				<StackPanel
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Orientation="Horizontal"
					Visibility="Collapsed">

					<TextBlock
						VerticalAlignment="Center"
						FontSize="20"
						Text="{Binding DelayTime, StringFormat=delay: {0}}" />
					<Image
						x:Name="btnWork"
						Width="100"
						Cursor="Hand"
						MouseDown="BtnWork_OnMouseDown"
						Source="../Resources/icons/i_rework_1.png" />

					<Image
						x:Name="btnDecrease"
						Width="100"
						Cursor="Hand"
						MouseDown="btnDecrease_OnMouseDown"
						Source="../Resources/icons/Ipad_Connected.png" />

					<TextBlock
						VerticalAlignment="Center"
						FontSize="20"
						Text="{Binding ExposureTime, StringFormat=exposure: {0}}" />
				</StackPanel>
			</Grid>
		</Grid>

	</Grid>
</UserControl>
